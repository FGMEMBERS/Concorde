<?xml version="1.0"?>

<!-- WARNING : The combo must correspond to the comment field in
               Aircraft/Concorde/Nasal/Concorde-fuel.xml.
-->

<PropertyList>
  <name>Concorde-fuel</name>
  <layout>vbox</layout>

  <text>
    <label>Concorde fuel</label>
  </text>

  <hrule/>

  <text>
    <label></label>
  </text>

  <group>
    <layout>hbox</layout>
    <text>
      <label>Tanks filling</label>
      <halign>left</halign>
    </text>
    <combo>
      <pref-width>200</pref-width>
      <property>/sim/presets/tanks/dialog</property>
      <value>max landing</value>
      <value>max takeoff</value>
      <value>min fuel</value>
      <value>max fuel</value>
      <value>supersonic climb</value>
      <value>supersonic cruise</value>
      <value>supersonic descent</value>
    </combo>
  </group>

  <text>
    <label></label>
  </text>

  <group>
    <layout>hbox</layout>
    <empty><stretch>true</stretch></empty>

    <button>
      <legend>OK</legend>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <binding>
        <command>nasal</command>
        <script>globals.Concorde.fuelsystem.menuexport();</script>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Cancel</legend>
      <default>true</default>
      <key>Esc</key>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <empty><stretch>true</stretch></empty>
  </group>
</PropertyList>
