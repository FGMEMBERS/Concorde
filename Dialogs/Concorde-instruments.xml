<!-- buttons -->

 <group>
  <y>10</y>

  <button>
   <x>50</x>
   <y>0</y>
   <legend>Apply</legend>
   <equal>true</equal>
   <binding>
    <command>dialog-apply</command>
   </binding>
  </button>

  <button>
   <x>280</x>
   <y>0</y>
   <legend>Close</legend>
   <default>true</default>
   <equal>true</equal>
   <key>Esc</key>
   <binding>
    <command>dialog-apply</command>
   </binding>
   <binding>
    <command>dialog-close</command>
   </binding>
  </button>

  <button>
   <x>500</x>
   <y>0</y>
