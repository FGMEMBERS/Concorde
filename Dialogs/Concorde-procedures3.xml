<?xml version="1.0"?>

<PropertyList>
  <name>Concorde-procedures3</name>
  <layout>vbox</layout>

  <text>
    <label>Concorde procedures</label>
  </text>

  <hrule><dummy/></hrule>

  <group>
    <layout>vbox</layout>
    <halign>center</halign>

    <text>
      <label>Settings</label>
    </text>

    <text>
      <label></label>
    </text>

    <text>
      <label></label>
    </text>

    <group>
     <layout>hbox</layout>

     <group>
      <layout>vbox</layout>

      <checkbox>
        <label>Copilot</label>
        <halign>left</halign>
        <property>/controls/copilot/activ</property>
        <binding>
         <command>nasal</command>
         <script>globals.Concorde.copilotcrew.toggleexport();</script>
        </binding>
        <binding>
         <command>nasal</command>
         <script>globals.Concorde.copilothuman.wakeupexport();</script>
        </binding>
      </checkbox>

      <checkbox>
        <label>Engineer</label>
        <halign>left</halign>
        <property>/controls/engineer/activ</property>
        <binding>
         <command>nasal</command>
         <script>globals.Concorde.engineercrew.toggleexport();</script>
        </binding>
        <binding>
         <command>nasal</command>
         <script>globals.Concorde.engineerhuman.wakeupexport();</script>
        </binding>
      </checkbox>
     </group>

     <group>
      <layout>vbox</layout>

      <text>
       <label>Include in checklist</label>
      </text>

      <text>
       <label></label>
      </text>

      <checkbox>
        <label>Landing lights  ~</label>
        <halign>left</halign>
        <property>/controls/copilot/landing-lights</property>
        <binding>
         <command>property-toggle</command>
         <property>/controls/copilot/landing-lights</property>
        </binding>
      </checkbox>
     </group>

     <group>
      <layout>vbox</layout>

      <text>
       <label>Virtual crew</label>
      </text>

      <text>
       <label></label>
      </text>

      <checkbox>
        <label>adjusts night lighting  ~</label>
        <halign>left</halign>
        <property>/controls/crew/night-lighting</property>
        <binding>
         <command>property-toggle</command>
         <property>/controls/crew/night-lighting</property>
        </binding>
      </checkbox>

      <checkbox>
        <label>performs Captain checks (not real)  ~</label>
        <halign>left</halign>
        <property>/controls/crew/captain-busy</property>
        <binding>
         <command>property-toggle</command>
         <property>/controls/crew/captain-busy</property>
        </binding>
      </checkbox>

      <checkbox>
        <label>triggers flight checklists  ~</label>
        <halign>left</halign>
        <property>/controls/crew/checklist</property>
        <binding>
         <command>property-toggle</command>
         <property>/controls/crew/checklist</property>
        </binding>
      </checkbox>
     </group>

  </group>

  <text>
    <label></label>
  </text>

  <text>
    <label></label>
  </text>

  <group>
   <layout>hbox</layout>

   <button>
    <legend>Close</legend>
    <default>true</default>
    <key>Esc</key>
    <binding>
      <command>dialog-close</command>
    </binding>
   </button>
  </group>
</PropertyList>
