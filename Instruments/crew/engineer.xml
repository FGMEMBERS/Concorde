<?xml version="1.0" ?> 

<PropertyList> 
 <path>pilot.ac</path> 

 <animation>
  <name>TheHead</name>
  <object-name>Head</object-name>
  <object-name>Eyes</object-name>
  <object-name>Eyelid</object-name>
  <object-name>Mooth</object-name>
  <object-name>Teeth</object-name>
  <object-name>Headset</object-name>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>TheHead</object-name>
  <property>systems/human/engineer/heading-deg</property>
  <axis>
   <x>0.0</x>
   <y>0.0</y>
   <z>1.0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>TheHead</object-name>
  <property>systems/human/engineer/pitch-deg</property>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.320</z-m>
  </center>
  <axis>
   <x>0.0</x>
   <y>1.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>select</type>
  <object-name>Headset</object-name>
  <condition>
   <property>systems/crew/engineer/activ</property>
  </condition>
 </animation>
    
 <animation>
  <type>select</type>
  <object-name>Eyes</object-name>
  <condition>
   <property>systems/human/engineer/eyes</property>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>Eyelid</object-name>
  <condition>
   <not>
    <property>systems/human/engineer/eyes</property>
   </not>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>Mooth</object-name>
  <condition>
   <not>
    <property>systems/human/engineer/teeth</property>
   </not>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>Teeth</object-name>
  <condition>
   <property>systems/human/engineer/teeth</property>
  </condition>
 </animation>

</PropertyList>
