<?xml version="1.0"?>

<!-- Concorde speed of Horizontal Situation Indicator -->

<PropertyList>
 <name>HSI ground speed</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>

<!-- translucent lens (partially used) -->  
  <layer>
   <name>darken background</name>
   <type>switch</type>
    <layer>
     <name>off</name>
     <condition>
      <not-equals>
       <property>/autopilot/route-manager/wp/id</property>
       <value>NOT-USED</value>
      </not-equals>
     </condition>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>on</name>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.25</x1>
     <y1>0.0</y1>
     <x2>0.5</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
  </layer>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-yellow-warning.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

  <layer>
   <name>Title ground speed</name>
   <type>text</type>
   <point-size>24</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>GND SPD</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-62</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>19</offset>
    </transformation>
   </transformations>
  </layer>

<!-- INS -->

  <layer>
   <name>Speed</name>
   <type>switch</type>

   <layer>
    <name>INS speed</name>
    <type>switch</type>
    <condition>
     <equals>
      <property>/autopilot/locks/horizontal</property>
      <value>ins</value>
     </equals>
    </condition>

    <layer>
     <name>Ground speed</name>
     <condition>
      <less-than>
       <property>/instrumentation/ins/ground-speed-kt</property>
       <value>1200</value>
      </less-than>
     </condition>
     <type>text</type>
     <font>led</font>
     <point-size>14</point-size>
     <color>
      <red>0.85</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <property>/instrumentation/ins/ground-speed-kt</property>
       <format>%4.0f</format>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-40</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>-12</offset>
      </transformation>
     </transformations>
    </layer>

    <layer>
     <name>Ground speed overflow</name>
     <type>text</type>
     <font>led</font>
     <point-size>14</point-size>
     <color>
      <red>0.85</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>9999</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-40</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>-12</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>

<!-- DME -->

   <layer>
    <name>DME speed</name>
    <type>switch</type>
    <condition>
     <and>
      <property>/instrumentation/dme/in-range</property>
      <equals>
       <property>/instrumentation/dme/switch-position</property>
       <value>1</value>
      </equals>
     </and>
    </condition>

    <layer>
     <name>DME 1 speed</name>
     <type>text</type>
     <condition>
      <less-than>
       <property>/instrumentation/dme/indicated-ground-speed-kt</property>
       <value>1200.0</value>
      </less-than>
     </condition>
     <font>led</font>
     <point-size>14</point-size>
     <color>
      <red>0.85</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <property>/instrumentation/dme/indicated-ground-speed-kt</property>
       <format>%4.0f</format>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-40</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>-12</offset>
      </transformation>
     </transformations>
    </layer>

    <layer>
     <name>DME 1 overflow</name>
     <type>text</type>
     <font>led</font>
     <point-size>14</point-size>
     <color>
      <red>0.85</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>9999</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-40</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>-12</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>

  </layer>

 </layers>

</PropertyList>
