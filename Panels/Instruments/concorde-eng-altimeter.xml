<?xml version="1.0"?>

<!-- Engineer's Altimeter -->

<PropertyList>

 <name>Digital Altimeter display</name>
 <w-base>40</w-base>
 <h-base>10</h-base>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>95</w>
    <h>45</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>63</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Altitude display</name>
   <type>text</type>
   <font>led</font>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/instrumentation/altimeter/indicated-altitude-ft</property>
     <scale>0.01</scale>
     <format>%03.0f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-16</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>63</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>9</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>ALTITUDE</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-14</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>48</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Unit</name>
   <type>text</type>
   <point-size>17</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>00ft</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>25</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>65</offset>
    </transformation>
   </transformations>
  </layer>


 </layers>

</PropertyList>
