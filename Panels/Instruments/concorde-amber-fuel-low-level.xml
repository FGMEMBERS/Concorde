<?xml version="1.0"?>

<!-- Fault on tank below 20 %
-->

<PropertyList>
 <name>Fault low level</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <params>
  <lbs-select>/consumables/fuel/tank[0]/level-lb</lbs-select>
  <low-level-select>/consumables/fuel/tank[0]/low-level-lb</low-level-select>
 </params>


 <layers>

<!-- translucent lens -->  
  <layer>
   <name>Alarm light</name>
   <type>switch</type>
   <layer>
    <name>off</name>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and>
       <or include="concorde-cond-test-eng-center.xml"/> <!-- bug -->
       <greater-than>
        <property alias="../../../../../../../../params/lbs-select"/>
        <property n="1" alias="../../../../../../../../params/low-level-select"/>
       </greater-than>
      </and>
     </or>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>20</h>
   </layer>
   <layer>
    <name>on</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.35</x1>
     <y1>0.0</y1>
     <x2>0.4</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>20</h>
   </layer>
  </layer>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-low-level.rgb</path>
     <x1>0.0</x1>
     <y1>0.25</y1>
     <x2>1.0</x2>
     <y2>0.75</y2>
   </texture>
   <w>104</w>
   <h>20</h>
  </layer>

 </layers>

</PropertyList>
