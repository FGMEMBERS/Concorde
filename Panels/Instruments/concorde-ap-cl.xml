<?xml version="1.0"?>

<!-- Max Climb Mode -->

<PropertyList>
 <name>Max Climb Mode</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Button light</name>
   <type>switch</type>
    <layer>
     <condition>
      <or>
       <equals>
        <property>/autopilot/locks/speed2</property>
        <value>maxclimb</value>
       </equals>
       <equals>
        <property>/autopilot/locks/speed2</property>
        <value>maxcruise</value>
       </equals>
      </or>
     </condition>
     <name>on</name>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.37</x1>
     <y1>0.0</y1>
     <x2>0.38</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>off</name>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
   </layer>
  </layer>

  <layer>
   <name>background lighted</name>
   <condition>
    <or>
     <equals>
      <property>/autopilot/locks/speed2</property>
      <value>maxclimb</value>
     </equals>
     <equals>
      <property>/autopilot/locks/speed2</property>
      <value>maxcruise</value>
     </equals>
    </or>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-orange-button.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

  <layer>
   <name>background</name>
   <condition>
    <and>
     <not-equals>
      <property>/autopilot/locks/speed2</property>
      <value>maxclimb</value>
     </not-equals>
     <not-equals>
      <property>/autopilot/locks/speed2</property>
      <value>maxcruise</value>
     </not-equals>
    </and>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>46</point-size>
   <color>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>CL</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-32</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-6</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>
 
 <actions>

  <action>
   <desc>Max Climb</desc>
   <condition>
    <and>
     <not-equals>
      <property>/autopilot/locks/speed2</property>
      <value type="string">maxclimb</value>
     </not-equals>
     <not-equals>
      <property>/autopilot/locks/speed2</property>
      <value type="string">maxcruise</value>
     </not-equals>
    </and>
   </condition>
   <button>0</button>
   <x>-52</x>
   <y>-13</y>
   <w>104</w>
   <h>26</h>
   <binding>
    <command>property-assign</command>
    <property>/autopilot/locks/speed2</property>
    <value type="string">maxclimb</value>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.maxclimbexport();</script>
   </binding>
  </action>

  <action>
   <desc>Disable Max Climb</desc>
   <condition>
    <or>
     <equals>
      <property>/autopilot/locks/speed2</property>
      <value type="string">maxclimb</value>
     </equals>
     <equals>
      <property>/autopilot/locks/speed2</property>
      <value type="string">maxcruise</value>
     </equals>
    </or>
   </condition>
   <button>0</button>
   <x>-52</x>
   <y>-13</y>
   <w>104</w>
   <h>26</h>
   <binding>
    <command>property-assign</command>
    <property>/autopilot/locks/speed2</property>
    <value type="string"></value>
   </binding>
  </action>

 </actions>

</PropertyList>
