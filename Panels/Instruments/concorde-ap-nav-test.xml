<?xml version="1.0"?>

<!--Concorde nav test selector :

    - frequency rotary selector (decimal).
-->

<PropertyList>

 <name>Nav test selector</name>
 <w-base>80</w-base>
 <h-base>80</h-base>

 <params>
  <frq-ctrl>/instrumentation/nav[1]/frequencies/selected-mhz</frq-ctrl>
 </params>


 <layers>

  <layer>
   <name>knob</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-knob.rgb</path>
   </texture>
    <w>40</w>
    <h>40</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>15</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>selector</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
   </texture>
   <w>10</w>
   <h>38</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>15</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title knob</name>
   <type>text</type>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>TESTS</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>2</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-33</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Minus 1/10</name>
   <button>0</button>
   <x>-3</x>
   <y>-19</y>
   <w>18</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/frq-ctrl"/>
    <step>-0.1</step>
    <min>100</min>
    <max>400</max>
    <wrap>0</wrap>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.autopilotsystem.apsendnavexport();</script>
   </binding>
  </action>

  <action>
   <name>Plus 1/10</name>
   <button>0</button>
   <x>-3</x>
   <y>1</y>
   <w>18</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/frq-ctrl"/>
    <step>0.1</step>
    <min>100</min>
    <max>400</max>
    <wrap>0</wrap>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.autopilotsystem.apsendnavexport();</script>
   </binding>
  </action>

  <action>
   <name>Minus 1/20</name>
   <button>0</button>
   <x>16</x>
   <y>-19</y>
   <w>18</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/frq-ctrl"/>
    <step>-0.05</step>
    <min>100</min>
    <max>400</max>
    <wrap>0</wrap>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.autopilotsystem.apsendnavexport();</script>
   </binding>
  </action>

  <action>
   <name>Plus 1/20</name>
   <button>0</button>
   <x>16</x>
   <y>1</y>
   <w>18</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/frq-ctrl"/>
    <step>0.05</step>
    <min>100</min>
    <max>400</max>
    <wrap>0</wrap>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.autopilotsystem.apsendnavexport();</script>
   </binding>
  </action>

 </actions>

</PropertyList>
