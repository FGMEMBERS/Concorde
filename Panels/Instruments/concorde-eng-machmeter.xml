<?xml version="1.0"?>

<!-- Engineer's machmeter -->

<PropertyList>

 <name>Digital Machmeter display</name>
 <w-base>40</w-base>
 <h-base>10</h-base>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>95</w>
    <h>45</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>63</offset>
    </transformation>
   </transformations>
  </layer>

<!-- the Mach 0.45 limitation is for matching the Captain's machmeter -->

  <layer>
   <name>Mach display</name>
   <condition>
    <greater-than-equals>
     <property>/velocities/mach</property>
     <value>0.45</value>
    </greater-than-equals>
   </condition>
   <type>text</type>
   <font>led</font>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/velocities/mach</property>
     <min>0.45</min>
     <format>%1.2f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>3</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>63</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>9</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>MACH</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>6</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>48</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
