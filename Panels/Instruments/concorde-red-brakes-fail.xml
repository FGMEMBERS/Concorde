<?xml version="1.0"?>

<!-- Alarm on normal Brakes :

     - low green pressure.
     - when brakes depressed.
-->

<PropertyList>
 <name>Alarm on Brakes</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>alarm light</name>
   <type>switch</type>
   <layer>
    <name>off</name>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and include="concorde-cond-test-center.xml">
       <or>
        <greater-than>
         <property>/systems/hydraulic/brakes/green-accu-psi</property>
         <value>400.0</value>
        </greater-than>
        <and>
         <equals>
          <property>/controls/gear/brake-left</property>
          <value>0.0</value>
         </equals>
         <equals>
          <property>/controls/gear/brake-right</property>
          <value>0.0</value>
         </equals>
        </and>
       </or>
      </and>
     </or>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>20</h>
   </layer>
   <layer>
    <name>on</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.35</x1>
     <y1>0.0</y1>
     <x2>0.4</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>20</h>
   </layer>
  </layer>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-brakes-fail.rgb</path>
     <x1>0.0</x1>
     <y1>0.2</y1>
     <x2>1.0</x2>
     <y2>0.8</y2>
   </texture>
   <w>104</w>
   <h>20</h>
  </layer>

 </layers>

</PropertyList>
