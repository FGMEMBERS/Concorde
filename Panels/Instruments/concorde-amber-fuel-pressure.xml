<?xml version="1.0"?>

<!-- Low pressure on fuel engine :

     - all pumps disabled.
-->

<PropertyList>
 <name>Low pressure warning</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <params>
  <pump-switch>/controls/fuel/tank[0]/pump[0]</pump-switch>
  <pump2-switch>/controls/fuel/tank[0]/pump[1]</pump2-switch>
  <pump3-switch>/controls/fuel/tank[0]/pump[2]</pump3-switch>
 </params>


 <layers>

<!-- translucent lens -->  
  <layer>
   <name>Warning light</name>
   <type>switch</type>

   <layer>
    <name>lamp off</name>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and>
       <or include="concorde-cond-test-eng-center.xml"/>  <!-- bug -->
       <or>
        <property alias="../../../../../../../../params/pump-switch"/>
        <property alias="../../../../../../../../params/pump2-switch"/>
        <property alias="../../../../../../../../params/pump3-switch"/>
       </or>
      </and>
     </or>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>20</h>
   </layer>
   <layer>
    <name>lamp on</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.35</x1>
     <y1>0.0</y1>
     <x2>0.4</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>20</h>
   </layer>
  </layer>

  <layer>
   <name>background on</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-low-press.rgb</path>
    <x1>0.0</x1>
    <y1>0.2</y1>
    <x2>1.0</x2>
    <y2>0.8</y2>
   </texture>
   <w>104</w>
   <h>20</h>
  </layer>

 </layers>

</PropertyList>
