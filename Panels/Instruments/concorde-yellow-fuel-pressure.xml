<?xml version="1.0"?>

<!-- Low pressure on fuel pump :

     - empty tank.
     - only when pump enabled.


     CAUTION : level-gal_us would inhibit the fuel loading by nasal !
-->

<PropertyList>
 <name>Low pressure warning</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <params>
  <pump-switch>/controls/fuel/tank[4]/pump[0]</pump-switch>
  <content-select>/consumables/fuel/tank[4]/level-lb</content-select>
 </params>


 <layers>

<!-- translucent lens -->  
  <layer>
   <name>Warning light</name>
   <type>switch</type>

   <layer>
    <name>lamp off</name>
    <type>group</type>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and>
       <or include="concorde-cond-test-eng-center.xml"/>  <!-- bug -->
       <or>
        <not>
         <property alias="../../../../../../../../../params/pump-switch"/>
        </not>
        <greater-than>
         <property alias="../../../../../../../../../params/content-select"/>
         <value>0.0</value>
        </greater-than>
       </or>
      </and>
     </or>
    </condition>

    <layer include="concorde-bulb-off.xml">
     <w>104</w>
     <h>20</h>
    </layer>
    <layer>
     <name>background off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-yellow-low-press.rgb</path>
      <x1>0.0</x1>
      <y1>0.2</y1>
      <x2>1.0</x2>
      <y2>0.8</y2>
     </texture>
     <w>104</w>
     <h>20</h>
    </layer>
   </layer>

   <layer>
    <name>lamp on</name>
    <type>group</type>

    <layer include="concorde-bulb-on.xml">
     <w>104</w>
     <h>20</h>
     <emissive>true</emissive>
    </layer>
    <layer>
     <name>background on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-yellow-low-press.rgb</path>
      <x1>0.0</x1>
      <y1>0.2</y1>
      <x2>1.0</x2>
      <y2>0.8</y2>
     </texture>
     <w>104</w>
     <h>20</h>
     <emissive>true</emissive>
    </layer>
   </layer>
  </layer>

 </layers>

</PropertyList>
