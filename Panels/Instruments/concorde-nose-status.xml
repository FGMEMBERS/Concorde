<?xml version="1.0"?>

<!-- Concorde nose status

     WARNING : hysteresis.
-->

<PropertyList>

 <name>Nose status</name>
 <w-base>35</w-base>
 <h-base>10</h-base>

 <layers>

  <layer>
   <name>background</name>
   <type>switch</type>

   <layer>
    <name>background normal</name>
    <type>switch</type>
    <condition>
     <and include="concorde-cond-voltage-nose.xml">
      <or>
       <less-than-equals>
        <property>/surface-positions/flap-pos-norm</property>
        <property n="1">/controls/nose-visor/nose/up-min</property>
       </less-than-equals>
       <and>
        <greater-than>
         <property>/surface-positions/flap-pos-norm</property>
         <property n="1">/controls/nose-visor/nose/deg5-min</property>
        </greater-than>
        <less-than>
         <property>/surface-positions/flap-pos-norm</property>
         <property n="1">/controls/nose-visor/nose/deg5-max</property>
        </less-than>
       </and>
       <equals>
        <property>/surface-positions/flap-pos-norm</property>
        <property n="1">/controls/nose-visor/nose/down</property>
       </equals>
      </or>
     </and>
    </condition>

    <layer>
     <name>Nose down</name>
     <condition>
      <equals>
       <property>/surface-positions/flap-pos-norm</property>
       <property n="1">/controls/nose-visor/nose/down</property>
      </equals>
     </condition>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-down.rgb</path>
     </texture>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
     <w>60</w>
     <h>50</h>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>46</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>21</offset>
      </transformation>
     </transformations>
    </layer>

    <layer>
     <name>Nose 5 deg</name>
     <condition>
      <and>
       <greater-than>
        <property>/surface-positions/flap-pos-norm</property>
        <property n="1">/controls/nose-visor/nose/deg5-min</property>
       </greater-than>
       <less-than>
        <property>/surface-positions/flap-pos-norm</property>
        <property n="1">/controls/nose-visor/nose/deg5-max</property>
       </less-than>
      </and>
     </condition>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-5-deg.rgb</path>
     </texture>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
     <w>60</w>
     <h>50</h>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>46</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>21</offset>
      </transformation>
     </transformations>
    </layer>

    <layer>
     <name>Nose up</name>
     <condition>
      <less-than-equals>
       <property>/surface-positions/flap-pos-norm</property>
       <property n="1">/controls/nose-visor/nose/up-min</property>
      </less-than-equals>
     </condition>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-up.rgb</path>
     </texture>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
     <w>60</w>
     <h>50</h>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>46</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>21</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>

   <layer>
    <name>background transit</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-hatched-bg.rgb</path>
    </texture>
    <w>60</w>
    <h>50</h>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>46</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>21</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>17</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>NOSE</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>21</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-20</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
