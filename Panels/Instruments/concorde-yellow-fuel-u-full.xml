<?xml version="1.0"?>

<!-- Warning on tank below 80 % :

    - disabled by aft trim.
-->

<PropertyList>
 <name>Warning underfull</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <params>
  <lbs-select>/consumables/fuel/tank[0]/level-lb</lbs-select>
  <under-full-select>/consumables/fuel/tank[0]/under-full-lb</under-full-select>
  <trim-select>/controls/fuel/tank[0]/aft-trim</trim-select>
 </params>


 <layers>

<!-- translucent lens -->  
  <layer>
   <name>Warning light</name>
   <type>switch</type>

   <layer>
    <name>lamp off</name>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and>
       <or include="concorde-cond-test-eng-center.xml"/> <!-- bug -->
       <or>
        <property alias="../../../../../../../../params/trim-select"/>
        <greater-than>
         <property alias="../../../../../../../../../params/lbs-select"/>
         <property n="1" alias="../../../../../../../../../params/under-full-select"/>
        </greater-than>
       </or>
      </and>
     </or>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>20</h>
   </layer>
   <layer>
    <name>lamp on</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.35</x1>
     <y1>0.0</y1>
     <x2>0.4</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>20</h>
   </layer>
  </layer>

  <layer>
   <name>background on</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-yellow-u-full.rgb</path>
    <x1>0.0</x1>
    <y1>0.25</y1>
    <x2>1.0</x2>
    <y2>0.75</y2>
   </texture>
   <w>104</w>
   <h>20</h>
  </layer>

 </layers>

</PropertyList>
