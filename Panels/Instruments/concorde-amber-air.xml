<?xml version="1.0"?>

<!-- Alarm on Air bleed :

     - loss of 4 engines in flight : affects pressurization.
     - no air by ground service : in flight the starter probably gets air pressure by speed.
-->

<PropertyList>
 <name>Alarm on air bleed</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Alarm light</name>
   <type>switch</type>
   <layer>
    <name>off</name>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and include="concorde-cond-test-overhead.xml">
       <greater-than-equals>
        <property>/systems/air-bleed/pressure-psi</property>
        <value>35.0</value>
       </greater-than-equals>
       <property>/systems/air-bleed/serviceable</property>
      </and>
     </or>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>26</h>
   </layer>
   <layer>
    <name>on</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.35</x1>
     <y1>0.0</y1>
     <x2>0.4</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>26</h>
   </layer>
  </layer>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-air.rgb</path>
     <x1>0.0</x1>
     <y1>0.20</y1>
     <x2>1.0</x2>
     <y2>0.80</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

 </layers>

</PropertyList>
