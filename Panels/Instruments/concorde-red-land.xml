<?xml version="1.0"?>

<!-- Alarm on Autoland :
     - excessive ILS deviation below 200 ft for LOC.
     - excessive ILS deviation between 200 and 100 ft for GLIDE.
     - ILS failure below 200 ft for LOC.
     - ILS failure between 200 and 75 ft for GLIDE.
     - missing autothrottle below 600 ft.
-->

<PropertyList>
 <name>Alarm Autoland</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Alarm light</name>
   <type>switch</type>
    <layer>
     <name>on</name>
     <condition>
      <and>
       <not include="concorde-cond-voltage-bulb.xml"/>
       <or include="concorde-cond-test-land.xml">
        <and>
         <equals>
          <property>/instrumentation/generic/flashing-light</property>
          <value>1.0</value>
         </equals>
         <equals>
          <property>autopilot/locks/vertical</property>
          <value>autoland</value>
         </equals>
         <or>
          <and>
           <greater-than>
            <property>position/altitude-agl-ft</property>
            <value>14.0</value> <!-- autoland stops below -->
           </greater-than>
           <less-than>
            <property>position/altitude-agl-ft</property>
            <value>200.0</value>
           </less-than>
           <or>
            <less-than>
             <property>instrumentation/nav[0]/heading-needle-deflection</property>
             <value>-0.1</value>
            </less-than>
            <greater-than>
             <property>instrumentation/nav[0]/heading-needle-deflection</property>
             <value>0.1</value>
            </greater-than>
           </or>
          </and>
          <and>
           <greater-than>
            <property>position/altitude-agl-ft</property>
            <value>175.0</value> <!-- because of vertical-speed-with-throttle (should be 100 ft) -->
           </greater-than>
           <less-than>
            <property>position/altitude-agl-ft</property>
            <value>200.0</value>
           </less-than>
           <or>
            <less-than>
             <property>instrumentation/nav[0]/gs-needle-deflection</property>
             <value>-0.5</value>
            </less-than>
            <greater-than>
             <property>instrumentation/nav[0]/gs-needle-deflection</property>
             <value>0.5</value>
             </greater-than>
           </or>
          </and>
          <and>
           <greater-than>
            <property>position/altitude-agl-ft</property>
            <value>14.0</value> <!-- autoland stops below -->
           </greater-than>
           <less-than>
            <property>position/altitude-agl-ft</property>
            <value>200.0</value>
           </less-than>
           <or>
            <not>
             <property>instrumentation/nav[0]/in-range</property>
            </not>
            <not>
             <property>instrumentation/nav[0]/nav-loc</property>
            </not>
           </or>
          </and>
          <and>
           <greater-than>
            <property>position/altitude-agl-ft</property>
            <value>75.0</value>
           </greater-than>
           <less-than>
            <property>position/altitude-agl-ft</property>
            <value>200.0</value>
           </less-than>
           <not>
            <property>instrumentation/nav[0]/has-gs</property>
           </not>
          </and>
          <and>
           <greater-than>
            <property>position/altitude-agl-ft</property>
            <value>14.0</value> <!-- autoland stops below -->
           </greater-than>
           <less-than>
            <property>position/altitude-agl-ft</property>
            <value>600.0</value>
           </less-than>
           <and>
            <not-equals>
             <property>autopilot/locks/speed</property>
             <value>speed-with-throttle</value>
            </not-equals>
            <not-equals>
             <property>autopilot/locks/altitude2</property>
             <value>vertical-speed-with-throttle</value>
            </not-equals>
           </and>
          </and>
         </or>
        </and>
       </or>
      </and>
     </condition>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.35</x1>
     <y1>0.0</y1>
     <x2>0.4</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>off</name>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
   </layer>
  </layer>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-auto-land.rgb</path>
     <x1>0.0</x1>
     <y1>0.1</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

 </layers>

</PropertyList>
