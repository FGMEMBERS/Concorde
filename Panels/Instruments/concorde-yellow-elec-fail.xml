<?xml version="1.0"?>

<!-- Warning on emergency generator fail :

     - engine 1 and 2 stopped (RAT not deployed).
-->

<PropertyList>
 <name>Warning emergency generator fail</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>

<!-- translucent lens -->  
  <layer>
   <name>Warning light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and include="concorde-cond-test-eng-aft.xml">
       <or>
        <not>
         <property>/controls/electric/ac/emergency/generator</property>
        </not>
        <greater-than>
         <property>/systems/electrical/outputs/probe/ac-generator5</property>
         <value>59.0</value>
        </greater-than>
       </or>
      </and>
     </or>
    </condition>
    <name>lamp off</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>20</h>
   </layer>
   <layer>
    <name>lamp on</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.35</x1>
     <y1>0.0</y1>
     <x2>0.4</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>20</h>
   </layer>
  </layer>

  <layer>
   <name>background on</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-yellow-fail.rgb</path>
    <x1>0.0</x1>
    <y1>0.25</y1>
    <x2>1.0</x2>
    <y2>0.75</y2>
   </texture>
   <w>104</w>
   <h>20</h>
  </layer>

 </layers>

</PropertyList>
