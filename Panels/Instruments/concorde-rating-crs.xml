<?xml version="1.0"?>

<!-- Concorde engine rating : cruise.

Flightgear doesn't have support for engine rating.
Emulation : in reality, the engineer switches the rating.
-->

<PropertyList>
 <name>Engine rating cruise</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>

<!-- translucent lens -->  
  <layer>
   <name>Button light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <or>
      <and>
       <not-equals>
        <property>/controls/engines/engine[0]/rating</property>
        <value>cruise</value>
       </not-equals>
       <not-equals>
        <property>/controls/engines/engine[1]/rating</property>
        <value>cruise</value>
       </not-equals>
       <not-equals>
        <property>/controls/engines/engine[2]/rating</property>
        <value>cruise</value>
       </not-equals>
       <not-equals>
        <property>/controls/engines/engine[3]/rating</property>
        <value>cruise</value>
       </not-equals>
      </and>
      <or include="concorde-cond-voltage-bulb.xml"/>
     </or>
    </condition>

    <layer>
     <name>lamp off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
      <x1>0.0</x1>
      <y1>0.0</y1>
      <x2>0.25</x2>
      <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.rgb</path>
      <x1>0.7</x1>
      <y1>0.8</y1>
      <x2>1.0</x2>
      <y2>0.9</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>
    <layer>
     <name>lamp on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
      <x1>0.37</x1>
      <y1>0.0</y1>
      <x2>0.38</x2>
      <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background lighted</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-orange-button.rgb</path>
      <x1>0.7</x1>
      <y1>0.8</y1>
      <x2>1.0</x2>
      <y2>0.9</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
   </layer>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>40</point-size>
   <color>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>CRS</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-46</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-5</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>

</PropertyList>
