<?xml version="1.0"?>

<!-- Ramp position of intake.
-->

<PropertyList>

 <name>Ramp position</name>
 <w-base>10</w-base>
 <h-base>40</h-base>

 <params>
  <ramp-position>/engines/engine[0]/ramp-percent</ramp-position>
 </params>


 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>40</w>
    <h>30</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>5</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>70</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Ramp</name>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property alias="../../../../../params/ramp-position"/>
     <format>%2.f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-5</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>64</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>%</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>y-shift</type>
     <offset>40</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
