<?xml version="1.0"?>

<!-- Concorde visor status

     WARNING : hysteresis.
-->

<PropertyList>

 <name>Visor status</name>
 <w-base>35</w-base>
 <h-base>10</h-base>

 <layers>

  <layer>
   <name>background</name>
   <condition>
    <or>
     <equals>
      <property>/surface-positions/flap-pos-norm</property>
      <value>0.0</value>
     </equals>
     <greater-than>
      <property>/surface-positions/flap-pos-norm</property>
      <value>0.31</value>
     </greater-than>
    </or>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>60</w>
    <h>30</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>46</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>13</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>background transit</name>
   <condition>
    <and>
     <greater-than>
      <property>/surface-positions/flap-pos-norm</property>
      <value>0.0</value>
     </greater-than>
     <less-than-equals>
      <property>/surface-positions/flap-pos-norm</property>
      <value>0.31</value>
     </less-than-equals>
    </and>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-hatched-bg.rgb</path>
   </texture>
    <w>60</w>
    <h>30</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>46</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>13</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Visor up</name>
   <condition>
    <equals>
     <property>/surface-positions/flap-pos-norm</property>
     <value>0.0</value>
    </equals>
   </condition>
   <type>text</type>
   <point-size>17</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>UP</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>35</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>9</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Visor down</name>
   <condition>
    <greater-than>
     <property>/surface-positions/flap-pos-norm</property>
     <value>0.31</value>
    </greater-than>
   </condition>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>DOWN</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>19</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>9</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>VISOR</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-17</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
