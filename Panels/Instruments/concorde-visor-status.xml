<?xml version="1.0"?>

<!-- Concorde visor status

     WARNING : hysteresis.
-->

<PropertyList>

 <name>Visor status</name>
 <w-base>35</w-base>
 <h-base>10</h-base>

 <layers>

  <layer>
   <name>background</name>
   <type>switch</type>

   <layer>
    <name>background normal</name>
    <type>switch</type>
    <condition>
     <and include="concorde-cond-voltage-nose.xml">
      <or>
       <equals>
        <property>/surface-positions/flap-pos-norm</property>
        <property n="1">/controls/nose-visor/visor/up</property>
       </equals>
       <greater-than>
        <property>/surface-positions/flap-pos-norm</property>
        <property n="1">/controls/nose-visor/visor/down-min</property>
       </greater-than>
      </or>
     </and>
    </condition>

    <layer>
     <name>Visor down</name>
     <condition>
      <greater-than>
       <property>/surface-positions/flap-pos-norm</property>
       <property n="1">/controls/nose-visor/visor/down-min</property>
      </greater-than>
     </condition>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-down.rgb</path>
     </texture>
     <x1>0.0</x1>
     <y1>0.16</y1>
     <x2>1.0</x2>
     <y2>0.84</y2>
     <w>60</w>
     <h>30</h>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>46</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>13</offset>
      </transformation>
     </transformations>
    </layer>

    <layer>
     <name>Visor up</name>
     <condition>
      <equals>
       <property>/surface-positions/flap-pos-norm</property>
       <property n="1">/controls/nose-visor/visor/up</property>
      </equals>
     </condition>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-up.rgb</path>
     </texture>
     <x1>0.0</x1>
     <y1>0.16</y1>
     <x2>1.0</x2>
     <y2>0.84</y2>
     <w>60</w>
     <h>30</h>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>46</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>13</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>

   <layer>
    <name>background transit</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-hatched-bg.rgb</path>
    </texture>
    <w>60</w>
    <h>30</h>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>46</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>13</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>VISOR</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-17</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
