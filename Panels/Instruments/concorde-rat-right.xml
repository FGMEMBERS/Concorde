<?xml version="1.0"?>

<!-- RAT selector 2 switch (text to the right) -->

<PropertyList>

 <name>RAT selector</name>
 <w-base>102</w-base>
 <h-base>102</h-base>


 <layers>

  <layer>
   <name>RAT selector</name>
   <type>switch</type>

   <layer>
    <name>on</name>
    <condition>
     <property>/systems/hydraulic/rat/selector[1]/on</property>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.png</path>
     <x1>0.0</x1>
     <y1>0.74</y1>
     <x2>0.25</x2>
     <y2>1.0</y2>
    </texture>
    <w>40</w>
    <h>40</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>2.75</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>3rd state</name>
    <condition>
     <equals>
      <property>/systems/hydraulic/rat/selector[1]/test</property>
      <value>on</value>
     </equals>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.png</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.31</y2>
    </texture>
    <w>40</w>
    <h>47</h>
   </layer>

   <layer>
    <name>off</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.png</path>
     <x1>0.0</x1>
     <y1>0.47</y1>
     <x2>0.25</x2>
     <y2>0.745</y2>
    </texture>
    <w>40</w>
    <h>42</h>
    <transformations>
    <transformation>
     <type>y-shift</type>
     <offset>1.5</offset>
    </transformation>
    </transformations>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>16</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-17</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>red guard</name>
   <type>switch</type>

   <layer>
    <name>guard on</name>
    <condition>
     <property>/systems/hydraulic/rat/selector[1]/guard</property>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-guard-bg.png</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>30</w>
    <h>45</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>16</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>guard off</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-guard-bg.png</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>30</w>
    <h>30</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>29</offset>
     </transformation>
    </transformations>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>16</offset>
    </transformation>
   </transformations>
  </layer>

<!-- labels -->

  <layer>
   <name>Title on</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>ON</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>50</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>8</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title off</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>OFF</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>47</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-17</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title 3</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>TEST</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>45</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-42</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Number</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>2</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>55</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>26</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>On selector (only 1 time)</name>
   <condition>
    <and>
     <not>
      <property>/systems/hydraulic/rat/selector[1]/on</property>
     </not>
     <not>
      <property>/systems/hydraulic/rat/selector[1]/guard</property>
     </not>
    </and>
   </condition>
   <button>0</button>
   <x>-5</x>
   <y>-35</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property>/systems/hydraulic/rat/selector[1]/on</property>
   </binding>
   <binding>
    <command>property-assign</command>
    <property>/controls/electric/ac/emergency/standby</property>
    <value>true</value>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.ratdeployexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>Test selector</name>
   <condition>
    <and>
     <not>
      <property>/systems/hydraulic/rat/selector[1]/on</property>
     </not>
     <not-equals>
      <property>/systems/hydraulic/rat/test</property>
      <value>on</value>
     </not-equals>
     <property>/systems/hydraulic/rat/selector[1]/guard</property>
    </and>
   </condition>
   <button>0</button>
   <x>-5</x>
   <y>-35</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-assign</command>
    <property>/systems/hydraulic/rat/selector[1]/test</property>
    <value>on</value>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.rattestexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>Toggle guard</name>
   <condition>
    <not>
     <property>/systems/hydraulic/rat/selector[1]/on</property>
    </not>
   </condition>
   <button>0</button>
   <x>-5</x>
   <y>10</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property>/systems/hydraulic/rat/selector[1]/guard</property>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>
 
</PropertyList>
