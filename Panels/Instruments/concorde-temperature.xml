<?xml version="1.0"?>

<!-- Concorde temperatures -->

<PropertyList>
 <name>Digital TMO and OAT</name>
 <w-base>80</w-base>
 <h-base>25</h-base>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
    <x1>0.6</x1>
    <y1>0.2</y1>
    <x2>0.9</x2>
    <y2>0.3</y2>
   </texture>
   <w>80</w>
   <h>100</h>
   <transformations>
    <transformation>
     <type>y-shift</type>
     <offset>10</offset>
    </transformation>
   </transformations>
  </layer>

<!-- Maximum Total Temperature -->

  <layer>
   <name>TMO display (supersonic)</name>
   <condition>
    <greater-than-equals>
     <property>/velocities/mach</property>
     <value>1.0</value>
    </greater-than-equals>
   </condition>
   <type>text</type>
   <font>led</font>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/instrumentation/temperature/indicated-tmo-degc</property>
     <format>%.1f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>34</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>TMO display (subsonic)</name>
   <condition>
    <less-than>
     <property>/velocities/mach</property>
     <value>1.0</value>
    </less-than>
   </condition>
   <type>text</type>
   <font>led</font>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/environment/temperature-degc</property>
     <format>%.1f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>34</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>TMO Title</name>
   <type>text</type>
   <point-size>15</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>TMO</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-95</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>37</offset>
    </transformation>
   </transformations>
  </layer>

<!-- Outside Air Temperature -->

  <layer>
   <name>OAT display</name>
   <type>text</type>
   <font>led</font>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/environment/temperature-degc</property>
     <format>%.1f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>0</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>OAT Title</name>
   <type>text</type>
   <point-size>15</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>Static</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-95</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>3</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Unit</name>
   <type>text</type>
   <point-size>19</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>C</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-5</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-31</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
