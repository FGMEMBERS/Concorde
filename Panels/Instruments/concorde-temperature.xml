<?xml version="1.0"?>

<!-- Concorde temperatures :

     - ISA depends of slave altimeter.
     - voltage.
-->

<PropertyList>
 <name>TMO, OAT and ISA</name>
 <w-base>140</w-base>
 <h-base>140</h-base>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
    <x1>0.6</x1>
    <y1>0.2</y1>
    <x2>0.9</x2>
    <y2>0.3</y2>
   </texture>
   <w>130</w>
   <h>140</h>
  </layer>

<!-- Maximum Total Temperature -->

  <layer>
   <name>TMO display</name>
   <condition>
    <and include="concorde-cond-voltage-inst.xml">
     <property>/instrumentation/temperature/serviceable</property>
    </and>
   </condition>
   <type>text</type>
   <font>led</font>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/instrumentation/temperature/indicated-tmo-degc</property>
     <format>%+02.0f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>8</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>45</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>TMO power management</name>
   <type>switch</type>

   <layer>
    <name>Total Title</name>
    <condition>
     <and include="concorde-cond-voltage-inst.xml">
      <property>/instrumentation/temperature/serviceable</property>
     </and>
    </condition>
    <type>text</type>
    <point-size>15</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>literal</type>
      <text>Total</text>
     </chunk>
    </chunks>
   </layer>

   <layer>
    <name>TMO off</name>
    <type>group</type>

    <layer>
     <name>background</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-off-bg.rgb</path>
      <x1>0.6</x1>
      <y1>0.2</y1>
      <x2>0.9</x2>
      <y2>0.3</y2>
     </texture>
     <w>55</w>
     <h>18</h>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>25</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>6</offset>
      </transformation>
     </transformations>
    </layer>

    <layer>
     <name>Total title</name>
     <type>text</type>
     <point-size>15</point-size>
     <color>
      <red>0.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>Total</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-22</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>-6</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-56</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>48</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>TMO Title</name>
   <type>text</type>
   <point-size>15</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>TMO 128 C</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-45</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>21</offset>
    </transformation>
   </transformations>
  </layer>

<!-- Outside Air Temperature -->

  <layer>
   <name>OAT display</name>
   <condition>
    <and include="concorde-cond-voltage-inst.xml">
     <property>/instrumentation/temperature/serviceable</property>
    </and>
   </condition>
   <type>text</type>
   <font>led</font>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/instrumentation/temperature/indicated-static-degc</property>
     <format>%+02.0f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-1</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-9</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>OAT power management</name>
   <type>switch</type>

   <layer>
    <name>OAT Title</name>
    <condition>
     <and include="concorde-cond-voltage-inst.xml">
      <property>/instrumentation/temperature/serviceable</property>
     </and>
    </condition>
    <type>text</type>
    <point-size>15</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>literal</type>
      <text>Static</text>
     </chunk>
    </chunks>
   </layer>

   <layer>
    <name>OAT off</name>
    <type>group</type>

    <layer>
     <name>background</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-off-bg.rgb</path>
      <x1>0.6</x1>
      <y1>0.2</y1>
      <x2>0.9</x2>
      <y2>0.3</y2>
     </texture>
     <w>55</w>
     <h>18</h>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>25</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>6</offset>
      </transformation>
     </transformations>
    </layer>

    <layer>
     <name>OAT title</name>
     <type>text</type>
     <point-size>15</point-size>
     <color>
      <red>0.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>Static</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-22</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>-6</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-56</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-6</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Unit</name>
   <type>text</type>
   <point-size>19</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>C</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-3</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-33</offset>
    </transformation>
   </transformations>
  </layer>

<!-- ISA Temperature -->

  <layer>
   <name>ISA display</name>
   <condition>
    <and include="concorde-cond-voltage-inst.xml">
     <property>/instrumentation/temperature/serviceable</property>
     <property>/instrumentation/altimeter[0]/serviceable</property>
    </and>
   </condition>
   <type>text</type>
   <font>led</font>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/instrumentation/temperature/isa-degc</property>
     <format>%+02.0f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>8</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-61</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>ISA power management</name>
   <type>switch</type>

   <layer>
    <name>ISA Title</name>
    <condition>
     <and include="concorde-cond-voltage-inst.xml">
      <property>/instrumentation/altimeter[0]/serviceable</property>
      <property>/instrumentation/temperature/serviceable</property>
     </and>
    </condition>
    <type>text</type>
    <point-size>15</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>literal</type>
      <text>ISA</text>
     </chunk>
    </chunks>
   </layer>

   <layer>
    <name>ISA off</name>
    <type>group</type>

    <layer>
     <name>background</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-off-bg.rgb</path>
      <x1>0.6</x1>
      <y1>0.2</y1>
      <x2>0.9</x2>
      <y2>0.3</y2>
     </texture>
     <w>55</w>
     <h>18</h>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>25</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>6</offset>
      </transformation>
     </transformations>
    </layer>

    <layer>
     <name>ISA title</name>
     <type>text</type>
     <point-size>15</point-size>
     <color>
      <red>0.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>ISA</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-22</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>-6</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-56</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-60</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
