<?xml version="1.0"?>

<!-- Concorde Inertial Navigation System

The LED is real (with probably different display).

-->

<PropertyList>
 <name>INS Computer</name>
 <w-base>108</w-base>
 <h-base>48</h-base>

 <params>
  <on-ctrl>/instrumentation/ins/on</on-ctrl>
  <selector-ctrl>/instrumentation/ins/selector</selector-ctrl>
  <wpt-ctrl>/instrumentation/ins/waypoint</wpt-ctrl>
 </params>


 <layers>

<!-- translucent lens (partially used) -->  
  <layer>
   <name>darken background left (OFF)</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
    <x1>0.0</x1>
    <y1>0.0</y1>
    <x2>0.25</x2>
    <y2>0.095</y2>
   </texture>
   <w>100</w>
   <h>46</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>5</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>77</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>background left led</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-green-warning.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>100</w>
   <h>46</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>5</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>77</offset>
    </transformation>
   </transformations>
  </layer>

<!-- translucent lens (partially used) -->  
  <layer>
   <name>darken background right (OFF)</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
    <x1>0.0</x1>
    <y1>0.0</y1>
    <x2>0.25</x2>
    <y2>0.095</y2>
   </texture>
   <w>120</w>
   <h>46</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>120</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>77</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>background right led</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-green-warning.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>120</w>
   <h>46</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>120</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>77</offset>
    </transformation>
   </transformations>
  </layer>

<!-- ========= -->
<!-- == INS == -->
<!-- ========= -->

 <layer>
  <name>INS</name>
  <type>group</type>
  <condition>
   <property alias="../../../../params/on-ctrl"/>
  </condition>

<!-- POSITION -->

  <layer>
   <name>Position</name>
   <type>group</type>
   <condition>
    <or>
     <less-than>
      <property alias="../../../../../../../params/selector-ctrl"/>
      <value type="double">1</value>
     </less-than>
     <greater-than>
      <property alias="../../../../../../../params/selector-ctrl"/>
      <value type="double">3</value>
     </greater-than>
    </or>
   </condition>

   <layer>
    <name>Latitude</name>
    <type>switch</type>

    <layer>
     <name>Latitude positiv</name>
     <condition>
      <greater-than>
       <property>/position/latitude-deg</property>
       <value>0.0</value>
      </greater-than>
     </condition>
     <type>text</type>
     <font>led</font>
     <point-size>9</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <property>/position/latitude-deg</property>
       <format>%2.2f</format>
      </chunk>
     </chunks>
    </layer>
    <layer>
     <name>Latitude negativ</name>
     <type>text</type>
     <font>led</font>
     <point-size>9</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <property>/position/latitude-deg</property>
       <scale>-1</scale>
       <format>%2.2f</format>
      </chunk>
     </chunks>
    </layer>
   </layer> <!-- switch -->

   <layer>
    <name>Longitude</name>
    <type>switch</type>

    <layer>
     <name>Longitude positiv</name>
     <condition>
      <greater-than>
       <property>/position/longitude-deg</property>
       <value>0.0</value>
      </greater-than>
     </condition>
     <type>text</type>
     <font>led</font>
     <point-size>9</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <property>/position/longitude-deg</property>
       <format>%3.2f</format>
      </chunk>
     </chunks>
    </layer>
    <layer>
     <name>Longitude negativ</name>
     <type>text</type>
     <font>led</font>
     <point-size>9</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <property>/position/longitude-deg</property>
       <scale>-1</scale>
       <format>%3.2f</format>
      </chunk>
     </chunks>
    </layer>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>105</offset>
     </transformation>
    </transformations>
   </layer> <!-- switch -->

   <layer>
    <name>Latitude cardinal</name>
    <type>switch</type>

    <layer>
     <name>North</name>
     <condition>
      <greater-than>
        <property>/position/latitude-deg</property>
       <value>0.0</value>
      </greater-than>
     </condition>
     <type>text</type>
     <font>led</font>
     <point-size>6</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>N</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>y-shift</type>
       <offset>12</offset>
      </transformation>
     </transformations>
    </layer>
    <layer>
     <name>South</name>
     <type>text</type>
     <font>led</font>
     <point-size>6</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>S</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>y-shift</type>
       <offset>-6</offset>
      </transformation>
     </transformations>
    </layer>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-35</offset> <!-- cursor at longitude -->
     </transformation>
    </transformations>
   </layer> <!-- switch -->

   <layer>
    <name>Longitude cardinal</name>
    <type>switch</type>

    <layer>
     <name>East</name>
     <condition>
      <greater-than>
        <property>/position/longitude-deg</property>
       <value>0.0</value>
      </greater-than>
     </condition>
     <type>text</type>
     <font>led</font>
     <point-size>6</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>E</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <condition>
        <less-than-equals>
         <property>/position/latitude-deg</property>
         <value>0.0</value>
        </less-than-equals> <!-- cursor at South -->
       </condition>
       <type>y-shift</type>
       <offset>18</offset>
      </transformation>
     </transformations>
    </layer>
    <layer>
     <name>West</name>
     <type>text</type>
     <font>led</font>
     <point-size>6</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>U</text> <!-- police displays nothing for W -->
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <condition>
        <greater-than>
         <property>/position/latitude-deg</property>
         <value>0.0</value>
        </greater-than> <!-- cursor at North -->
       </condition>
       <type>y-shift</type>
       <offset>-19</offset>
      </transformation>
     </transformations>
    </layer>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>123</offset> <!-- cursor at latitude cardinal -->
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>0</offset>
     </transformation>
    </transformations>
   </layer> <!-- switch -->

  </layer> <!-- group -->

<!-- WAYPOINT -->

  <layer>
   <name>Waypoint 1</name>
   <type>group</type>
   <condition>
    <and>
     <not-equals>
      <property>/autopilot/route-manager/wp/id</property>
      <value type="string"></value>
     </not-equals>
     <equals>
      <property alias="../../../../../../../params/selector-ctrl"/>
      <value type="double">1</value>
     </equals>
     <not-equals>
      <property alias="../../../../../../../params/wpt-ctrl"/>
      <value type="double">1</value>
     </not-equals>
     <not-equals>
      <property alias="../../../../../../../params/wpt-ctrl"/>
      <value type="double">2</value>
     </not-equals>
    </and>
   </condition>

   <layer>
    <name>Ident</name>
    <type>text</type>
    <font>led</font>
    <point-size>9</point-size>
    <color>
     <red>0.0</red>
     <green>0.85</green>
     <blue>0.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>text-value</type>
      <property>/autopilot/route-manager/wp/id</property>
     </chunk>
    </chunks>
   </layer>

