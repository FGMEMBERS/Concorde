     </transformation>
    </transformations>
   </layer>
  </layer> <!-- group -->

<!-- Miles -->

  <layer>
   <name>Distance 3</name>
   <type>group</type>
   <condition>
    <and>
     <not-equals>
      <property>/autopilot/route-manager/wp-last/id</property>
      <value type="string"></value>
     </not-equals>
     <equals>
      <property alias="../../../../../../../params/selector-ctrl"/>
      <value type="double">2</value>
     </equals>
     <equals>
      <property alias="../../../../../../../params/wpt-ctrl"/>
      <value type="double">2</value>
     </equals>
    </and>
   </condition>

   <layer>
    <name>Mileage</name>
    <type>switch</type>

    <layer>
     <name>Miles 3</name>
     <condition>
      <less-than>
       <property>/autopilot/route-manager/wp-last/dist</property>
       <value type="double">9999.0</value>
      </less-than>
     </condition>
     <type>text</type>
     <font>led</font>
     <point-size>9</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <property>/autopilot/route-manager/wp-last/dist</property>
       <format>%4.0f</format>
      </chunk>
     </chunks>
    </layer>

    <layer>
     <name>Miles 3 (overflow)</name>
     <type>text</type>
     <font>led</font>
     <point-size>9</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>9999</text>
      </chunk>
     </chunks>
    </layer>
   </layer> <!-- switch -->

<!-- Estimated Time of Arrival -->

   <layer>
    <name>ETA 3</name>
    <type>text</type>
    <font>led</font>
    <point-size>9</point-size>
    <color>
     <red>0.0</red>
     <green>0.85</green>
     <blue>0.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>text-value</type>
      <property>/autopilot/route-manager/wp-last/eta</property>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>105</offset>
     </transformation>
    </transformations>
   </layer>
  </layer> <!-- group -->
 
<!-- even if no waypoint -->

  <layer>
   <name>Title destination</name>
   <condition>
    <and>
     <greater-than-equals>
      <property alias="../../../../../../../params/selector-ctrl"/>
      <value type="double">1</value>
     </greater-than-equals>
     <less-than-equals>
      <property alias="../../../../../../../params/selector-ctrl"/>
      <value type="double">2</value>
     </less-than-equals>
     <equals>
      <property alias="../../../../../../../params/wpt-ctrl"/>
      <value type="double">2</value>
     </equals>
    </and>
   </condition>
   <type>text</type>
   <font>led</font>
   <point-size>9</point-size>
   <color>
    <red>0.0</red>
    <green>0.85</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>L</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <condition>
      <equals>
       <property>/autopilot/route-manager/wp-last/id</property>
       <value type="string"></value>
      </equals>
     </condition>
     <type>x-shift</type>
     <offset>187</offset>
    </transformation>
    <transformation>
     <condition>
      <not-equals>
       <property>/autopilot/route-manager/wp-last/id</property>
       <value type="string"></value>
      </not-equals>
     </condition>
     <type>x-shift</type>
     <offset>82</offset>
    </transformation>
   </transformations>
  </layer>

<!-- WIND -->

  <layer>
   <name>Wind</name>
   <type>group</type>
   <condition>
    <equals>
     <property alias="../../../../../../params/selector-ctrl"/>
     <value type="double">3</value>
    </equals>
   </condition>

   <layer>
    <name>Direction</name>
    <condition>
     <greater-than>
      <property>/position/altitude-agl-ft</property> <!-- works only with flight -->
      <value type="double">20</value>
     </greater-than>
    </condition>
    <type>text</type>
    <font>led</font>
    <point-size>9</point-size>
    <color>
     <red>0.0</red>
     <green>0.85</green>
     <blue>0.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>number-value</type>
      <property>/environment/wind-from-heading-deg</property>
      <format>%03.0f</format>
     </chunk>
    </chunks>
   </layer>

   <layer>
    <name>Wind speed</name>
    <type>switch</type>

    <layer>
     <name>With INS</name>
     <condition>
      <greater-than>
       <property>/position/altitude-agl-ft</property> <!-- works only with flight -->
       <value type="double">20</value>
      </greater-than>
     </condition>
     <type>text</type>
     <font>led</font>
     <point-size>9</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <property>/environment/wind-speed-kt</property>
       <format>%3.0f</format>
      </chunk>
     </chunks>
    </layer>
    <layer>
     <name>Ground</name>
     <type>text</type>
     <font>led</font>
     <point-size>9</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>GND</text>
      </chunk>
     </chunks>
    </layer>

    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>105</offset>
     </transformation>
    </transformations>
   </layer> <!-- switch -->

  </layer> <!-- group -->

<!-- END INS -->

  <transformations>
   <transformation>
    <type>x-shift</type>
    <offset>-32</offset>
   </transformation>
   <transformation>
    <type>y-shift</type>
    <offset>68</offset>
   </transformation>
  </transformations>
 </layer>

<!-- SELECTOR -->

  <layer>
   <name>Title position</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>POS</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-60</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-20</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title waypoint</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>WAY PT</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-60</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>10</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title distance/time</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>DST/TIME</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>10</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>10</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title wind</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>WIND</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>38</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-20</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>knob rotation</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/navcom-radios.rgb</path>
    <x1>0.53125</x1>
    <x2>0.59765625</x2>
    <y1>0.05859375</y1>
    <y2>0.1484375</y2>
   </texture>
   <w>16</w>
   <h>20</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-14</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <property alias="../../../../../params/selector-ctrl"/>
     <min>0</min>
     <max>3</max>
     <scale>60</scale>
     <offset>-90</offset>
    </transformation>
    <transformation>
    <type>y-shift</type>
    <offset>-4</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

