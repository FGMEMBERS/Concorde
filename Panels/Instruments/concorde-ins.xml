<?xml version="1.0"?>

<!-- Concorde Inertial Navigation System :

-->

<PropertyList>
 <name>INS Computer</name>
 <w-base>108</w-base>
 <h-base>48</h-base>

 <params>
  <on-ctrl>/instrumentation/ins/on</on-ctrl>
  <selector-ctrl>/instrumentation/ins/selector</selector-ctrl>
  <wpt-ctrl>/instrumentation/ins/waypoint</wpt-ctrl>
 </params>


 <layers>

<!-- translucent lens (partially used) -->  
  <layer>
   <name>darken background left (OFF)</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
    <x1>0.0</x1>
    <y1>0.0</y1>
    <x2>0.25</x2>
    <y2>0.095</y2>
   </texture>
   <w>100</w>
   <h>46</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>5</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>77</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>background left led</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-green-warning.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>100</w>
   <h>46</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>5</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>77</offset>
    </transformation>
   </transformations>
  </layer>

<!-- translucent lens (partially used) -->  
  <layer>
   <name>darken background right (OFF)</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
    <x1>0.0</x1>
    <y1>0.0</y1>
    <x2>0.25</x2>
    <y2>0.095</y2>
   </texture>
   <w>120</w>
   <h>46</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>120</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>77</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>background right led</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-green-warning.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>120</w>
   <h>46</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>120</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>77</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>background selector</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-ins.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
   </texture>
   <w>140</w>
   <h>140</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>15</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-30</offset>
    </transformation>
   </transformations>
  </layer>

<!-- ========= -->
<!-- == INS == -->
<!-- ========= -->

 <layer>
  <name>INS</name>
  <type>group</type>
  <condition>
   <and include="concorde-cond-voltage-inst.xml">
    <property alias="../../../../../params/on-ctrl"/>
   </and>
  </condition>

<!-- TRACK / GROUND SPEED -->

  <layer>
   <name>Track / ground speed</name>
   <type>group</type>
   <condition>
    <equals>
     <property alias="../../../../../../params/selector-ctrl"/>
     <value>-3</value>
    </equals>
   </condition>

   <layer>
    <name>Present track</name>
    <type>switch</type>
    <condition>
     <not-equals>
      <property>/autopilot/route-manager/wp[0]/id</property>
      <value type="string"></value>
     </not-equals>
    </condition>

    <layer>
     <name>present track</name>
     <condition>
      <greater-than>
       <property>/instrumentation/ins[0]/ground-speed-fps</property>
       <value>126.59</value>        <!-- 75 kt -->
      </greater-than>
     </condition>
     <type>text</type>
     <font>led</font>
     <point-size>9</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <format>%5.2f</format>
       <property>/autopilot/settings/true-heading-deg</property>
      </chunk>
     </chunks>
    </layer>

    <layer>
     <name>true heading</name>
     <type>text</type>
     <font>led</font>
     <point-size>9</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <format>%5.2f</format>
       <property>/orientation/heading-deg</property>
      </chunk>
     </chunks>
    </layer>
   </layer>

<!-- Ground speed -->

   <layer>
    <name>Ground speed</name>
    <type>text</type>
    <font>led</font>
    <point-size>9</point-size>
    <color>
     <red>0.0</red>
     <green>0.85</green>
     <blue>0.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>number-value</type>
      <property>/instrumentation/ins[0]/ground-speed-fps</property>
      <format>%6.2f</format>
      <scale>0.592484</scale>        <!-- kt -->
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>105</offset>
     </transformation>
    </transformations>
   </layer>
  </layer> <!-- group -->

<!-- HEADING / DRIFT ANGLE -->

  <layer>
   <name>Track / ground speed</name>
   <type>group</type>
   <condition>
    <equals>
     <property alias="../../../../../../params/selector-ctrl"/>
     <value>-2</value>
    </equals>
   </condition>

   <layer>
    <name>True heading</name>
    <type>text</type>
    <font>led</font>
    <point-size>9</point-size>
    <color>
     <red>0.0</red>
     <green>0.85</green>
     <blue>0.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>number-value</type>
      <format>%5.2f</format>
      <property>/orientation/heading-deg</property>
     </chunk>
    </chunks>
   </layer>
  </layer> <!-- group -->

<!-- CROSS TRACK DISTANCE / TRACK ERROR -->

  <layer>
   <name>Cross track distance / track error</name>
   <type>group</type>
   <condition>
    <and>
     <equals>
      <property alias="../../../../../../../params/selector-ctrl"/>
      <value>-1</value>
     </equals>
     <not-equals>
      <property>/autopilot/route-manager/wp[0]/id</property>
      <value type="string"></value>
     </not-equals>
    </and>
   </condition>

   <layer>
    <name>cross track distance</name>
    <type>text</type>
    <font>led</font>
    <point-size>9</point-size>
    <color>
     <red>0.0</red>
     <green>0.85</green>
     <blue>0.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>number-value</type>
      <property>/instrumentation/ins/leg-course-error-nm</property>
      <format>%5.2f</format>
     </chunk>
    </chunks>
   </layer>

   <layer>
    <name>track error</name>
    <type>text</type>
    <font>led</font>
    <point-size>9</point-size>
    <color>
     <red>0.0</red>
     <green>0.85</green>
     <blue>0.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>number-value</type>
      <property>/instrumentation/ins/leg-course-deviation-deg</property>
      <format>%5.2f</format>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>105</offset>
     </transformation>
    </transformations>
   </layer>
  </layer> <!-- group -->

<!-- POSITION -->

  <layer>
   <name>Position</name>
   <type>group</type>
   <condition>
    <equals>
     <property alias="../../../../../../params/selector-ctrl"/>
     <value>0</value>
    </equals>
   </condition>

   <layer>
    <name>Latitude</name>
    <type>switch</type>

    <layer>
     <name>Latitude positiv</name>
     <condition>
      <greater-than>
       <property>/position/latitude-deg</property>
       <value>0.0</value>
      </greater-than>
     </condition>
     <type>text</type>
     <font>led</font>
     <point-size>9</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <property>/position/latitude-deg</property>
       <format>%2.2f</format>
      </chunk>
     </chunks>
    </layer>
    <layer>
     <name>Latitude negativ</name>
     <type>text</type>
     <font>led</font>
     <point-size>9</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <property>/position/latitude-deg</property>
       <scale>-1</scale>
       <format>%2.2f</format>
      </chunk>
     </chunks>
    </layer>
   </layer> <!-- switch -->

   <layer>
    <name>Longitude</name>
    <type>switch</type>

    <layer>
     <name>Longitude positiv</name>
     <condition>
      <greater-than>
       <property>/position/longitude-deg</property>
       <value>0.0</value>
      </greater-than>
     </condition>
     <type>text</type>
     <font>led</font>
     <point-size>9</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <property>/position/longitude-deg</property>
       <format>%3.2f</format>
      </chunk>
     </chunks>
    </layer>
    <layer>
     <name>Longitude negativ</name>
     <type>text</type>
     <font>led</font>
     <point-size>9</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <property>/position/longitude-deg</property>
       <scale>-1</scale>
       <format>%3.2f</format>
      </chunk>
     </chunks>
    </layer>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>105</offset>
     </transformation>
    </transformations>
   </layer> <!-- switch -->

   <layer>
    <name>Latitude cardinal</name>
    <type>switch</type>

    <layer>
     <name>North</name>
     <condition>
      <greater-than>
        <property>/position/latitude-deg</property>
       <value>0.0</value>
      </greater-than>
     </condition>
     <type>text</type>
     <point-size>16</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>N</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>y-shift</type>
       <offset>13</offset>
      </transformation>
     </transformations>
    </layer>
    <layer>
     <name>South</name>
     <type>text</type>
     <point-size>16</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>S</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>y-shift</type>
       <offset>-5</offset>
      </transformation>
     </transformations>
    </layer>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-35</offset> <!-- cursor at longitude -->
     </transformation>
    </transformations>
   </layer> <!-- switch -->

   <layer>
    <name>Longitude cardinal</name>
    <type>switch</type>

    <layer>
     <name>East</name>
     <condition>
      <greater-than>
        <property>/position/longitude-deg</property>
       <value>0.0</value>
      </greater-than>
     </condition>
     <type>text</type>
     <point-size>16</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>E</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <condition>
        <less-than-equals>
         <property>/position/latitude-deg</property>
         <value>0.0</value>
        </less-than-equals> <!-- cursor at South -->
       </condition>
       <type>y-shift</type>
       <offset>18</offset>
      </transformation>
     </transformations>
    </layer>
    <layer>
     <name>West</name>
     <type>text</type>
     <point-size>16</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>W</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <condition>
        <greater-than>
         <property>/position/latitude-deg</property>
         <value>0.0</value>
        </greater-than> <!-- cursor at North -->
       </condition>
       <type>y-shift</type>
       <offset>-19</offset>
      </transformation>
     </transformations>
    </layer>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>123</offset> <!-- cursor at latitude cardinal -->
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>1</offset>
     </transformation>
    </transformations>
   </layer> <!-- switch -->

  </layer> <!-- group -->

<!-- WAYPOINT -->

  <layer>
   <name>Waypoint 1</name>
   <type>group</type>
   <condition>
    <and>
     <not-equals>
      <property>/autopilot/route-manager/wp/id</property>
      <value type="string"></value>
     </not-equals>
     <equals>
      <property alias="../../../../../../../params/selector-ctrl"/>
      <value>1</value>
     </equals>
     <not-equals>
      <property alias="../../../../../../../params/wpt-ctrl"/>
      <value type="double">1</value>
     </not-equals>
     <not-equals>
      <property alias="../../../../../../../params/wpt-ctrl"/>
      <value type="double">2</value>
     </not-equals>
    </and>
   </condition>

   <layer>
    <name>Ident</name>
    <type>text</type>
    <point-size>21</point-size>
    <color>
     <red>0.0</red>
     <green>0.85</green>
     <blue>0.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>text-value</type>
      <property>/autopilot/route-manager/wp/id</property>
     </chunk>
    </chunks>
   </layer>

<!-- Fuel -->

   <layer>
    <name>Fuel</name>
    <type>text</type>
    <font>led</font>
    <point-size>9</point-size>
    <color>
     <red>0.0</red>
     <green>0.85</green>
     <blue>0.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>number-value</type>
      <property>/autopilot/route-manager/wp/fuel-kg</property>
      <format>%5.0f</format>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>105</offset>
     </transformation>
    </transformations>
   </layer>
  </layer> <!-- group -->

<!-- Miles -->

  <layer>
   <name>Distance 1</name>
   <type>group</type>
   <condition>
    <and>
     <not-equals>
      <property>/autopilot/route-manager/wp/id</property>
      <value type="string"></value>
     </not-equals>
     <equals>
      <property alias="../../../../../../../params/selector-ctrl"/>
      <value>2</value>
     </equals>
     <not-equals>
      <property alias="../../../../../../../params/wpt-ctrl"/>
      <value type="double">1</value>
     </not-equals>
     <not-equals>
      <property alias="../../../../../../../params/wpt-ctrl"/>
      <value type="double">2</value>
     </not-equals>
    </and>
   </condition>

   <layer>
    <name>Mileage</name>
    <type>switch</type>

    <layer>
     <name>Miles</name>
     <condition>
      <less-than>
       <property>/autopilot/route-manager/wp/dist</property>
       <value type="double">9999.0</value>
      </less-than>
     </condition>
     <type>text</type>
     <font>led</font>
     <point-size>9</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <property>/autopilot/route-manager/wp/dist</property>
       <format>%4.0f</format>
      </chunk>
     </chunks>
    </layer>

    <layer>
     <name>Miles (overflow)</name>
     <type>text</type>
     <font>led</font>
     <point-size>9</point-size>
     <color>
      <red>0.0</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>9999</text>
      </chunk>
     </chunks>
    </layer>
   </layer> <!-- switch -->

<!-- Estimated Time of Arrival -->

   <layer>
    <name>ETA</name>
    <type>text</type>
    <font>led</font>
    <point-size>9</point-size>
    <color>
     <red>0.0</red>
     <green>0.85</green>
     <blue>0.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>text-value</type>
      <property>/autopilot/route-manager/wp/eta</property>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>105</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>

<!-- even if no waypoint and no selection -->

  <layer>
   <name>Title waypoint</name>
   <condition>
    <and>
     <greater-than-equals>
      <property alias="../../../../../../../params/selector-ctrl"/>
      <value>1</value>
     </greater-than-equals>
     <less-than-equals>
      <property alias="../../../../../../../params/selector-ctrl"/>
      <value>2</value>
     </less-than-equals>
     <not-equals>
      <property alias="../../../../../../../params/wpt-ctrl"/>
      <value type="double">1</value>
     </not-equals>
     <not-equals>
      <property alias="../../../../../../../params/wpt-ctrl"/>
      <value type="double">2</value>
     </not-equals>
    </and>
   </condition>
   <type>text</type>
   <font>led</font>
   <point-size>9</point-size>
   <color>
    <red>0.0</red>
    <green>0.85</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>1</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <condition>
      <equals>
       <property>/autopilot/route-manager/wp[0]/id</property>
       <value type="string"></value>
      </equals>
     </condition>
     <type>x-shift</type>
     <offset>187</offset>
    </transformation>
    <transformation>
     <condition>
      <not-equals>
       <property>/autopilot/route-manager/wp[0]/id</property>
       <value type="string"></value>
      </not-equals>
     </condition>
     <type>x-shift</type>
     <offset>82</offset>
    </transformation>
   </transformations>
  </layer>

<!-- NEXT WAYPOINT -->

  <layer>
   <name>Waypoint 2</name>
   <type>group</type>
   <condition>
    <and>
     <not-equals>
      <property>/autopilot/route-manager/wp[1]/id</property>
      <value type="string"></value>
     </not-equals>
     <equals>
      <property alias="../../../../../../../params/selector-ctrl"/>
      <value>1</value>
     </equals>
     <equals>
      <property alias="../../../../../../../params/wpt-ctrl"/>
      <value type="double">1</value>
     </equals>
    </and>
   </condition>

   <layer>
    <name>Ident 2</name>
    <type>text</type>
    <point-size>21</point-size>
    <color>
     <red>0.0</red>
     <green>0.85</green>
     <blue>0.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>text-value</type>
      <property>/autopilot/route-manager/wp[1]/id</property>
     </chunk>
    </chunks>
   </layer>

<!-- Fuel -->

   <layer>
    <name>Fuel 2</name>
    <type>text</type>
    <font>led</font>
    <point-size>9</point-size>
    <color>
     <red>0.0</red>
     <green>0.85</green>
     <blue>0.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>number-value</type>
      <property>/autopilot/route-manager/wp[1]/fuel-kg</property>
      <format>%5.0f</format>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>105</offset>
     </transformation>
    </transformations>
   </layer>
  </layer> <!-- group -->

<!-- Miles -->

  <layer>
   <name>Distance 2</name>
   <type>group</type>
   <condition>
    <and>
     <not-equals>
      <property>/autopilot/route-manager/wp[1]/id</property>
      <value type="string"></value>
     </not-equals>
     <equals>
      <property alias="../../../../../../../params/selector-ctrl"/>
      <value>2</value>
     </equals>
     <equals>
      <property alias="../../../../../../../params/wpt-ctrl"/>
