<?xml version="1.0"?>

<!-- Engine reheat indicator -->

<PropertyList>
 <name>Engine reheat</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <params>
  <reheat-select>/engines/engine[0]/augmentation</reheat-select>
 </params>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Button light</name>
   <type>switch</type>
    <layer>
     <condition>
      <equals>
       <property alias="../../../../../../params/reheat-select"/>
       <value>true</value>
      </equals>
     </condition>
     <name>on</name>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.png</path>
     <x1>0.37</x1>
     <y1>0.0</y1>
     <x2>0.38</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>off</name>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.png</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
   </layer>
  </layer>

  <layer>
   <name>background lighted</name>
   <condition>
    <equals>
     <property alias="../../../../../params/reheat-select"/>
     <value>true</value>
    </equals>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-orange-button.png</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

  <layer>
   <name>background</name>
   <condition>
    <not-equals>
     <property alias="../../../../../params/reheat-select"/>
     <value>true</value>
    </not-equals>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.png</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>46</point-size>
   <color>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>R</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-17</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-4</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>

</PropertyList>
