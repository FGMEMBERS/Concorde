<?xml version="1.0"?>

<!-- Concorde DME : 2 frequencies, displayed at the same time (no knob) -->

<PropertyList>

 <name>Concorde DME</name>
 <w-base>120</w-base>
 <h-base>60</h-base>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>120</w>
    <h>40</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>5</offset>
    </transformation>
   </transformations>
  </layer>

<!-- DME 1 -->
  <layer>
   <name>Title DME 1</name>
   <type>text</type>
   <point-size>11</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>DME-1</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-50</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>31</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Unit DME 1</name>
   <type>text</type>
   <point-size>11</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>MILES</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-51</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-28</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>DME 1</name>
   <type>switch</type>
   <condition>
    <greater-than>
     <property>/systems/electrical/outputs/dme</property>
     <value>20.0</value>
    </greater-than>
   </condition>

   <layer>
    <name>DME 1 in range</name>
    <type>switch</type>
    <condition>
     <property>/instrumentation/dme[0]/in-range</property>
    </condition>

    <layer>
     <name>DME 1 display</name>
     <type>text</type>
     <condition>
      <less-than-equals>
       <property>/instrumentation/dme[0]/indicated-distance-nm</property>
       <value type="double">999.9</value>
      </less-than-equals>
     </condition>
     <font>led</font>
     <point-size>7</point-size>
     <color>
      <red>1.0</red>
      <green>0.5</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <property>/instrumentation/dme[0]/indicated-distance-nm</property>
       <format>%5.1f</format>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-50</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>0</offset>
      </transformation>
     </transformations>
    </layer>

    <layer>
     <name>DME 1 overflow</name>
     <type>text</type>
     <font>led</font>
     <point-size>7</point-size>
     <color>
      <red>1.0</red>
      <green>0.5</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>999.9</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-50</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>0</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>

   <layer>
    <name>DME 1 not in range</name>
    <type>text</type>
    <condition>
     <not>
      <property>/instrumentation/dme[0]/in-range</property>
     </not>
    </condition>
    <font>led</font>
    <point-size>7</point-size>
    <color>
     <red>1.0</red>
     <green>0.5</green>
     <blue>0.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>literal</type>
      <text>---.-</text>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-50</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>0</offset>
     </transformation>
    </transformations>
   </layer>

  </layer>


<!-- DME 2 -->
  <layer>
   <name>Title DME 2</name>
   <type>text</type>
   <point-size>11</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>DME-2</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>9</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>31</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Unit DME 2</name>
   <type>text</type>
   <point-size>11</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>MILES</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>11</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-28</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>DME 2</name>
   <type>switch</type>
   <condition>
    <greater-than>
     <property>/systems/electrical/outputs/dme</property>
     <value>20.0</value>
    </greater-than>
   </condition>

   <layer>
    <name>DME 2 in range</name>
    <type>switch</type>
    <condition>
     <property>/instrumentation/dme[1]/in-range</property>
    </condition>

    <layer>
     <name>DME 2 display</name>
     <type>text</type>
     <condition>
      <less-than-equals>
       <property>/instrumentation/dme[1]/indicated-distance-nm</property>
       <value type="double">999.9</value>
      </less-than-equals>
     </condition>
     <font>led</font>
     <point-size>7</point-size>
     <color>
      <red>1.0</red>
      <green>0.5</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <property>/instrumentation/dme[1]/indicated-distance-nm</property>
       <format>%5.1f</format>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>10</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>0</offset>
      </transformation>
     </transformations>
    </layer>

    <layer>
     <name>DME 2 overflow</name>
     <type>text</type>
     <font>led</font>
     <point-size>7</point-size>
     <color>
      <red>1.0</red>
      <green>0.5</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>999.9</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>10</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>0</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>

   <layer>
    <name>DME 2 not in range</name>
    <type>text</type>
    <condition>
     <not>
      <property>/instrumentation/dme[1]/in-range</property>
     </not>
    </condition>
    <font>led</font>
    <point-size>7</point-size>
    <color>
     <red>1.0</red>
     <green>0.5</green>
     <blue>0.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>literal</type>
      <text>---.-</text>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>10</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>0</offset>
     </transformation>
    </transformations>
   </layer>

  </layer>

 </layers>

</PropertyList>
