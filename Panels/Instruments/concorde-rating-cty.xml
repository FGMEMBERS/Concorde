<?xml version="1.0"?>

<!-- Concorde engine rating : contingency.

Flashing if automatic selection of contingency = reheat selector + takeoff monitor.

Flightgear doesn't have support for engine rating.
-->

<PropertyList>
 <name>Engine rating take/off</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>

<!-- translucent lens -->  
  <layer>
   <name>Button light</name>
   <type>switch</type>
 
   <layer>
    <name>off</name>
    <condition>
     <or include="concorde-cond-flashing-light.xml">
      <and>
       <not-equals>
        <property>/controls/engines/engine[0]/rating</property>
        <value>contingency</value>
       </not-equals>
       <not-equals>
        <property>/controls/engines/engine[1]/rating</property>
        <value>contingency</value>
       </not-equals>
       <not-equals>
        <property>/controls/engines/engine[2]/rating</property>
        <value>contingency</value>
       </not-equals>
       <not-equals>
        <property>/controls/engines/engine[3]/rating</property>
        <value>contingency</value>
       </not-equals>
      </and>
      <or include="concorde-cond-voltage-bulb.xml"/>
     </or>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>26</h>
   </layer>
   <layer>
    <name>on</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.37</x1>
     <y1>0.0</y1>
     <x2>0.38</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>26</h>
   </layer>
  </layer>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-yellow-warning.rgb</path>
    <x1>0.7</x1>
    <y1>0.8</y1>
    <x2>1.0</x2>
    <y2>0.9</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>40</point-size>
   <color>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>CTY</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-44</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-6</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>

</PropertyList>
