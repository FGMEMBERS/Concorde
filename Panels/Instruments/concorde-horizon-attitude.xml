<?xml version="1.0"?>

<!-- Concorde alarm on attitude :

- max positive incidence : 16.5 deg.
- min positive incidence : 5.5 deg (above Mach 1.0).

-->

<PropertyList>
 <name>Horizon Alarm on Attitude</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>

<!-- translucent lens -->  
  <layer>
   <name>Alarm light</name>
   <type>switch</type>

    <layer>
     <name>off</name>
     <type>group</type>
     <condition>
      <or>
       <not include="concorde-cond-voltage-horizon.xml"/>
       <and>
        <less-than-equals>
         <property>/orientation/pitch-deg</property>
         <value>16.5</value>
        </less-than-equals>
        <greater-than-equals>
         <property>/orientation/pitch-deg</property>
         <value>-5.5</value>
        </greater-than-equals>
       </and>
      </or>
     </condition>

     <layer include="concorde-bulb-off.xml">
      <w>104</w>
      <h>26</h>
     </layer>
     <layer>
      <name>background off</name>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-fault.png</path>
       <x1>0.7</x1>
       <y1>0.8</y1>
       <x2>1.0</x2>
       <y2>0.9</y2>
      </texture>
      <w>104</w>
      <h>26</h>
     </layer>
    </layer>

    <layer>
     <name>on</name>
     <type>group</type>

     <layer include="concorde-bulb-on.xml">
      <w>104</w>
      <h>26</h>
     </layer>
     <layer>
      <name>background on</name>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-fault.png</path>
       <x1>0.7</x1>
       <y1>0.8</y1>
       <x2>1.0</x2>
       <y2>0.9</y2>
      </texture>
      <w>104</w>
      <h>26</h>
      <emissive>true</emissive>
     </layer>
    </layer>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>29</point-size>
   <color>
    <red>0.4</red>
    <green>0.4</green>
    <blue>0.4</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>ATT</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-37</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-6</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>

</PropertyList>
