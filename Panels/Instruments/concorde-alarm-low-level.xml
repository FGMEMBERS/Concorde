<?xml version="1.0"?>

<!-- Alarm on tank below 20 %
-->

<PropertyList>
 <name>Alarm low level</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <params>
  <lbs-select>/consumables/fuel/tank[0]/level-lb</lbs-select>
  <low-level-select>/consumables/fuel/tank[0]/low-level-lb</low-level-select>
 </params>


 <layers>

<!-- translucent lens -->  
  <layer>
   <name>Alarm light</name>
   <type>switch</type>
   <layer>
    <name>off</name>
    <condition>
     <greater-than>
      <property alias="../../../../../../params/lbs-select"/>
      <property n="1" alias="../../../../../../params/low-level-select"/>
     </greater-than>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>20</h>
   </layer>
   <layer>
    <name>on</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.35</x1>
     <y1>0.0</y1>
     <x2>0.4</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>20</h>
   </layer>
  </layer>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-alarm.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>104</w>
   <h>20</h>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>15</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>LOW</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-18</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>2</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title 2</name>
   <type>text</type>
   <point-size>15</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>LEVEL</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-25</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-8</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
