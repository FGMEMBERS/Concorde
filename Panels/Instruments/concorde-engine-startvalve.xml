<?xml version="1.0"?>

<!-- engine start valve -->

<PropertyList>
 <name>Engine Start Valve</name>
 <w-base>28</w-base>
 <h-base>28</h-base>

 <params>
  <starter>/engines/engine[0]/starter</starter>
  <control-cutoff>/controls/engines/engine[0]/cutoff</control-cutoff>
  <num>/engines/engine[0]/engine-num</num>
 </params>


 <layers>

  <layer>
   <name>valve</name>
   <type>switch</type>

   <layer>
    <name>shut</name>
    <condition>
     <or>
      <not>
       <property alias="../../../../../../../params/starter"/>
      </not>
      <property alias="../../../../../../params/control-cutoff"/>
     </or>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-shut.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>28</w>
    <h>28</h>
   </layer>

   <layer>
    <name>open</name>
    <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-open.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>28</w>
    <h>28</h>
   </layer>

  </layer>

  <layer>
   <name>Title engine number</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property alias="../../../../../params/num"/>
     <format>%1.f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-5</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-26</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
