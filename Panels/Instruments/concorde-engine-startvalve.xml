<?xml version="1.0"?>

<!-- engine start valve -->

<PropertyList>
 <name>Engine Start Valve</name>
 <w-base>28</w-base>
 <h-base>28</h-base>

 <params>
  <starter>/engines/engine[0]/starter</starter>
  <control-cutoff>/controls/engines/engine[0]/cutoff</control-cutoff>
  <num>/engines/engine[0]/engine-num</num>
 </params>


 <layers>

  <layer>
   <name>valve</name>
   <type>switch</type>

   <layer>
    <name>shut</name>
    <type>group</type>
    <condition>
     <or>
      <not>
       <property alias="../../../../../../../params/starter"/>
      </not>
      <property alias="../../../../../../params/control-cutoff"/>
     </or>
    </condition>

    <layer>
     <name>Background shut</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
      <x1>0.7</x1>
      <y1>0.8</y1>
      <x2>1.0</x2>
      <y2>0.9</y2>
     </texture>
     <w>28</w>
     <h>28</h>
    </layer>
    <layer>
     <name>Title shut</name>
     <type>text</type>
     <point-size>9</point-size>
     <color>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>SHUT</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-13</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>-3</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>

   <layer>
    <name>open</name>
    <type>group</type>

    <layer>
     <name>Background open</name>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.rgb</path>
      <x1>0.7</x1>
      <y1>0.8</y1>
      <x2>1.0</x2>
      <y2>0.9</y2>
     </texture>
     <w>28</w>
     <h>28</h>
    </layer>
    <layer>
     <name>Title open</name>
     <type>text</type>
     <point-size>9</point-size>
     <color>
      <red>0.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>OPEN</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-14</offset>
      </transformation>
      <transformation>
      <type>y-shift</type>
      <offset>-3</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>

  </layer>

  <layer>
   <name>Title engine number</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property alias="../../../../../params/num"/>
     <format>%1.f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-5</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-26</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
