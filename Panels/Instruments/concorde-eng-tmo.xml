<?xml version="1.0"?>

<!-- Engineer's Total Maximum Temperature (TMO) -->

<PropertyList>

 <name>Digital TMO display</name>
 <w-base>40</w-base>
 <h-base>10</h-base>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>95</w>
    <h>45</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>63</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>TMO display (supersonic)</name>
   <condition>
    <greater-than-equals>
     <property>/velocities/mach</property>
     <value>1.0</value>
    </greater-than-equals>
   </condition>
   <type>text</type>
   <font>led</font>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/instrumentation/temperature/indicated-tmo-degc</property>
     <format>%3.0f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-2</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>63</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>TMO display (subsonic)</name>
   <condition>
    <less-than>
     <property>/velocities/mach</property>
     <value>1.0</value>
    </less-than>
   </condition>
   <type>text</type>
   <font>led</font>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/environment/temperature-degc</property>
     <format>%3.0f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-2</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>63</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>9</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>TMO</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>5</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>48</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Unit</name>
   <type>text</type>
   <point-size>17</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>C</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>45</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>65</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
