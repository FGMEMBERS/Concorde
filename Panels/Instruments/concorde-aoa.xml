<?xml version="1.0"?>

<!--
-->

<PropertyList>

 <name>Digital AOA display</name>
 <w-base>10</w-base>
 <h-base>40</h-base>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>40</w>
    <h>30</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>10</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>70</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>G display</name>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/orientation/alpha-deg</property>
     <format>%02.1f</format> <!-- can be negativ (sign) -->
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-7</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>64</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>Aoa</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-5</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>38</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
