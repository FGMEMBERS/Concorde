<?xml version="1.0"?>

<!--
-->

<PropertyList>

 <name>Dial vertical speed</name>
 <w-base>124</w-base>
 <h-base>40</h-base>

 <params>
  <tcr-disp>/autopilot/settings/vertical-speed-fpm</tcr-disp>
  <tcr-ctrl>/autopilot/settings/vertical-speed-fpm</tcr-ctrl>
 </params>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>105</w>
    <h>40</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>50</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>0</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Incr 100</name>
   <type>text</type>
   <point-size>22</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>+</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-2</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-4</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Decr 100</name>
   <type>text</type>
   <point-size>22</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>-</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-24</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Incr 10</name>
   <type>text</type>
   <point-size>22</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>+</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>12</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-4</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Decr 10</name>
   <type>text</type>
   <point-size>22</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>-</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>14</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-24</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>AP Target Climb Rate display</name>
   <type>text</type>
   <font>led</font>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property alias="../../../../../params/tcr-disp"/>
     <format>%04.0f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>40</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-8</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>FT/M</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>105</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-12</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Minus 100</name>
   <button>0</button>
   <x>2</x>
   <y>-19</y>
   <w>15</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/tcr-ctrl"/>
    <step>-100</step>
    <min>-6000</min>
    <max>6000</max>
    <wrap>0</wrap>
   </binding>
  </action>

  <action>
   <name>Minus 10</name>
   <button>0</button>
   <x>17</x>
   <y>-19</y>
   <w>15</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/tcr-ctrl"/>
    <step>-10</step>
    <min>-6000</min>
    <max>6000</max>
    <wrap>0</wrap>
   </binding>
  </action>

  <action>
   <name>Plus 100</name>
   <button>0</button>
   <x>2</x>
   <y>1</y>
   <w>15</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/tcr-ctrl"/>
    <step>100</step>
    <min>-6000</min>
    <max>6000</max>
    <wrap>0</wrap>
   </binding>
  </action>

  <action>
   <name>Plus 10</name>
   <button>0</button>
   <x>17</x>
   <y>1</y>
   <w>15</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/tcr-ctrl"/>
    <step>10</step>
    <min>-6000</min>
    <max>6000</max>
    <wrap>0</wrap>
   </binding>
  </action>

 </actions>

</PropertyList>
