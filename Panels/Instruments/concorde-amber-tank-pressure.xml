<?xml version="1.0"?>

<!-- Alarm on tank pressure.
-->

<PropertyList>
 <name>Alarm on tank pressure</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>alarm light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and>
       <or include="concorde-cond-test-eng-aft.xml"/> <!-- bug -->
       <or include="concorde-cond-tank-pressure.xml"/>
      </and>
     </or>
    </condition>

    <layer include="concorde-bulb-off.xml">
     <w>104</w>
     <h>20</h>
    </layer>
    <layer>
     <name>background off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-tank-press.rgb</path>
      <x1>0.0</x1>
      <y1>0.21</y1>
      <x2>1.0</x2>
      <y2>0.81</y2>
     </texture>
     <w>104</w>
     <h>20</h>
    </layer>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>

    <layer include="concorde-bulb-on.xml">
     <w>104</w>
     <h>20</h>
    </layer>
    <layer>
     <name>background on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-tank-press.rgb</path>
      <x1>0.0</x1>
      <y1>0.21</y1>
      <x2>1.0</x2>
      <y2>0.81</y2>
     </texture>
     <w>104</w>
     <h>20</h>
     <emissive>true</emissive>
    </layer>
   </layer>
  </layer>

 </layers>

</PropertyList>
