<?xml version="1.0"?>

<!-- Condition (on) for gear down :

     - green hydraulics.
     - yellow hydraulics.
     - not neutral.
-->

<PropertyList>

  <and include="concorde-cond-voltage-gear.xml">
   <or>
    <not include="concorde-cond-hyd-green.xml"/>
    <not include="concorde-cond-hyd-yellow.xml"/>
   </or>
   <not>
    <property>/controls/gear/neutral</property>
   </not>
   <not>
    <property>/controls/gear/gear-down</property>
   </not>
  </and>

</PropertyList>
