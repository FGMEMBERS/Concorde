<?xml version="1.0"?>

<!-- AC voltmeter :

     - electrical systems only provides amps.
-->

<PropertyList>

 <name>AC voltmeter</name>
 <w-base>40</w-base>
 <h-base>60</h-base>


 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-knob.rgb</path>
   </texture>
   <w>40</w>
   <h>40</h>
  </layer>

  <layer>
   <name>Voltage</name>
   <type>switch</type>

   <layer>
    <name>Ground power</name>
    <condition>
     <and>
      <equals>
       <property>/controls/electric/ac/voltmeter</property> 
       <value>-3.0</value>
      </equals>
      <greater-than>
       <property>/systems/electrical/outputs/probe/ac-gpb</property>
       <value>0.0</value>
      </greater-than>
     </and>
    </condition>
    <type>text</type>
    <font>led</font>
    <point-size>6</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
     <type>literal</type>
     <text>115</text>
     </chunk>
    </chunks>
   </layer>

   <layer>
    <name>Emergency power</name>
    <condition>
     <and>
      <equals>
       <property>/controls/electric/ac/voltmeter</property> 
       <value>-2.0</value>
      </equals>
      <greater-than>
       <property>/systems/electrical/outputs/probe/ac-emergency-a</property>
       <value>0.0</value>
      </greater-than>
     </and>
    </condition>
    <type>text</type>
    <font>led</font>
    <point-size>6</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
     <type>literal</type>
     <text>115</text>
     </chunk>
    </chunks>
   </layer>

   <layer>
    <name>Generator 1</name>
    <condition>
     <and>
      <equals>
       <property>/controls/electric/ac/voltmeter</property> 
       <value>-1.0</value>
      </equals>
      <greater-than>
       <property>/systems/electrical/outputs/probe/ac-generator[0]</property>
       <value>0.0</value>
      </greater-than>
     </and>
    </condition>
    <type>text</type>
    <font>led</font>
    <point-size>6</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
     <type>literal</type>
     <text>115</text>
     </chunk>
    </chunks>
   </layer>

   <layer>
    <name>Generator 2</name>
    <condition>
     <and>
      <equals>
       <property>/controls/electric/ac/voltmeter</property> 
       <value>0.0</value>
      </equals>
      <greater-than>
       <property>/systems/electrical/outputs/probe/ac-generator[1]</property>
       <value>0.0</value>
      </greater-than>
     </and>
    </condition>
    <type>text</type>
    <font>led</font>
    <point-size>6</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
     <type>literal</type>
     <text>115</text>
     </chunk>
    </chunks>
   </layer>

   <layer>
    <name>Generator 3</name>
    <condition>
     <and>
      <equals>
       <property>/controls/electric/ac/voltmeter</property> 
       <value>1.0</value>
      </equals>
      <greater-than>
       <property>/systems/electrical/outputs/probe/ac-generator[2]</property>
       <value>0.0</value>
      </greater-than>
     </and>
    </condition>
    <type>text</type>
    <font>led</font>
    <point-size>6</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
     <type>literal</type>
     <text>115</text>
     </chunk>
    </chunks>
   </layer>

   <layer>
    <name>Generator 4</name>
    <condition>
     <and>
      <equals>
       <property>/controls/electric/ac/voltmeter</property> 
       <value>2.0</value>
      </equals>
      <greater-than>
       <property>/systems/electrical/outputs/probe/ac-generator[3]</property>
       <value>0.0</value>
      </greater-than>
     </and>
    </condition>
    <type>text</type>
    <font>led</font>
    <point-size>6</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
     <type>literal</type>
     <text>115</text>
     </chunk>
    </chunks>
   </layer>

   <layer>
    <name>No voltage</name>
    <type>text</type>
    <font>led</font>
    <point-size>6</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
     <type>literal</type>
     <text>0</text>
     </chunk>
    </chunks>
   </layer>

   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-12</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-6</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Unit</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>V</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>y-shift</type>
     <offset>-27</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
