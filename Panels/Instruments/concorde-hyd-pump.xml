<?xml version="1.0"?>

<!-- Hydraulic pump selector switch :

     - optional label to the left.
-->

<PropertyList>

 <name>Pump selector</name>
 <w-base>102</w-base>
 <h-base>102</h-base>

 <params>
  <onload-pump>/controls/hydraulic/circuits/circuit[0]/onload2</onload-pump>
  <shut-pump>/controls/hydraulic/circuits/circuit[0]/shut2</shut-pump>
  <guard-pump>/controls/hydraulic/circuits/circuit[0]/guard2</guard-pump>
  <engine-num>/engines/engine[0]/engine-num</engine-num>
 </params>


 <layers>

  <layer>
   <name>Pump selector</name>
   <type>switch</type>

   <layer>
    <name>on</name>
    <condition>
     <and>
      <property alias="../../../../../../params/onload-pump"/>
      <not>
       <property alias="../../../../../../../params/shut-pump"/>
      </not>
     </and>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.74</y1>
     <x2>0.25</x2>
     <y2>1.0</y2>
    </texture>
    <w>40</w>
    <h>40</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>2.75</offset>
     </transformation>
    </transformations>
   </layer>
   <layer>
    <name>3rd state</name>
    <condition>
     <and>
      <not>
       <property alias="../../../../../../../params/onload-pump"/>
      </not>
      <property alias="../../../../../../params/shut-pump"/>
     </and>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.31</y2>
    </texture>
    <w>40</w>
    <h>47</h>
   </layer>
   <layer>
    <name>off</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.47</y1>
     <x2>0.25</x2>
     <y2>0.745</y2>
    </texture>
    <w>40</w>
    <h>42</h>
    <transformations>
    <transformation>
     <type>y-shift</type>
     <offset>1.5</offset>
    </transformation>
    </transformations>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>16</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>green guard</name>
   <type>switch</type>
   <condition>
    <less-than>
     <property alias="../../../../../params/engine-num"/>
     <value>3</value>
    </less-than>
   </condition>

   <layer>
    <name>guard on</name>
    <condition>
     <property alias="../../../../../params/guard-pump"/>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-green-guard-bg.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>30</w>
    <h>20</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>-16</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>guard off</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-green-guard-bg.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>30</w>
    <h>15</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>-23</offset>
     </transformation>
    </transformations>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>16</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>blue guard</name>
   <type>switch</type>
   <condition>
    <greater-than>
     <property alias="../../../../../params/engine-num"/>
     <value>2</value>
    </greater-than>
   </condition>

   <layer>
    <name>guard on</name>
    <condition>
     <property alias="../../../../../params/guard-pump"/>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-blue-guard-bg.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>30</w>
    <h>20</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>-16</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>guard off</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-blue-guard-bg.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>30</w>
    <h>15</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>-23</offset>
     </transformation>
    </transformations>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>16</offset>
    </transformation>
   </transformations>
  </layer>

<!-- labels -->

  <layer>
   <name>Title on</name>
   <condition>
    <or>
     <equals>
      <property alias="../../../../../../params/engine-num"/>
      <value>2</value>
     </equals>
     <equals>
      <property alias="../../../../../../params/engine-num"/>
      <value>4</value>
     </equals>
    </or>
   </condition>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>ON</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-40</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>14</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title off</name>
   <condition>
    <or>
     <equals>
      <property alias="../../../../../../params/engine-num"/>
      <value>2</value>
     </equals>
     <equals>
      <property alias="../../../../../../params/engine-num"/>
      <value>4</value>
     </equals>
    </or>
   </condition>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>OFF</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-43</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title 3</name>
   <condition>
    <or>
     <equals>
      <property alias="../../../../../../params/engine-num"/>
      <value>2</value>
     </equals>
     <equals>
      <property alias="../../../../../../params/engine-num"/>
      <value>4</value>
     </equals>
    </or>
   </condition>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>SHUT</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-45</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-20</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Number</name>
   <type>text</type>
   <point-size>9</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>text-value</type>
     <property alias="../../../../../params/engine-num"/>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-8</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>17</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Toggle onload</name>
   <condition>
    <property alias="../../../../params/guard-pump"/>
   </condition>
   <button>0</button>
   <x>-5</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/onload-pump"/>
   </binding>
   <binding>
    <command>property-assign</command>
    <property alias="../../../../params/shut-pump"/>
    <value>false</value>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>Shut pump</name>
   <condition>
    <not>
     <property alias="../../../../../params/guard-pump"/>
    </not>
   </condition>
   <button>0</button>
   <x>-5</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/shut-pump"/>
   </binding>
   <binding>
    <command>property-assign</command>
    <property alias="../../../../params/onload-pump"/>
    <value>false</value>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>Toggle guard</name>
   <condition>
    <not>
     <property alias="../../../../../params/shut-pump"/>
    </not>
   </condition>
   <button>0</button>
   <x>-45</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/guard-pump"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>
 
</PropertyList>
