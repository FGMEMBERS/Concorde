<?xml version="1.0"?>

<!-- Pitch Hold -->

<PropertyList>
 <name>Pitch Hold</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Button light</name>
   <type>switch</type>
    <layer>
     <condition>
      <equals>
       <property>/autopilot/locks/altitude</property>
       <value>pitch-hold</value>
      </equals>
     </condition>
     <name>on</name>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.37</x1>
     <y1>0.0</y1>
     <x2>0.38</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>off</name>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
   </layer>
  </layer>

  <layer>
   <name>background lighted</name>
   <condition>
    <equals>
     <property>/autopilot/locks/altitude</property>
     <value>pitch-hold</value>
    </equals>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-orange-button.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

  <layer>
   <name>background</name>
   <condition>
    <not-equals>
     <property>/autopilot/locks/altitude</property>
     <value>pitch-hold</value>
    </not-equals>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>46</point-size>
   <color>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>PH</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-50</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-11</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>
 
 <actions>

  <action>
   <desc>Pitch hold</desc>
   <condition>
    <not-equals>
     <property>/autopilot/locks/altitude</property>
     <value type="string">pitch-hold</value>
    </not-equals>
   </condition>
   <button>0</button>
   <x>-52</x>
   <y>-13</y>
   <w>104</w>
   <h>26</h>
   <binding>
    <command>property-assign</command>
    <property>/autopilot/locks/altitude</property>
    <value type="string">pitch-hold</value>
   </binding>
   <binding>
    <command>property-assign</command>
    <property>/autopilot/settings/target-pitch-deg</property>
    <property n="1">/orientation/pitch-deg</property>
   </binding>
  </action>

  <action>
   <desc>Disable Pitch hold</desc>
   <condition>
    <equals>
     <property>/autopilot/locks/altitude</property>
     <value type="string">pitch-hold</value>
    </equals>
   </condition>
   <button>0</button>
   <x>-52</x>
   <y>-13</y>
   <w>104</w>
   <h>26</h>
   <binding>
    <command>property-assign</command>
    <property>/autopilot/locks/altitude</property>
    <value type="string"></value>
   </binding>
  </action>

 </actions>

</PropertyList>
