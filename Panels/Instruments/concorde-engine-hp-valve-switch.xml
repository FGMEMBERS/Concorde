<?xml version="1.0"?>

<!-- engine HP valve switch :

     - requires starter or relight : relight effective only if allowed by JSBSim (enough speed).
-->


<PropertyList>
 <name>Engine HP valve switch</name>
 <w-base>28</w-base>
 <h-base>28</h-base>

 <params>
  <eng-num>/engines/engine[0]/engine-num</eng-num>
  <cutoff>/engines/engine[0]/cutoff</cutoff>
  <control-cutoff>/controls/engines/engine[0]/cutoff</control-cutoff>
  <relight>/engines/engine[0]/relight</relight>
  <starter>/engines/engine[0]/starter</starter>
 </params>


 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-hp-valve.rgb</path>
    <x1>0.0</x1>
    <y1>0.0</y1>
    <x2>1.0</x2>
    <y2>1.0</y2>
   </texture>
   <w>65</w>
   <h>65</h>
   <transformations>
    <transformation>
     <type>y-shift</type>
     <offset>0</offset>
    </transformation>
   </transformations>
  </layer>

<!-- translucent lens -->  
  <layer>
   <name>Engine light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <not>
      <property alias="../../../../../../params/cutoff"/>
     </not>
    </condition>

    <layer>
     <name>lamp off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
      <x1>0.0</x1>
      <y1>0.0</y1>
      <x2>0.25</x2>
      <y2>0.095</y2>
     </texture>
     <w>26</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.rgb</path>
      <x1>0.0</x1>
      <y1>0.0</y1>
      <x2>1.0</x2>
      <y2>1.0</y2>
     </texture>
     <w>26</w>
     <h>26</h>
    </layer>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>7</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>

    <layer>
     <name>on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
      <x1>0.37</x1>
      <y1>0.0</y1>
      <x2>0.38</x2>
      <y2>0.095</y2>
     </texture>
     <w>26</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background on</name>
     <type>switch</type>

     <layer>
      <name>on lighted</name>
      <condition include="concorde-cond-voltage-inst.xml"/>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-orange-button.rgb</path>
       <x1>0.0</x1>
       <y1>0.0</y1>
       <x2>1.0</x2>
       <y2>1.0</y2>
      </texture>
      <w>26</w>
      <h>26</h>
     </layer>

     <layer>
      <name>on no voltage</name>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.rgb</path>
       <x1>0.0</x1>
       <y1>0.0</y1>
       <x2>1.0</x2>
       <y2>1.0</y2>
      </texture>
      <w>26</w>
      <h>26</h>
     </layer>
    </layer>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>-8</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>

  <layer>
   <name>Title</name>
   <type>switch</type>

   <layer>
    <name>1</name>
    <condition>
     <equals>
      <property alias="../../../../../../params/eng-num"/>
      <value>1</value>
     </equals>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-1-black.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>10</w>
    <h>10</h>
   </layer>

   <layer>
    <name>2</name>
    <condition>
     <equals>
      <property alias="../../../../../../params/eng-num"/>
      <value>2</value>
     </equals>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-2-black.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>10</w>
    <h>10</h>
   </layer>

   <layer>
    <name>3</name>
    <condition>
     <equals>
      <property alias="../../../../../../params/eng-num"/>
      <value>3</value>
     </equals>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-3-black.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>10</w>
    <h>10</h>
   </layer>

   <layer>
    <name>4</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-4-black.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>10</w>
    <h>10</h>
   </layer>

   <transformations>
    <transformation>
     <type>y-shift</type>
     <offset>7</offset>
    </transformation>
    <transformation>
     <condition>
      <property alias="../../../../../../params/cutoff"/>
     </condition>
     <type>y-shift</type>
     <offset>-15</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title shut</name>
   <type>switch</type>

   <layer>
    <name>1</name>
    <condition>
     <equals>
      <property alias="../../../../../../params/eng-num"/>
      <value>1</value>
     </equals>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-1.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>10</w>
    <h>10</h>
   </layer>

   <layer>
    <name>2</name>
    <condition>
     <equals>
      <property alias="../../../../../../params/eng-num"/>
      <value>2</value>
     </equals>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-2.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>10</w>
    <h>10</h>
   </layer>

   <layer>
    <name>3</name>
    <condition>
     <equals>
      <property alias="../../../../../../params/eng-num"/>
      <value>3</value>
     </equals>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-3.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>10</w>
    <h>10</h>
   </layer>

   <layer>
    <name>4</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-4.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>10</w>
    <h>10</h>
   </layer>

   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>1</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-34</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>
 
 <actions>
  <action>
   <desc>Open valve</desc>
   <condition>
    <and>
     <property alias="../../../../../params/cutoff"/>
     <or>
      <property alias="../../../../../../params/starter"/>
      <property alias="../../../../../../params/relight"/>
     </or>
    </and>
   </condition>
   <button>0</button>
   <x>-13.5</x>
   <y>-13</y>
   <w>26</w>
   <h>26</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/control-cutoff"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>
 
  <action>
   <desc>Shut valve</desc>
   <condition>
    <not>
     <property alias="../../../../../params/cutoff"/>
    </not>
   </condition>
   <button>0</button>
   <x>-13.5</x>
   <y>-13</y>
   <w>26</w>
   <h>26</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/control-cutoff"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>
 </actions>

</PropertyList>
