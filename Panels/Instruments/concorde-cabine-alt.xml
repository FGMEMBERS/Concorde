<?xml version="1.0"?>

<!-- Concorde cabine altitude meter-->

<PropertyList>

 <name>Cabine altitude meter</name>
 <w-base>40</w-base>
 <h-base>10</h-base>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>60</w>
    <h>20</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>63</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>10</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Altitude display</name>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>instrumentation/cabine-altitude/indicated-altitude-ft</property>
     <format>%5.f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>39</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>3</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title below</name>
   <type>text</type>
   <point-size>14</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>Cabine</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>40</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-22</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
