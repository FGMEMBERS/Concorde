<?xml version="1.0"?>

<!-- Cabine altitude indicator :

     - supposed to be not electrical (no voltage).
-->

<PropertyList>

 <name>Cabine altitude indicator</name>
 <w-base>40</w-base>
 <h-base>10</h-base>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>60</w>
    <h>20</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>63</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>10</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>digital windows</name>
   <type>switch</type>

   <layer>
    <name>Altitude display</name>
    <condition>
     <property>/instrumentation/cabine-altitude/serviceable</property>
    </condition>
    <type>text</type>
    <font>led</font>
    <point-size>7</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>number-value</type>
      <property>instrumentation/cabine-altitude/indicated-altitude-ft</property>
      <format>%5.f</format>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>39</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>3</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>Error display</name>
    <type>text</type>
    <font>led</font>
    <point-size>7</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>number-value</type>
      <value>0.0</value>
      <format>%5.f</format>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>39</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>3</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>Cabine</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>40</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>27</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Unit</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>ft</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>60</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-17</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
