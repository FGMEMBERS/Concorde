<?xml version="1.0"?>

<!-- Warning on Decision height -->

<PropertyList>
 <name>Horizon Decision height</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Warning light</name>
   <type>switch</type>
    <layer>
     <name>on</name>
     <condition>
      <less-than>
       <property>/position/altitude-agl-ft</property>
       <property n="1">/instrumentation/radio-altimeter/decision-ft</property>
      </less-than>
     </condition>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.33</x1>
     <y1>0.0</y1>
     <x2>0.42</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>off</name>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
   </layer>
  </layer>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-yellow-warning.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>29</point-size>
   <color>
    <red>0.4</red>
    <green>0.4</green>
    <blue>0.4</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>DH</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-19</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-7</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>

</PropertyList>
