<?xml version="1.0"?>

<!-- Warning on Decision height -->

<PropertyList>
 <name>Horizon Decision height</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <params>
  <decision-ctrl>/instrumentation/radio-altimeter[0]/decision-height</decision-ctrl>
  <decision-ft>/instrumentation/radio-altimeter[0]/decision-ft</decision-ft>
  <ft-sel>/instrumentation/radio-altimeter[0]/indicated-altitude-ft</ft-sel>
 </params>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Warning light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <or>
      <not include="concorde-cond-voltage-horizon.xml"/>
      <not>
       <property alias="../../../../../../../params/decision-ctrl"/>
      </not>
      <greater-than-equals>
       <property alias="../../../../../../../params/ft-sel"/>
       <property n="1" alias="../../../../../../../params/decision-ft"/>
      </greater-than-equals>
     </or>
    </condition>

    <layer include="concorde-bulb-off.xml">
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-fault.png</path>
      <x1>0.7</x1>
      <y1>0.8</y1>
      <x2>1.0</x2>
      <y2>0.9</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>

    <layer include="concorde-bulb-on.xml">
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-fault.png</path>
      <x1>0.7</x1>
      <y1>0.8</y1>
      <x2>1.0</x2>
      <y2>0.9</y2>
     </texture>
     <w>104</w>
     <h>26</h>
     <emissive>true</emissive>
    </layer>
   </layer>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>29</point-size>
   <color>
    <red>0.4</red>
    <green>0.4</green>
    <blue>0.4</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>DH</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-19</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-7</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>

</PropertyList>
