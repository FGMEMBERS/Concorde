<?xml version="1.0"?>

<!-- Disable autopilot -->

<PropertyList>

 <name>Disable autopilot</name>
 <w-base>104</w-base>
 <h-base>36</h-base>


 <layers>

<!-- green light in a bugle : not visible when off -->

<!-- translucent lens -->
  <layer>
   <name>Green light + Switch</name>
   <type>switch</type>

   <layer>
    <name>on</name>
    <type>group</type>
    <condition>
     <or>
      <not-equals>
       <property>/autopilot/locks/vertical</property>
       <value></value>
      </not-equals>
      <not-equals>
       <property>/autopilot/locks/altitude</property>
       <value></value>
      </not-equals>
      <not-equals>
       <property>/autopilot/locks/altitude2</property>
       <value></value>
      </not-equals>
      <not-equals>
       <property>/autopilot/locks/heading</property>
       <value></value>
      </not-equals>
      <not-equals>
       <property>/autopilot/locks/horizontal</property>
       <value></value>
      </not-equals>
     </or>
    </condition>

    <layer>
     <name>light on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
      <x1>0.25</x1>
      <y1>0.0</y1>
      <x2>0.5</x2>
      <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>6</h>
     <transformations>
      <transformation>
       <type>y-shift</type>
       <offset>15</offset>
      </transformation>
     </transformations>
    </layer>
    <layer>
     <name>background light</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-green-warning.rgb</path>
      <x1>0.7</x1>
      <y1>0.8</y1>
      <x2>1.0</x2>
      <y2>0.9</y2>
     </texture>
     <w>104</w>
     <h>6</h>
     <transformations>
      <transformation>
       <type>y-shift</type>
       <offset>1</offset>
      </transformation>
     </transformations>
    </layer>
    <layer>
     <name>switch enabled</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.rgb</path>
      <x1>0.7</x1>
      <y1>0.8</y1>
      <x2>1.0</x2>
      <y2>0.9</y2>
     </texture>
     <w>104</w>
     <h>26</h>
     <transformations>
      <transformation>
       <type>y-shift</type>
       <offset>-14</offset>
      </transformation>
     </transformations>
    </layer>
    <layer>
     <name>Title enabled</name>
     <type>text</type>
     <point-size>46</point-size>
     <color>
      <red>0.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>AP</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-31</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>-5</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>

   <layer>
    <name>off</name>
    <type>group</type>
    <layer>
     <name>switch off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.rgb</path>
      <x1>0.7</x1>
      <y1>0.8</y1>
      <x2>1.0</x2>
      <y2>0.9</y2>
     </texture>
     <w>104</w>
     <h>26</h>
     <transformations>
      <transformation>
       <type>y-shift</type>
       <offset>-10</offset>
      </transformation>
     </transformations>
    </layer>
    <layer>
     <name>Title</name>
     <type>text</type>
     <point-size>46</point-size>
     <color>
      <red>0.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>AP</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-30</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>-5</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>
  </layer>

 </layers>
 
 <actions>

  <action>
   <desc>Enable autopilot</desc>
   <button>0</button>
   <x>-52</x>
   <y>-24</y>
   <w>104</w>
   <h>37</h>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.apexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>

</PropertyList>
