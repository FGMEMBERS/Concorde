<?xml version="1.0"?>

<!-- Alarm on Artificial Feel :

     - loss of hydraulics.
-->

<PropertyList>
 <name>Alarm Feel</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <params>
  <pressure-psi>/systems/mws/red/feel</pressure-psi>
 </params>

 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Alarm light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and>
       <or include="concorde-cond-test-mws.xml"/>     <!-- bug -->
       <or>
        <not>
         <property alias="../../../../../../../../../params/pressure-psi"/>
        </not>
        <property>/controls/mws/inhibit</property>
       </or>
      </and>
     </or>
    </condition>

    <layer include="concorde-bulb-off.xml">
     <w>104</w>
     <h>26</h>
    </layer>

    <layer>
     <name>Background off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-feel.rgb</path>
      <x1>0.0</x1>
      <y1>0.25</y1>
      <x2>1.0</x2>
      <y2>0.75</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>

    <layer include="concorde-bulb-on.xml">
     <w>104</w>
     <h>26</h>
    </layer>

    <layer>
     <name>Background on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-feel.rgb</path>
      <x1>0.0</x1>
      <y1>0.25</y1>
      <x2>1.0</x2>
      <y2>0.75</y2>
     </texture>
     <w>104</w>
     <h>26</h>
     <emissive>true</emissive>
    </layer>
   </layer>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Cancel</name>
   <button>0</button>
   <x>-52</x>
   <y>-15</y>
   <w>104</w>
   <h>26</h>
   <binding>
    <command>property-assign</command>
    <property alias="../../../../params/pressure-psi"/>
    <value>false</value>
   </binding>
  </action>

 </actions>

</PropertyList>
