<?xml version="1.0"?>

<!-- Test of doors warning lights -->

<PropertyList>
 <name>Test Doors</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-led.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

  <layer>
   <name>Title 1</name>
   <type>text</type>
   <point-size>35</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>DOORS</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-66</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>27</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title 2</name>
   <type>text</type>
   <point-size>35</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>TEST</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-48</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>18</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>
 
 <actions>

  <action>
   <desc>Test</desc>
   <button>0</button>
   <x>-55</x>
   <y>-13</y>
   <w>103</w>
   <h>25</h>
   <binding>
    <command>property-assign</command>
    <property>/controls/doors/push</property>
    <value>true</value>
    <repeatable>true</repeatable>
   </binding>
   <mod-up>
    <binding>
     <command>property-assign</command>
     <property>/controls/doors/push</property>
     <value>false</value>
    </binding>
    <binding>
     <command>property-toggle</command>
     <property>/instrumentation/generic/click</property>
    </binding>
   </mod-up>
  </action>

 </actions>

</PropertyList>
