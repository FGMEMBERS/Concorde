<?xml version="1.0"?>

<!-- INS failure  :

     - INS not aligned.
     - not serviceable.
     - test.
-->

<PropertyList>
 <name>INS failure</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <params>
  <ins-num>/instrumentation/ins[0]/ins-num</ins-num>
  <warning-select>/instrumentation/ins[0]/light/warning</warning-select>
  <test-ctrl>/instrumentation/ins[0]/control/test</test-ctrl>
 </params>



 <layers>

<!-- translucent lens -->  
  <layer>
   <name>Alarm light</name>
   <type>switch</type>
 
   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <or>
      <or include="concorde-cond-voltage-bulb.xml"/>
      <and>
       <or include="concorde-cond-test-captain.xml"/>
       <not>
        <property alias="../../../../../../../../params/warning-select"/>
       </not>
      </and>
     </or>
    </condition>

    <layer include="concorde-bulb-off.xml">
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background off</name>
     <type>switch</type>

     <layer>
      <name>INS 1</name>
      <condition>
       <equals>
        <property alias="../../../../../../../../params/ins-num"/>
        <value>1</value>
       </equals>
      </condition>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-ins1.rgb</path>
       <x1>0.0</x1>
       <y1>0.0</y1>
       <x2>1.0</x2>
       <y2>1.0</y2>
      </texture>
      <w>104</w>
      <h>26</h>
     </layer>

     <layer>
      <name>INS 2</name>
      <condition>
       <equals>
        <property alias="../../../../../../../../params/ins-num"/>
        <value>2</value>
       </equals>
      </condition>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-ins2.rgb</path>
       <x1>0.0</x1>
       <y1>0.0</y1>
       <x2>1.0</x2>
       <y2>1.0</y2>
      </texture>
      <w>104</w>
      <h>26</h>
     </layer>

     <layer>
      <name>INS 3</name>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-ins3.rgb</path>
       <x1>0.0</x1>
       <y1>0.0</y1>
       <x2>1.0</x2>
       <y2>1.0</y2>
      </texture>
      <w>104</w>
      <h>26</h>
     </layer>
    </layer>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>

    <layer include="concorde-bulb-on.xml">
     <condition include="concorde-cond-light-captain.xml"/>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background on</name>
     <type>switch</type>

     <layer>
      <name>INS 1</name>
      <condition>
       <equals>
        <property alias="../../../../../../../../params/ins-num"/>
        <value>1</value>
       </equals>
      </condition>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-ins1.rgb</path>
       <x1>0.0</x1>
       <y1>0.0</y1>
       <x2>1.0</x2>
       <y2>1.0</y2>
      </texture>
      <w>104</w>
      <h>26</h>
      <emissive>true</emissive>
     </layer>

     <layer>
      <name>INS 2</name>
      <condition>
       <equals>
        <property alias="../../../../../../../../params/ins-num"/>
        <value>2</value>
       </equals>
      </condition>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-ins2.rgb</path>
       <x1>0.0</x1>
       <y1>0.0</y1>
       <x2>1.0</x2>
       <y2>1.0</y2>
      </texture>
      <w>104</w>
      <h>26</h>
      <emissive>true</emissive>
     </layer>

     <layer>
      <name>INS 3</name>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-ins3.rgb</path>
       <x1>0.0</x1>
       <y1>0.0</y1>
       <x2>1.0</x2>
       <y2>1.0</y2>
      </texture>
      <w>104</w>
      <h>26</h>
      <emissive>true</emissive>
     </layer>
    </layer>
   </layer>
  </layer>
 </layers>

</PropertyList>
