<?xml version="1.0"?>

<!-- Alarm on Autopilot :

     - altimeter or IVSI failure on altitude hold.
     - heading indicator failure on heading/track hold.
     - radio altimeter failure on autoland.
     - alpha greater than 17.5 deg, without autoland.
     - attitude greater than 20 deg, without autoland.
     - no voltage.
     - falshes on test.
-->

<PropertyList>
 <name>Alarm Autopilot</name>
 <w-base>60</w-base>
 <h-base>120</h-base>

 <params>
  <test>/controls/autoflight/autopilot[0]/test-land</test>
 </params>


 <layers>

<!-- translucent lens -->
  <layer>
   <name>Alarm light</name>
   <type>switch</type>

   <layer>
    <name>on</name>
    <type>group</type>
    <condition>
     <and>
      <not include="concorde-cond-voltage-bulb.xml"/>
      <or>
       <and>
        <property alias="../../../../../../../../params/test"/>
        <not include="concorde-cond-flashing-light.xml"/>
       </and>
       <and>
        <not include="concorde-cond-flashing-light.xml"/>
        <or>
         <and>
          <or>
           <not>
            <property>/instrumentation/altimeter[0]/serviceable</property>
           </not>
           <not>
            <property>/instrumentation/inst-vertical-speed-indicator/serviceable</property>
           </not>
          </or>
          <not-equals>
           <property>/autopilot/locks/altitude</property>
           <value></value>
          </not-equals>
         </and>
         <and>
          <not>
           <property>/instrumentation/heading-indicator/serviceable</property>
          </not>
          <not-equals>
           <property>/autopilot/locks/heading</property>
           <value></value>
          </not-equals>
         </and>
         <and include="concorde-cond-land.xml">
          <not>
           <property>/instrumentation/radio-altimeter/serviceable</property>
          </not>
         </and>
         <and>
          <or>
           <greater-than>
            <property>/orientation/alpha-deg</property>
            <value>17.5</value>
           </greater-than>
           <greater-than>
            <property>/orientation/pitch-deg</property>
            <value>20.0</value>
           </greater-than>
          </or>
          <not-equals>
           <property>/autopilot/locks/altitude</property>
           <value></value>
          </not-equals>
          <equals>
           <property>/controls/autoflight/vertical</property>
           <value></value>
          </equals>
         </and>
        </or>
       </and>
       <not include="concorde-cond-voltage-autopilot.xml"/>
      </or>
     </and>
    </condition>

    <layer include="concorde-bulb-on.xml">
     <w>60</w>
     <h>120</h>
    </layer>
    <layer>
     <name>background on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-ap.rgb</path>
       <x1>0.2</x1>
       <y1>0.0</y1>
       <x2>0.8</x2>
       <y2>1.0</y2>
     </texture>
     <w>60</w>
     <h>120</h>
     <emissive>true</emissive>
    </layer>
  </layer>

   <layer>
    <name>off</name>
    <type>group</type>

    <layer include="concorde-bulb-off.xml">
     <w>60</w>
     <h>120</h>
    </layer>
    <layer>
     <name>background off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-ap.rgb</path>
       <x1>0.2</x1>
       <y1>0.0</y1>
       <x2>0.8</x2>
       <y2>1.0</y2>
     </texture>
     <w>60</w>
     <h>120</h>
    </layer>
   </layer>
  </layer>

 </layers>

</PropertyList>
