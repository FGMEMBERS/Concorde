<?xml version="1.0"?>

<!-- Alarm on Autopilot :

     - altimeter or IVSI failure on altitude hold.
     - heading indicator failure on heading/track hold.
     - radio altimeter failure on autoland.
     - alpha greater than 17.5 deg, without autoland.
     - attitude greater than 20 deg, without autoland.
     - no voltage.
-->

<PropertyList>
 <name>Alarm Autopilot</name>
 <w-base>52</w-base>
 <h-base>26</h-base>


 <layers>

<!-- translucent lens -->
  <layer>
   <name>Alarm light</name>
   <type>switch</type>
   <layer>
    <name>on</name>
    <condition>
     <and>
      <not include="concorde-cond-voltage-bulb.xml"/>
      <or include="concorde-cond-test-land.xml">
       <and>
        <not include="concorde-cond-flashing-light.xml"/>
        <or>
         <and>
          <or>
           <not>
            <property>/instrumentation/altimeter[0]/serviceable</property>
           </not>
           <not>
            <property>/instrumentation/inst-vertical-speed-indicator/serviceable</property>
           </not>
          </or>
          <not-equals>
           <property>/autopilot/locks/altitude</property>
           <value></value>
          </not-equals>
         </and>
         <and>
          <not>
           <property>/instrumentation/heading-indicator/serviceable</property>
          </not>
          <not-equals>
           <property>/autopilot/locks/heading</property>
           <value></value>
          </not-equals>
         </and>
         <and include="concorde-cond-land.xml">
          <not>
           <property>/instrumentation/radio-altimeter/serviceable</property>
          </not>
         </and>
         <and>
          <or>
           <greater-than>
            <property>/orientation/alpha-deg</property>
            <value>17.5</value>
           </greater-than>
           <greater-than>
            <property>/orientation/pitch-deg</property>
            <value>20.0</value>
           </greater-than>
          </or>
          <not-equals>
           <property>/autopilot/locks/altitude</property>
           <value></value>
          </not-equals>
          <equals>
           <property>/autopilot/locks/vertical</property>
           <value></value>
          </equals>
         </and>
        </or>
       </and>
       <not include="concorde-cond-voltage-autopilot.xml"/>
      </or>
     </and>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.325</x1>
     <y1>0.0</y1>
     <x2>0.425</x2>
     <y2>0.095</y2>
    </texture>
    <w>60</w>
    <h>52</h>
   </layer>
   <layer>
    <name>off</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
    </texture>
    <w>60</w>
    <h>52</h>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-28</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-ap.rgb</path>
     <x1>0.2</x1>
     <y1>0.0</y1>
     <x2>0.8</x2>
     <y2>1.0</y2>
   </texture>
   <w>60</w>
   <h>52</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-28</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>

</PropertyList>
