<?xml version="1.0"?>

<!-- Weight configuration -->

<PropertyList>
 <name>Weight configuration</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Weight light</name>
   <type>switch</type>

   <layer>
    <name>165 t</name>
    <type>group</type>
    <condition>
     <not>
      <property>/instrumentation/cg/below-105t</property>
     </not>
    </condition>

    <layer>
     <name>off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.png</path>
      <x1>0.0</x1>
      <y1>0.0</y1>
      <x2>0.25</x2>
      <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>Title 165t</name>
     <type>text</type>
     <point-size>22</point-size>
     <color>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>165 t</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-30</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>-5</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>

   <layer>
    <name>105 t</name>
    <type>group</type>
    <layer>
     <name>on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.png</path>
      <x1>0.25</x1>
      <y1>0.0</y1>
      <x2>0.5</x2>
      <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>Title 105t</name>
     <type>text</type>
     <point-size>22</point-size>
     <color>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>105 t</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-30</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>-5</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>
  </layer>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.png</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

 </layers>
 
 <actions>
  <action>
   <desc>Weight configuration</desc>
   <button>0</button>
   <x>-52</x>
   <y>-13</y>
   <w>104</w>
   <h>26</h>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/cg/below-105t</property>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>
 </actions>

</PropertyList>
