<?xml version="1.0"?>

<!-- ILS deviation :

     - flashes if missing ILS.
     - the bars are not implemented.
-->

<PropertyList>
 <name>ILS deviation</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Warning light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and>
       <not include="concorde-cond-test-land.xml"/>
       <or include="concorde-cond-flashing-light.xml">
        <and>
         <not include="concorde-cond-land.xml"/>
         <not-equals>
          <property>/autopilot/locks/altitude</property>
          <value>gs1-hold</value>
         </not-equals>
        </and>
        <and>
         <property>instrumentation/nav[0]/in-range</property>
         <property>instrumentation/nav[0]/nav-loc</property>
         <property>instrumentation/nav[0]/has-gs</property>
        </and>
       </or>
      </and>
     </or>
    </condition>

    <layer>
     <name>lamp off</name>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>52</h>
    </layer>
    <layer>
     <name>background</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.rgb</path>
      <x1>0.7</x1>
      <y1>0.8</y1>
      <x2>1.0</x2>
      <y2>0.9</y2>
     </texture>
     <w>104</w>
     <h>52</h>
    </layer>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>
    <layer>
     <name>lamp on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
      <x1>0.37</x1>
      <y1>0.0</y1>
      <x2>0.38</x2>
      <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>52</h>
    </layer>
    <layer>
     <name>background lighted</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-yellow-warning.rgb</path>
      <x1>0.7</x1>
      <y1>0.8</y1>
      <x2>1.0</x2>
      <y2>0.9</y2>
     </texture>
     <w>104</w>
     <h>52</h>
    </layer>
   </layer>

  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>46</point-size>
   <color>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>ILS</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-38</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-8</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>

</PropertyList>
