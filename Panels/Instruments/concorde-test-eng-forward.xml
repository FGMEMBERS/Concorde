<?xml version="1.0"?>

<!-- Test warning lights on forward engineer panel :

     - also seems to control level of lighting.
-->

<PropertyList>

 <name>Test forward engineer</name>
 <w-base>102</w-base>
 <h-base>102</h-base>


 <layers>

  <layer>
   <name>Lighting selector</name>
   <type>switch</type>

   <layer>
    <name>3rd state</name>
    <condition>
     <and>
      <not>
       <property>/instrumentation/test-forward/low</property>
      </not>
      <not>
       <property>/instrumentation/test-forward/test</property>
      </not>
     </and>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.47</y1>
     <x2>0.25</x2>
     <y2>0.745</y2>
    </texture>
    <w>40</w>
    <h>42</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>1.5</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>off</name>
    <condition>
     <property>/instrumentation/test-forward/test</property>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.31</y2>
    </texture>
    <w>40</w>
    <h>47</h>
   </layer>

   <layer>
    <name>on</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.74</y1>
     <x2>0.25</x2>
     <y2>1.0</y2>
    </texture>
    <w>40</w>
    <h>40</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>2.75</offset>
     </transformation>
    </transformations>
   </layer>

   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-34</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title on</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>LIGHTS</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-56</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>42</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title on (2nd line)</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>LO</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-41</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>28</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title 3</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>HI</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-8</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-4</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title off</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>TEST</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-46</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-36</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Test</name>
   <button>0</button>
   <x>-55</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/test-forward/test</property>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>
 
</PropertyList>
