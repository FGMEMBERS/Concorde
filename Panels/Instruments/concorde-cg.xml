<?xml version="1.0"?>

<!--
-->

<PropertyList>

 <name>Center of Gravity display</name>
 <w-base>10</w-base>
 <h-base>40</h-base>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>55</w>
    <h>80</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>12</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>14</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Corridor min display</name>
   <type>text</type>
   <font>led</font>
   <point-size>4.5</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>instrumentation/cg/min-percent</property>
     <format>%2.1f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-10</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>35</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Forward</name>
   <type>text</type>
   <point-size>9</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>FWD</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>17</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>37</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Center of Gravity</name>
   <type>text</type>
   <font>led</font>
   <point-size>4.5</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>instrumentation/cg/percent</property>
     <format>%2.1f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-10</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>10</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Corridor max display</name>
   <type>text</type>
   <font>led</font>
   <point-size>4.5</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>instrumentation/cg/max-percent</property>
     <format>%2.1f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-10</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-15</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Aft</name>
   <type>text</type>
   <point-size>9</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>AFT</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>17</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-13</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>CG%C0</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-2</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-37</offset>
    </transformation>
   </transformations>
  </layer>

<!-- red alarm light -->

<!-- translucent lens -->
  <layer>
   <name>Alarm light</name>
   <type>switch</type>
   <layer>
    <name>off</name>
    <condition>
     <or include="concorde-cond-cg.xml">
      <equals>
       <property>/instrumentation/generic/flashing-light</property>
       <value>0.0</value>
      </equals>
     </or>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
    </texture>
    <w>8</w>
    <h>10</h>
   </layer>
   <layer>
    <name>on</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.31</x1>
     <y1>0.0</y1>
     <x2>0.44</x2>
     <y2>0.095</y2>
    </texture>
    <w>8</w>
    <h>10</h>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>13</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>65</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-alarm.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>8</w>
   <h>10</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>13</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>65</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
