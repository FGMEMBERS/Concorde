<?xml version="1.0"?>

<!-- INS 1 button -->

<PropertyList>
 <name>INS 1</name>
 <w-base>52</w-base>
 <h-base>26</h-base>

 <params>
  <wpt-ctrl>/instrumentation/ins[0]/control/waypoint</wpt-ctrl>
 </params>


 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>52</w>
   <h>26</h>
  </layer>

  <layer>
   <name>number</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-1-black.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
   </texture>
   <w>52</w>
   <h>26</h>
  </layer>

 </layers>
 
 <actions>
  <action>
   <desc>1</desc>
   <button>0</button>
   <x>-26</x>
   <y>-13</y>
   <w>52</w>
   <h>26</h>
   <binding>
    <command>property-assign</command>
    <property alias="../../../../params/wpt-ctrl"/>
    <value>1</value>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.INSinstrument.computeexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>
 </actions>

</PropertyList>
