<?xml version="1.0"?>

<!-- Alarm on Gear -->

<PropertyList>
 <name>Alarm Gear</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Alarm light</name>
   <type>switch</type>
    <layer>
     <name>on</name>
     <condition>
      <and>
       <or>
        <equals>
         <property>autopilot/locks/altitude</property>
         <value>gs1-hold</value>
        </equals>
        <equals>
         <property>autopilot/locks/vertical</property>
         <value>autoland</value>
        </equals>
       </or>
       <not-equals>
        <property>gear/gear[0]/position-norm</property>
        <value>1.0</value>
       </not-equals>
       <less-than>
        <property>position/altitude-agl-ft</property>
        <value>1500</value>
       </less-than>
      </and>
     </condition>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.25</x1>
     <y1>0.0</y1>
     <x2>0.5</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>off</name>
     <condition>
      <or>
       <not-equals>
        <property>autopilot/locks/altitude</property>
        <value>gs1-hold</value>
       </not-equals>
       <not-equals>
        <property>autopilot/locks/vertical</property>
        <value>autoland</value>
       </not-equals>
       <equals>
        <property>gear/gear[0]/position-norm</property>
        <value>1.0</value>
       </equals>
       <greater-than-equals>
        <property>position/altitude-agl-ft</property>
        <value>1500</value>
       </greater-than-equals>
      </or>
     </condition>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
   </layer>
  </layer>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-alarm.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>29</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>Terrai</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-55</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-12</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>

</PropertyList>
