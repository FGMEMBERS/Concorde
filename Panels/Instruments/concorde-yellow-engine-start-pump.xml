<?xml version="1.0"?>

<!-- Warning on start pump :

     - lights at engine start / relight.
     - pump runs 30 s after engine debow returned to normal.
-->

<PropertyList>
 <name>Warning on start pump</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <params>
  <starter>/engines/engine[0]/starter</starter>
  <relight>/engines/engine[0]/relight</relight>
 </params>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>warning light</name>
   <type>switch</type>
   <layer>
    <name>off</name>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and>
       <or include="concorde-cond-test-eng-forward.xml"/>
       <not>
        <property alias="../../../../../../../../params/starter"/>
       </not>
       <not>
        <property alias="../../../../../../../../params/relight"/>
       </not>
      </and>
     </or>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>26</h>
   </layer>
   <layer>
    <name>on</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.35</x1>
     <y1>0.0</y1>
     <x2>0.4</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>26</h>
   </layer>
  </layer>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-yellow-start-pump.rgb</path>
    <x1>0.0</x1>
    <y1>0.2</y1>
    <x2>1.0</x2>
    <y2>0.8</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

 </layers>

</PropertyList>
