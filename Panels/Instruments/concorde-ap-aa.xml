<?xml version="1.0"?>

<!-- Altitude Acquire -->

<PropertyList>
 <name>Altitude Acquire</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Button light</name>
   <type>switch</type>
    <layer>
     <condition>
      <and>
       <equals>
        <property>/autopilot/locks/altitude</property>
        <value>altitude-hold</value>
       </equals>
       <greater-than>
        <property>/instrumentation/altimeter/indicated-altitude-ft</property>
        <property n="1">/instrumentation/altimeter/target-min-ft</property>
       </greater-than>
       <less-than>
        <property>/instrumentation/altimeter/indicated-altitude-ft</property>
        <property n="1">/instrumentation/altimeter/target-max-ft</property>
       </less-than>
      </and>
     </condition>
     <name>on</name>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.37</x1>
     <y1>0.0</y1>
     <x2>0.38</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>off</name>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
   </layer>
  </layer>

  <layer>
   <name>background lighted</name>
   <condition>
    <and>
     <equals>
      <property>/autopilot/locks/altitude</property>
      <value>altitude-hold</value>
     </equals>
     <greater-than>
      <property>/instrumentation/altimeter/indicated-altitude-ft</property>
      <property n="1">/instrumentation/altimeter/target-min-ft</property>
     </greater-than>
     <less-than>
      <property>/instrumentation/altimeter/indicated-altitude-ft</property>
      <property n="1">/instrumentation/altimeter/target-max-ft</property>
     </less-than>
     </and>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-orange-button.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

  <layer>
   <name>background</name>
   <condition>
    <or>
     <not-equals>
      <property>/autopilot/locks/altitude</property>
      <value>altitude-hold</value>
     </not-equals>
     <less-than-equals>
      <property>/instrumentation/altimeter/indicated-altitude-ft</property>
      <property n="1">/instrumentation/altimeter/target-min-ft</property>
     </less-than-equals>
     <greater-than-equals>
      <property>/instrumentation/altimeter/indicated-altitude-ft</property>
      <property n="1">/instrumentation/altimeter/target-max-ft</property>
     </greater-than-equals>
    </or>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>46</point-size>
   <color>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>AA</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-32</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-6</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>
 
 <actions>

  <action>
   <desc>Altitude Acquire</desc>
   <condition>
    <not-equals>
     <property>/autopilot/locks/altitude</property>
     <value>altitude-hold</value>
    </not-equals>
   </condition>
   <button>0</button>
   <x>-52</x>
   <y>-13</y>
   <w>104</w>
   <h>26</h>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.apaltitudeexport();</script>
   </binding>
  </action>

  <action>
   <desc>Disable Altitude Acquire</desc>
   <condition>
    <equals>
     <property>/autopilot/locks/altitude</property>
     <value>altitude-hold</value>
    </equals>
   </condition>
   <button>0</button>
   <x>-52</x>
   <y>-13</y>
   <w>104</w>
   <h>26</h>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.apaltitudeexport();</script>
   </binding>
  </action>

 </actions>

</PropertyList>
