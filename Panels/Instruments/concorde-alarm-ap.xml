<?xml version="1.0"?>

<!-- Alarm on Autopilot :

     - altimeter failure on altitude hold.
     - heading indicator failure on heading/track hold.
     - alpha greater than 17.5 deg, without autoland.
     - attitude greater than 20 deg, without autoland.
-->

<PropertyList>
 <name>Alarm Autopilot</name>
 <w-base>52</w-base>
 <h-base>26</h-base>


 <layers>

<!-- translucent lens -->
  <layer>
   <name>Alarm light</name>
   <type>switch</type>
   <layer>
    <name>on</name>
    <condition>
     <or>
      <equals>
       <property>/instrumentation/test-landing/on</property>
       <value>1.0</value>
      </equals>
      <and>
       <equals>
        <property>/instrumentation/generic/flashing-light</property>
        <value>1.0</value>
       </equals>
       <or>
        <and>
         <not>
          <property>/instrumentation/altimeter/serviceable</property>
         </not>
         <not-equals>
          <property>/autopilot/locks/altitude</property>
          <value></value>
         </not-equals>
        </and>
        <and>
         <not>
          <property>/instrumentation/heading-indicator/serviceable</property>
         </not>
         <not-equals>
          <property>/autopilot/locks/heading</property>
          <value></value>
         </not-equals>
        </and>
        <and>
         <or>
          <greater-than>
           <property>/orientation/alpha-deg</property>
           <value>17.5</value>
          </greater-than>
          <greater-than>
           <property>/orientation/pitch-deg</property>
           <value>20.0</value>
          </greater-than>
         </or>
         <not-equals>
          <property>/autopilot/locks/altitude</property>
          <value></value>
         </not-equals>
         <equals>
          <property>/autopilot/locks/vertical</property>
          <value></value>
         </equals>
        </and>
       </or>
      </and>
     </or>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.325</x1>
     <y1>0.0</y1>
     <x2>0.425</x2>
     <y2>0.095</y2>
    </texture>
    <w>60</w>
    <h>52</h>
   </layer>
   <layer>
    <name>off</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
    </texture>
    <w>60</w>
    <h>52</h>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-28</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-alarm.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>60</w>
   <h>52</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-28</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>29</point-size>
   <color>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>AP</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-47</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-6</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>

</PropertyList>
