<?xml version="1.0"?>

<!-- Test of marker beacon -->

<PropertyList>
 <name>Test Marker Beacon</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-led.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>46</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>Test</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-50</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-25</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>
 
 <actions>

  <action>
   <desc>Test markerbeacon</desc>
   <button>0</button>
   <condition>
    <and include="concorde-cond-voltage-marker.xml">
     <not-equals>
      <property>/instrumentation/marker-beacon/test-outer</property>
      <value>on</value>
     </not-equals>
     <not-equals>
      <property>/instrumentation/marker-beacon/test-middle</property>
      <value>on</value>
     </not-equals>
     <not-equals>
      <property>/instrumentation/marker-beacon/test-inner</property>
      <value>on</value>
     </not-equals>
    </and>
   </condition>
   <x>-56</x>
   <y>-14</y>
   <w>104</w>
   <h>26</h>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.markerinstrument.testexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>

</PropertyList>
