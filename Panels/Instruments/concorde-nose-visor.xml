  <layer>
   <name>backplate</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/faces-LE-misc1.rgb</path>
    <x1>0.0</x1>
    <x2>0.125</x2>
    <y1>0.75</y1>
    <y2>1.0</y2>
