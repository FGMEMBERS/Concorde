<?xml version="1.0"?>

<!-- Transfert valve switch -->

<PropertyList>

 <name>Transfert valve switch</name>
 <w-base>52</w-base>
 <h-base>52</h-base>

 <params>
  <trans-valve>/controls/fuel/tank[11]/trans-valve</trans-valve>
  <engine-num>/engines/engine[0]/engine-num</engine-num>
 </params>


 <layers>

  <layer>
   <name>Trans valve</name>
   <type>switch</type>
   <layer>
    <condition>
     <property alias="../../../../../params/trans-valve"/>
    </condition>
    <name>on</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.74</y1>
     <x2>0.25</x2>
     <y2>1.0</y2>
    </texture>
    <w>40</w>
    <h>40</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>2.75</offset>
     </transformation>
    </transformations>
   </layer>
   <layer>
    <name>off</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.31</y2>
    </texture>
    <w>40</w>
    <h>47</h>
   </layer>
  </layer>

  <layer>
   <name>Title on</name>
   <type>switch</type>

   <layer>
    <name>Title left</name>
    <condition>
     <equals>
      <property alias="../../../../../../params/engine-num"/>
      <value>1</value>
     </equals>
    </condition>
    <type>text</type>
    <point-size>9</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>literal</type>
      <text>OPEN</text>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-47</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>Title default</name>
    <type>text</type>
    <point-size>9</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>literal</type>
      <text>OPEN</text>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>20</offset>
     </transformation>
    </transformations>
   </layer>

   <transformations>
    <transformation>
     <type>y-shift</type>
     <offset>24</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title off</name>
   <type>switch</type>

   <layer>
    <name>Title left</name>
    <condition>
     <equals>
      <property alias="../../../../../../params/engine-num"/>
      <value>1</value>
     </equals>
    </condition>
    <type>text</type>
    <point-size>9</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>literal</type>
      <text>SHUT</text>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-47</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>Title default</name>
    <type>text</type>
    <point-size>9</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>literal</type>
      <text>SHUT</text>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>22</offset>
     </transformation>
    </transformations>
   </layer>

   <transformations>
    <transformation>
     <type>y-shift</type>
     <offset>-25</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Toggle pump</name>
   <button>0</button>
   <x>-21</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/trans-valve"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>
 
</PropertyList>
