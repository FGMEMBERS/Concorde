<?xml version="1.0"?>

<!-- Hydraulical shut off valve :

     _ engine shut down.
     - pump shut off.
-->

<PropertyList>
 <name>Shut off Valve</name>
 <w-base>28</w-base>
 <h-base>28</h-base>

 <params>
  <control-cutoff>/controls/engines/engine[0]/cutoff</control-cutoff>
  <shut-pump>/controls/hydraulic/circuits/circuit[0]/shut1</shut-pump>
 </params>


 <layers>

  <layer>
   <name>valve</name>
   <type>switch</type>

   <layer>
    <name>open</name>
    <condition>
     <and>
      <not>
       <property alias="../../../../../../../params/control-cutoff"/>
      </not>
      <not>
       <property alias="../../../../../../../params/shut-pump"/>
      </not>
     </and>
    </condition>
    <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-open.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>28</w>
    <h>28</h>
   </layer>

   <layer>
    <name>shut</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-shut.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>28</w>
    <h>28</h>
   </layer>
  </layer>

 </layers>

</PropertyList>
