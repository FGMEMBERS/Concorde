<?xml version="1.0"?>

<!-- Reheat selector -->

<PropertyList>
 <name>Reheat selector</name>
 <w-base>28</w-base>
 <h-base>38</h-base>

 <params>
  <engine-reheat-select>/controls/engines/engine[0]/augmentation</engine-reheat-select>
 </params>


 <layers>

  <layer>
   <name>background enabled</name>
   <condition>
    <property alias="../../../../params/engine-reheat-select"/>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.png</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>28</w>
   <h>28</h>
   <transformations>
    <transformation>
     <type>y-shift</type>
     <offset>-10</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>background</name>
   <condition>
     <not>
      <property alias="../../../../../params/engine-reheat-select"/>
     </not>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.png</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>28</w>
   <h>28</h>
  </layer>

  <layer>
   <name>Title enabled</name>
   <condition>
    <property alias="../../../../params/engine-reheat-select"/>
   </condition>
   <type>text</type>
   <point-size>22</point-size>
   <color>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>-</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-10</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-23</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <condition>
     <not>
      <property alias="../../../../../params/engine-reheat-select"/>
     </not>
   </condition>
   <type>text</type>
   <point-size>22</point-size>
   <color>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>-</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-10</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-13</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>
 
 <actions>
  <action>
   <desc>Engine reheat</desc>
   <button>0</button>
   <x>-13</x>
   <y>-24</y>
   <w>28</w>
   <h>38</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/engine-reheat-select"/>
   </binding>
  </action>
 </actions>

</PropertyList>
