<?xml version="1.0"?>

<!--
-->

<PropertyList>

 <name>Digital Fuel Tank monitor display</name>
 <w-base>40</w-base>
 <h-base>6</h-base>

 <params>
  <tank-num>/consumables/fuel/tank[0]/tank-num</tank-num>
  <lbs-select>/consumables/fuel/tank[0]/level-lb</lbs-select>
  <content-select>/consumables/fuel/tank[0]/content-lb</content-select>
 </params>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>125</w>
    <h>20</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>57</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>10</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Number</name>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>text-value</type>
     <property alias="../../../../../params/tank-num"/>
     <format>%2s</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>4</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>kg display</name>
   <condition>
    <and>
     <greater-than-equals>
      <property alias="../../../../../../params/lbs-select"/>
      <value>1000.0</value>
     </greater-than-equals>
     <less-than>
      <property alias="../../../../../../params/lbs-select"/>
      <property n="1" alias="../../../../../../params/content-select"/>
     </less-than>
    </and>
   </condition>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property alias="../../../../../params/lbs-select"/>
     <scale>0.453592</scale>
     <format>%0.f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>30</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>4</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>kg display (full)</name>
   <condition>
    <greater-than-equals>
     <property alias="../../../../../params/lbs-select"/>
     <property n="1" alias="../../../../../params/content-select"/>
    </greater-than-equals>
   </condition>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>0.0</red>
    <green>1.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property alias="../../../../../params/lbs-select"/>
     <scale>0.453592</scale>
     <format>%0.f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>30</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>4</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>kg display (empty)</name>
   <condition>
    <less-than>
     <property alias="../../../../../params/lbs-select"/>
     <value>1000.0</value>
    </less-than>
   </condition>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>0.85</red>
    <green>0.85</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property alias="../../../../../params/lbs-select"/>
     <scale>0.453592</scale>
     <format>%0.f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>30</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>4</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>kg-Title</name>
   <type>text</type>
   <point-size>18</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>kg</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>92</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>6</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
