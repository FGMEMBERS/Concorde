<?xml version="1.0"?>

<!-- engine starter / relight, with right clickable areas :

     - starter requires voltage and air pressure.
     - relight (without starter) only requires voltage : effective start depends of JSBSim (enough speed).
-->

<PropertyList>
 <name>Engine Sarter</name>
 <w-base>102</w-base>
 <h-base>102</h-base>

 <params>
  <control-starter>/controls/engines/engine[0]/starter</control-starter>
  <control-relight>/controls/engines/engine[0]/relight</control-relight>
  <engine-relight>/systems/electrical/outputs/probe/ac-relight1</engine-relight>
  <air-pressure>/systems/air-bleed/engine[0]/cross-psi</air-pressure>
  <num>/engines/engine[0]/engine-num</num>
 </params>


 <layers>

  <layer>
   <name>Battery selector</name>
   <type>switch</type>

   <layer>
    <name>on</name>
    <condition>
     <property alias="../../../../../params/control-starter"/>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.31</y2>
    </texture>
    <w>40</w>
    <h>47</h>
   </layer>

   <layer>
    <name>3rd state</name>
    <condition>
     <property alias="../../../../../params/control-relight"/>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.74</y1>
     <x2>0.25</x2>
     <y2>1.0</y2>
    </texture>
    <w>40</w>
    <h>40</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>2.75</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>off</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.47</y1>
     <x2>0.25</x2>
     <y2>0.745</y2>
    </texture>
    <w>40</w>
    <h>42</h>
    <transformations>
    <transformation>
     <type>y-shift</type>
     <offset>1.5</offset>
    </transformation>
    </transformations>
   </layer>

   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-32</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title 3</name>
   <condition>
    <or>
     <equals>
      <property alias="../../../../../../params/num"/>
      <value>2</value>
     </equals>
     <equals>
      <property alias="../../../../../../params/num"/>
      <value>4</value>
     </equals>
    </or>
   </condition>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>RELIGHT</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-98</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>23</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title off</name>
   <condition>
    <or>
     <equals>
      <property alias="../../../../../../params/num"/>
      <value>2</value>
     </equals>
     <equals>
      <property alias="../../../../../../params/num"/>
      <value>4</value>
     </equals>
    </or>
   </condition>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>OFF</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-86</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-7</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title on</name>
   <condition>
    <or>
     <equals>
      <property alias="../../../../../../params/num"/>
      <value>2</value>
     </equals>
     <equals>
      <property alias="../../../../../../params/num"/>
      <value>4</value>
     </equals>
    </or>
   </condition>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>START</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-95</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-37</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Toggle Starter</name>
   <condition>
    <and>
     <not>
      <property alias="../../../../../../params/control-relight"/>
     </not>
     <greater-than>
      <property alias="../../../../../../params/engine-relight"/>
      <value>110.0</value>
     </greater-than>
     <greater-than-equals>
      <property alias="../../../../../../params/air-pressure"/>
      <value>35.0</value>
     </greater-than-equals>
    </and>
   </condition>
   <button>0</button>
   <x>-54</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/control-starter"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>Toggle Relight</name>
   <condition>
    <and>
     <not>
      <property alias="../../../../../../params/control-starter"/>
     </not>
     <greater-than>
      <property alias="../../../../../../params/engine-relight"/>
      <value>110.0</value>
     </greater-than>
    </and>
   </condition>
   <button>0</button>
   <x>-5</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/control-relight"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>

</PropertyList>
