<?xml version="1.0"?>

<!-- Concorde radio altimeter :

     - altitude must be offset of 11 ft, because of JSBSim.
     - the dialed altitude is without offset.
     - mouse 3rd button cancels decision height.
-->

<PropertyList>

 <name>Radio altimeter</name>
 <w-base>180</w-base>
 <h-base>180</h-base>

 <params>
  <voltage>/systems/electrical/outputs/standby-radio-alt</voltage>
 </params>


 <layers>

<!-- radio altimeter -->
  <layer>
   <name>background altimeter</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-radio-alt.rgb</path>
   </texture>
    <w>128</w>
    <h>128</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-25</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>10</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>OFF flag</name>
   <condition>
    <or>
     <less-than-equals>
      <property alias="../../../../../../params/voltage"/>
      <value>20.0</value>
     </less-than-equals>
     <not>
      <property>/instrumentation/radio-altimeter/serviceable</property>
     </not>
    </or>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.rgb</path>
    <x1>0.9375</x1>
    <y1>0.5</y1>
    <x2>1.0</x2>
    <y2>0.546875</y2>
   </texture>
   <w>30</w>
   <h>17</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>10</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>35</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <offset>-45</offset>
    </transformation>
   </transformations>
  </layer>
  
  <layer>
   <name>DH bug</name>
   <w>20</w>
   <h>15</h>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/hsi2.rgb</path>
    <x1>0.8515625</x1>
    <x2>0.953125</x2>
    <y1>0.359375</y1>
    <y2>0.4375</y2>
   </texture>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-25</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>10</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <property>/instrumentation/radio-altimeter/dial-decision-ft</property>
     <scale>0.36</scale>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>52</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>needle</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.rgb</path>
    <x1>0.8</x1>
    <y1>0.78125</y1>
    <x2>0.8375</x2>
    <y2>1.0</y2>
   </texture>
   <w>6</w>
   <h>30</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-25</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>10</offset>
    </transformation>
    <transformation>
     <condition>
      <and>
       <greater-than>
        <property alias="../../../../../../../../params/voltage"/>
        <value>20.0</value>
       </greater-than>
       <property>/instrumentation/radio-altimeter/serviceable</property>
      </and>
     </condition>
     <type>rotation</type>
     <property>/instrumentation/radio-altimeter/indicated-altitude-ft</property>
     <min>11.0</min>
     <max>2511.0</max>
     <scale>1.0</scale>
     <interpolation>
      <entry><ind>  11</ind><dep>  0</dep></entry> <!-- offset 11 ft because of JSBSim -->
      <entry><ind> 511</ind><dep>180</dep></entry>
      <entry><ind>1511</ind><dep>270</dep></entry>
      <entry><ind>2511</ind><dep>315</dep></entry>
     </interpolation>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>34</offset> <!-- needle tail is black -->
    </transformation>
   </transformations>
  </layer> 
  
  <layer>
   <name>glare shield</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/bezel1.rgb</path>
    <x1>0.5</x1>
    <y1>0.0</y1>
    <x2>1.0</x2>
    <y2>0.5</y2>
   </texture>
   <w>135</w>
   <h>135</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-23</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>8</offset>
    </transformation>
   </transformations>
  </layer>
 
<!-- decision altitude -->

  <layer>
   <name>DH Knob</name>
   <w>27</w>
   <h>27</h>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/hsi2.rgb</path>
    <x1>0.0</x1>
    <x2>0.171875</x2>
    <y1>0.0</y1>
    <y2>0.171875</y2>
   </texture>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>34</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-49</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <property>/instrumentation/radio-altimeter/dial-decision-ft</property>
     <scale>-5</scale>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Minus 10</name>
   <button>0</button>
   <x>22</x>
   <y>-62</y>
   <w>13</w>
   <h>26</h>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/radio-altimeter/decision-ft</property>
    <step>-10</step>
    <min>11</min>
    <max>511</max>
   </binding>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/radio-altimeter/dial-decision-ft</property>
    <step>-10</step>
    <min>0</min>
    <max>500</max>
   </binding>
  </action>

  <action>
   <name>Plus 10</name>
   <button>0</button>
   <x>35</x>
   <y>-62</y>
   <w>13</w>
   <h>26</h>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/radio-altimeter/decision-ft</property>
    <step>10</step>
    <min>11</min>
    <max>511</max>
   </binding>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/radio-altimeter/dial-decision-ft</property>
    <step>10</step>
    <min>0</min>
    <max>500</max>
   </binding>
  </action>

  <action>
   <name>Cancel Decision Height warning</name>
   <condition>
    <less-than>
     <property>/instrumentation/radio-altimeter/indicated-altitude-ft</property>
     <value>20</value>              <!-- don't disable in flight, because the reset is slow -->
    </less-than>
   </condition>
   <button>1</button>
   <x>22</x>
   <y>-62</y>
   <w>26</w>
   <h>26</h>
   <binding>
    <command>property-assign</command>
    <property>/systems/gpws/decision-height</property>
    <value>false</value>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>

</PropertyList>
