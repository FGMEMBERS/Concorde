<?xml version="1.0"?>

<!-- Concorde radio altimeter -->

<PropertyList>

 <name>Radio altimeter</name>
 <w-base>100</w-base>
 <h-base>100</h-base>

 <layers>

<!-- radio altimeter -->
  <layer>
   <name>background altimeter</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>60</w>
    <h>20</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>70</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>10</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title altimeter</name>
   <type>text</type>
   <point-size>15</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>Height</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>45</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>30</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Elevation AGL</name>
   <condition>
    <greater-than-equals>
     <property>/position/altitude-agl-ft</property>
     <value>2511</value>
    </greater-than-equals>
   </condition>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>2500</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>52</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>3</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Elevation AGL (above 2500 ft)</name>
   <condition>
    <less-than>
     <property>/position/altitude-agl-ft</property>
     <value>2511</value>
    </less-than>
   </condition>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/position/altitude-agl-ft</property>
     <format>%0.f</format>
     <offset>-10.8</offset> <!-- compensate the height of cockpit (JBSim) -->
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>52</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>3</offset>
    </transformation>
   </transformations>
  </layer>

<!-- decision altitude -->
  <layer>
   <name>background decision altitude</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>60</w>
    <h>20</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>70</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-20</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Incr 10</name>
   <type>text</type>
   <point-size>18</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>+</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>42</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-20</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Decr 10</name>
   <type>text</type>
   <point-size>18</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>-</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>44</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-31</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Decision altitude display</name>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>0.85</red>
    <green>0.85</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/instrumentation/radio-altimeter/decision-ft</property>
     <format>%3.0f</format>
     <offset>-10.8</offset> <!-- compensate the height of cockpit (JBSim) -->
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>62</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-27</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Minus 10</name>
   <button>0</button>
   <x>42</x>
   <y>-33</y>
   <w>12</w>
   <h>12</h>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/radio-altimeter/decision-ft</property>
    <step>-10</step>
    <min>0</min>
    <max>1000</max>
    <wrap>1</wrap>
   </binding>
  </action>

  <action>
   <name>Plus 10</name>
   <button>0</button>
   <x>42</x>
   <y>-20</y>
   <w>12</w>
   <h>12</h>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/radio-altimeter/decision-ft</property>
    <step>10</step>
    <min>0</min>
    <max>1000</max>
    <wrap>1</wrap>
   </binding>
  </action>

 </actions>

</PropertyList>
