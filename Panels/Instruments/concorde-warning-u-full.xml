<?xml version="1.0"?>

<!-- Warning on tank below 80 %
-->

<PropertyList>
 <name>Warning underfull</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <params>
  <lbs-select>/consumables/fuel/tank[0]/level-lbs</lbs-select>
  <under-full-select>/consumables/fuel/tank[0]/under-full-lb</under-full-select>
 </params>


 <layers>

<!-- translucent lens -->  
  <layer>
   <name>Warning light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <greater-than>
      <property alias="../../../../../../params/lbs-select"/>
      <property n="1" alias="../../../../../../params/under-full-select"/>
     </greater-than>
    </condition>
    <layer>
     <name>lamp off</name>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.png</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>20</h>
    </layer>
    <layer>
     <name>background off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.png</path>
       <x1>0.7</x1>
       <y1>0.8</y1>
       <x2>1.0</x2>
       <y2>0.9</y2>
     </texture>
     <w>104</w>
     <h>20</h>
    </layer>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>

    <layer>
     <name>lamp on</name>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.png</path>
     <x1>0.35</x1>
     <y1>0.0</y1>
     <x2>0.4</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>20</h>
    </layer>
    <layer>
     <name>background on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-yellow-warning.png</path>
      <x1>0.7</x1>
      <y1>0.8</y1>
      <x2>1.0</x2>
      <y2>0.9</y2>
     </texture>
     <w>104</w>
     <h>20</h>
    </layer>
   </layer>

  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>23</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>U/FULL</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-45</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-4</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
