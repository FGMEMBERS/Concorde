<?xml version="1.0"?>

<!-- Fault on intake hydraulics :

     - failure of the main hydraulic operation.
-->

<PropertyList>
 <name>Fault on intake hydraulics</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <params>
  <pressure-psi>/systems/hydraulic/circuits/circuit[0]/pressure-psi</pressure-psi>
 </params>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>fault light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and include="concorde-cond-test-eng-forward.xml">
       <greater-than>
        <property alias="../../../../../../../../params/pressure-psi"/>
        <value>3400.0</value>
       </greater-than>
      </and>
     </or>
    </condition>

    <layer include="concorde-bulb-off.xml">
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-hyd.rgb</path>
      <x1>0.0</x1>
      <y1>0.2</y1>
      <x2>1.0</x2>
      <y2>0.8</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>

    <layer include="concorde-bulb-on.xml">
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-hyd.rgb</path>
      <x1>0.0</x1>
      <y1>0.2</y1>
      <x2>1.0</x2>
      <y2>0.8</y2>
     </texture>
     <w>104</w>
     <h>26</h>
     <emissive>true</emissive>
    </layer>
   </layer>
  </layer>

 </layers>

</PropertyList>
