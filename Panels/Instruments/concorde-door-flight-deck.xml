<?xml version="1.0"?>

<!-- Flight deck door :

     - open allows access from outside.
     - temporarily disabled.
-->

<PropertyList>

 <name>Flight deck door</name>
 <w-base>104</w-base>
 <h-base>156</h-base>

 <layers>

  <layer>
   <name>Door</name>
   <type>switch</type>

   <layer>
    <name>normal</name>
    <condition>
     <property>/controls/doors/flight-deck/normal</property>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.31</y2>
    </texture>
    <w>40</w>
    <h>47</h>
   </layer>

   <layer>
    <name>open</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.74</y1>
     <x2>0.25</x2>
     <y2>1.0</y2>
    </texture>
    <w>40</w>
    <h>40</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>2.75</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>13</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>F/D DOOR</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-35</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>55</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Open Title</name>
   <type>text</type>
   <point-size>13</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>OPEN</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>30</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Normal Title</name>
   <type>text</type>
   <point-size>13</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>NORMAL</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-31</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-34</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

