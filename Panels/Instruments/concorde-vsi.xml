<?xml version="1.0"?>

<!-- Instantaneous Vertical Speed Indicator 
-->

<PropertyList>

 <name>Digital IVSI display</name>
 <w-base>10</w-base>
 <h-base>40</h-base>

 <layers>

  <layer>
   <name>instrument background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>38</w>
    <h>75</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>15</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>60</offset>
    </transformation>
   </transformations>
  </layer>

<!-- BACKGROUND -->

  <layer>
   <name>background (DN)</name>
   <condition>
     <less-than-equals>
      <property>/instrumentation/instantaneous-vertical-speed-indicator/indicated-speed-fps</property>
      <value>0.008</value> <!-- avoids flikker on ground -->
     </less-than-equals>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-blue-ground-bg.rgb</path>
   </texture>
    <w>35</w>
    <h>70</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>15</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>60</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>background (UP)</name>
   <condition>
     <greater-than>
      <property>/instrumentation/instantaneous-vertical-speed-indicator/indicated-speed-fps</property>
      <value>0.008</value>
     </greater-than>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-azure-sky-bg.rgb</path>
   </texture>
    <w>35</w>
    <h>70</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>15</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>60</offset>
    </transformation>
   </transformations>
  </layer>

<!-- VERTICAL SPEED -->

  <layer>
   <condition>
    <and>
     <less-than-equals>
      <property>/instrumentation/instantaneous-vertical-speed-indicator/indicated-speed-fps</property>
      <value>0.008</value>
     </less-than-equals>
     <greater-than-equals>
      <property>/instrumentation/instantaneous-vertical-speed-indicator/indicated-speed-fps</property>
      <value>0.0</value>
     </greater-than-equals>
    </and>
   </condition>
   <name>VSI display (ground 0 plus)</name>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/instrumentation/instantaneous-vertical-speed-indicator/indicated-speed-fps</property>
     <format>%1.1f</format> <!-- can be negativ (sign) -->
     <scale>0.06</scale> <!-- X 60 -->
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>4</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>64</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <condition>
    <and>
     <less-than>
      <property>/instrumentation/instantaneous-vertical-speed-indicator/indicated-speed-fps</property>
      <value>0.0</value>
     </less-than>
     <greater-than-equals>
      <property>/instrumentation/instantaneous-vertical-speed-indicator/indicated-speed-fps</property>
      <value>-0.008</value>
     </greater-than-equals>
    </and>
   </condition>
   <name>VSI display (ground 0 minus)</name>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/instrumentation/instantaneous-vertical-speed-indicator/indicated-speed-fps</property>
     <format>%1.1f</format> <!-- can be negativ (sign) -->
     <scale>-0.06</scale> <!-- X 60 -->
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>4</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>64</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <condition>
     <less-than>
      <property>/instrumentation/instantaneous-vertical-speed-indicator/indicated-speed-fps</property>
      <value>-0.008</value>
     </less-than>
   </condition>
   <name>VSI display (DN)</name>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/instrumentation/instantaneous-vertical-speed-indicator/indicated-speed-fps</property>
     <format>%1.1f</format> <!-- can be negativ (sign) -->
     <scale>-0.06</scale> <!-- X 60 -->
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>4</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>64</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <condition>
     <greater-than>
      <property>/instrumentation/instantaneous-vertical-speed-indicator/indicated-speed-fps</property>
      <value>0.008</value>
     </greater-than>
   </condition>
   <name>VSI display (UP)</name>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>0.5</red>
    <green>0.5</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/instrumentation/instantaneous-vertical-speed-indicator/indicated-speed-fps</property>
     <format>%1.1f</format> <!-- can be negativ (sign) -->
     <scale>0.06</scale> <!-- X 60 -->
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>4</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>64</offset>
    </transformation>
   </transformations>
  </layer>

<!-- UP / DOWN -->

  <layer>
   <name>Title (DN)</name>
   <condition>
     <less-than-equals>
      <property>/instrumentation/instantaneous-vertical-speed-indicator/indicated-speed-fps</property>
      <value>0.008</value>
     </less-than-equals>
   </condition>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>DN</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>3</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>35</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title (UP)</name>
   <condition>
     <greater-than>
      <property>/instrumentation/instantaneous-vertical-speed-indicator/indicated-speed-fps</property>
      <value>0.008</value>
     </greater-than>
   </condition>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>0.5</red>
    <green>0.5</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>UP</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>4</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>35</offset>
    </transformation>
   </transformations>
  </layer>

<!-- UNIT -->

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>FT/MINx1000</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>7</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
