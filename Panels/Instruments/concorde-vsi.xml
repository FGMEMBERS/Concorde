<?xml version="1.0"?>

<!--
-->

<PropertyList>

 <name>Digital VSI display</name>
 <w-base>10</w-base>
 <h-base>40</h-base>

 <layers>

  <layer>
   <name>background</name>
   <condition>
     <less-than-equals>
      <property>/instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
      <value>0</value>
     </less-than-equals>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>35</w>
    <h>70</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>15</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>60</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>background (UP)</name>
   <condition>
     <greater-than>
      <property>/instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
      <value>0</value>
     </greater-than>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-azure-bg.rgb</path>
   </texture>
    <w>35</w>
    <h>70</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>15</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>60</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <condition>
     <less-than-equals>
      <property>/instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
      <value>0</value>
     </less-than-equals>
   </condition>
   <name>VSI display</name>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
     <format>%1.1f</format> <!-- can be negativ (sign) -->
     <scale>-0.001</scale>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>4</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>64</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <condition>
     <greater-than>
      <property>/instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
      <value>0</value>
     </greater-than>
   </condition>
   <name>VSI display (UP)</name>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>0.5</red>
    <green>0.5</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
     <format>%1.1f</format> <!-- can be negativ (sign) -->
     <scale>0.001</scale>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>4</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>64</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <condition>
     <less-than-equals>
      <property>/instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
      <value>0</value>
     </less-than-equals>
   </condition>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>DN</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>35</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title (UP)</name>
   <condition>
     <greater-than>
      <property>/instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
      <value>0</value>
     </greater-than>
   </condition>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>0.5</red>
    <green>0.5</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>UP</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>35</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>FT/MINx1000</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-30</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>2</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
