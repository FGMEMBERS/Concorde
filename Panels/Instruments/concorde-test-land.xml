<?xml version="1.0"?>

<!-- Test of landing lights -->

<PropertyList>
 <name>Test Landing Lights</name>
 <w-base>26</w-base>
 <h-base>52</h-base>

 <params>
  <test>/controls/autoflight/autopilot[0]/test-land</test>
 </params>


 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-knob.png</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
   </texture>
   <w>26</w>
   <h>26</h>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>11</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>Test</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-11</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-25</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>
 
 <actions>

  <action>
   <desc>Test lights</desc>
   <button>0</button>
   <x>-13</x>
   <y>-14</y>
   <w>26</w>
   <h>26</h>
   <binding>
    <command>property-assign</command>
    <property alias="../../../../params/test"/>
    <value>true</value>
    <repeatable>true</repeatable>
   </binding>
   <mod-up>
    <binding>
     <command>property-assign</command>
     <property alias="../../../../../params/test"/>
     <value>false</value>
    </binding>
    <binding>
     <command>property-toggle</command>
     <property>/instrumentation/generic/click</property>
    </binding>
   </mod-up>
  </action>

 </actions>

</PropertyList>
