<?xml version="1.0"?>

<!-- Alarm on Electrical :

     - no voltage on DC Essential Buses.
     - no voltage on DC Main Buses.
-->

<PropertyList>
 <name>Alarm on Electrical</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Alarm light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and include="concorde-cond-voltage-dc-main.xml">
       <or include="concorde-cond-test-mws.xml"/>
       <greater-than>
        <property>/systems/electrical/outputs/probe/dc-essentiala</property>
        <value>20.0</value>
       </greater-than>
       <greater-than>
        <property>/systems/electrical/outputs/probe/dc-essentialb</property>
        <value>20.0</value>
       </greater-than>
      </and>
     </or>
    </condition>

    <layer include="concorde-bulb-off.xml">
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-elec.rgb</path>
      <x1>0.0</x1>
      <y1>0.27</y1>
      <x2>1.0</x2>
      <y2>0.73</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>

    <layer include="concorde-bulb-on.xml">
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-elec.rgb</path>
      <x1>0.0</x1>
      <y1>0.27</y1>
      <x2>1.0</x2>
      <y2>0.73</y2>
     </texture>
     <w>104</w>
     <h>26</h>
     <emissive>true</emissive>
    </layer>
   </layer>
  </layer>

 </layers>

</PropertyList>
