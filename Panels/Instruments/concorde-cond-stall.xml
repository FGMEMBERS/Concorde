<?xml version="1.0"?>

<!-- Alarm on Stall :

     - FDM.
     - pitch above 16.5 deg. 
     - AFT M/CG warning.
     - Vc less than Vla minus 20 kt.
-->

<PropertyList>

 <or>
  <and>
   <property>/sim/alarms/stall-warning</property>
   <greater-than> <!-- irritating on ground -->
    <property>/position/altitude-agl-ft</property>
    <value>20</value>
   </greater-than>
  </and>
  <greater-than>
   <property>/orientation/pitch-deg</property>
   <value>16.5</value>
  </greater-than>
  <greater-than>
   <property>instrumentation/cg/percent</property>
   <property n="1">instrumentation/cg/max-percent</property>
  </greater-than>
  <and>
   <greater-than-equals>
    <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    <value>41000</value>
   </greater-than-equals>
   <less-than>
    <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <value>280</value> <!-- Vla 300 kt -->
   </less-than>
  </and>
  <and>
   <less-than>
    <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    <value>41000</value>
   </less-than>
   <greater-than>
    <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    <value>15000</value>
   </greater-than>
   <less-than>
    <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <value>230</value> <!-- Vla 250 kt -->
   </less-than>
  </and>
 </or>

</PropertyList>
