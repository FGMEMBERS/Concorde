<?xml version="1.0"?>

<!-- Test of brakes temperature warning lights :

     - sends highest brakes temperature.
-->

<PropertyList>
 <name>Test Brakes</name>
 <w-base>130</w-base>
 <h-base>52</h-base>


 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-knob.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
   </texture>
   <w>26</w>
   <h>26</h>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>TEST</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-60</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-10</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>
 
 <actions>

  <action>
   <desc>Test</desc>
   <button>0</button>
   <x>-13</x>
   <y>-13</y>
   <w>25</w>
   <h>25</h>
   <binding>
    <command>property-assign</command>
    <property>/controls/gear/brake-test</property>
    <value>true</value>
    <repeatable>true</repeatable>
   </binding>
   <binding>
    <command>property-assign</command>
    <property>/systems/gear/brake-test-degc</property>
    <property n="1">/systems/gear/brake-degc</property>
   </binding>
   <mod-up>
    <binding>
     <command>property-assign</command>
     <property>/controls/gear/brake-test</property>
     <value>false</value>
    </binding>
    <binding>
     <command>property-assign</command>
     <property>/systems/gear/brake-test-degc</property>
     <value>0.0</value>
    </binding>
    <binding>
     <command>property-toggle</command>
     <property>/instrumentation/generic/click</property>
    </binding>
   </mod-up>
  </action>

 </actions>

</PropertyList>
