<PropertyList>

 <name>Gear</name>
 <w-base>40</w-base>
 <h-base>100</h-base>

 <layers>
  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/flaps.rgb</path>
    <x1>0.988</x1>
    <y1>0.25</y1>
    <x2>.99</x2>
    <y2>0.62</y2>
   </texture>    
   <w>5</w>
   <h>130</h>
   <transformations>
    <transformation>
     <type>y-shift</type>
     <offset>-10</offset>
    </transformation>
   </transformations>
  </layer> 

  <layer>
   <name>Landing Gear</name>
   <type>text</type>
   <point-size>5</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>L/GEAR</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-10</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>108</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Up</name>
   <type>text</type>
   <point-size>5</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>UP</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-4</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>85</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Handle</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/handles.rgb</path>
    <x1>0.387</x1>
    <x2>0.525</x2>
    <y1>0.5</y1>
    <y2>1.0</y2>
   </texture>
   <w>15</w>
   <h>41</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <condition>
      <property>/controls/gear/neutral</property>
     </condition>
     <offset>12</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <condition>
      <property>/controls/gear/neutral</property>
     </condition>
     <offset>-75</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <condition>
      <and>
       <property>/controls/gear/gear-down</property>
       <not>
        <property>/controls/gear/neutral</property>
       </not>
      </and>
     </condition>
     <offset>-120</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>50</offset>
    </transformation>
    <transformation>
    <type>rotation</type>
    <offset>180</offset>
    </transformation>
   </transformations>     
  </layer>

  <layer>
   <name>Neutral</name>
   <type>text</type>
   <point-size>5</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>N</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>10</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Down</name>
   <type>text</type>
   <point-size>5</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>DOWN</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-8</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-120</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

<!-- on the ground, up selection is inhibited -->

 <actions>

  <action>
   <name>extend</name>
   <condition include="concorde-cond-gear-down.xml"/>
   <button>0</button>
   <x>-7</x>
   <y>-50</y>
   <w>14</w>
   <h>96</h>
   <binding>
    <command>property-toggle</command>
    <property>/controls/gear/gear-down</property>
   </binding>
  </action> 

  <action>
   <name>retract</name>
   <condition include="concorde-cond-gear-up.xml"/>
   <button>0</button>
   <x>-7</x>
   <y>-50</y>
   <w>14</w>
   <h>96</h>
   <binding>
    <command>property-toggle</command>
    <property>/controls/gear/gear-down</property>
   </binding>
  </action> 

  <action>
   <name>neutral</name>
   <condition>
    <not>
     <property>/controls/gear/gear-down</property>
    </not>
   </condition>
   <button>0</button>
   <x>9</x>
   <y>-20</y>
   <w>10</w>
   <h>46</h>
   <binding>
    <command>property-toggle</command>
    <property>/controls/gear/neutral</property>
   </binding>
  </action> 

 </actions>

</PropertyList>
