<?xml version="1.0"?>

<!-- Cross bleed valve switch :

     - optional label to the right.
-->

<PropertyList>

 <name>Cross bleed valve switch</name>
 <w-base>52</w-base>
 <h-base>52</h-base>

 <params>
  <cross-valve>/controls/pneumatic/engine[0]/cross-bleed-valve</cross-valve>
  <engine-num>/engines/engine[0]/engine-num</engine-num>
 </params>


 <layers>

  <layer>
   <name>valve switch</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <condition>
     <not>
      <property alias="../../../../../../params/cross-valve"/>
     </not>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.31</y2>
    </texture>
    <w>40</w>
    <h>47</h>
   </layer>
   <layer>
    <name>on</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.74</y1>
     <x2>0.25</x2>
     <y2>1.0</y2>
    </texture>
    <w>40</w>
    <h>40</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>2.75</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>

  <layer>
   <name>Title on</name>
   <condition>
    <or>
     <equals>
      <property alias="../../../../../../params/engine-num"/>
      <value>1</value>
     </equals>
     <equals>
      <property alias="../../../../../../params/engine-num"/>
      <value>3</value>
     </equals>
    </or>
   </condition>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>OPEN</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>8</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>25</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title off</name>
   <condition>
    <or>
     <equals>
      <property alias="../../../../../../params/engine-num"/>
      <value>1</value>
     </equals>
     <equals>
      <property alias="../../../../../../params/engine-num"/>
      <value>3</value>
     </equals>
    </or>
   </condition>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>SHUT</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>11</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-26</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Toggle valve</name>
   <button>0</button>
   <x>-21</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/cross-valve"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>
 
</PropertyList>
