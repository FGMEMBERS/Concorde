<?xml version="1.0"?>

<!-- DC voltmeter :

     - electrical systems only provides amps.
-->

<PropertyList>

 <name>DC voltmeter</name>
 <w-base>10</w-base>
 <h-base>40</h-base>


 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
   <w>40</w>
   <h>30</h>
  </layer>

  <layer>
   <name>Voltage</name>
   <type>switch</type>

   <layer>
    <name>Battery A</name>
    <condition>
     <and>
      <equals>
       <property>/controls/electric/dc/voltmeter</property> 
       <value>-2.0</value>
      </equals>
      <greater-than>
       <property>/systems/electrical/suppliers/battery[0]</property>
       <value>0.0</value>
      </greater-than>
     </and>
    </condition>
    <type>text</type>
    <font>led</font>
    <point-size>6</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
     <type>literal</type>
     <text>26</text>
     </chunk>
    </chunks>
   </layer>

   <layer>
    <name>Essential A</name>
    <condition>
     <and>
      <equals>
       <property>/controls/electric/dc/voltmeter</property> 
       <value>-1.0</value>
      </equals>
      <greater-than>
       <property>/systems/electrical/outputs/probe/dc-essentiala</property>
       <value>0.0</value>
      </greater-than>
     </and>
    </condition>
    <type>text</type>
    <font>led</font>
    <point-size>6</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
     <type>literal</type>
     <text>26</text>
     </chunk>
    </chunks>
   </layer>

   <layer>
    <name>Main A</name>
    <condition>
     <and>
      <equals>
       <property>/controls/electric/dc/voltmeter</property> 
       <value>0.0</value>
      </equals>
      <greater-than>
       <property>/systems/electrical/outputs/probe/dc-maina</property>
       <value>0.0</value>
      </greater-than>
     </and>
    </condition>
    <type>text</type>
    <font>led</font>
    <point-size>6</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
     <type>literal</type>
     <text>26</text>
     </chunk>
    </chunks>
   </layer>

   <layer>
    <name>Main B</name>
    <condition>
     <and>
      <equals>
       <property>/controls/electric/dc/voltmeter</property> 
       <value>1.0</value>
      </equals>
      <greater-than>
       <property>/systems/electrical/outputs/probe/dc-mainb</property>
       <value>0.0</value>
      </greater-than>
     </and>
    </condition>
    <type>text</type>
    <font>led</font>
    <point-size>6</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
     <type>literal</type>
     <text>26</text>
     </chunk>
    </chunks>
   </layer>

   <layer>
    <name>Essential B</name>
    <condition>
     <and>
      <equals>
       <property>/controls/electric/dc/voltmeter</property> 
       <value>2.0</value>
      </equals>
      <greater-than>
       <property>/systems/electrical/outputs/probe/dc-essentialb</property>
       <value>0.0</value>
      </greater-than>
     </and>
    </condition>
    <type>text</type>
    <font>led</font>
    <point-size>6</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
     <type>literal</type>
     <text>26</text>
     </chunk>
    </chunks>
   </layer>

   <layer>
    <name>Battery B</name>
    <condition>
     <and>
      <equals>
       <property>/controls/electric/dc/voltmeter</property> 
       <value>3.0</value>
      </equals>
      <greater-than>
       <property>/systems/electrical/suppliers/battery[1]</property>
       <value>0.0</value>
      </greater-than>
     </and>
    </condition>
    <type>text</type>
    <font>led</font>
    <point-size>6</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
     <type>literal</type>
     <text>26</text>
     </chunk>
    </chunks>
   </layer>

   <layer>
    <name>No voltage</name>
    <type>text</type>
    <font>led</font>
    <point-size>6</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
     <type>literal</type>
     <text>0</text>
     </chunk>
    </chunks>
   </layer>

   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-7</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-6</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Unit</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>V</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>y-shift</type>
     <offset>-27</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
