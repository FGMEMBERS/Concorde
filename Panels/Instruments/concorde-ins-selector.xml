<?xml version="1.0"?>

<!-- Inertial Navigation System selector :

     - LED supposed green.
-->

<PropertyList>
 <name>INS selector</name>
 <w-base>50</w-base>
 <h-base>50</h-base>

 <params>
  <on-ctrl>/instrumentation/ins/on</on-ctrl>
  <selector-ctrl>/instrumentation/ins/selector</selector-ctrl>
  <wpt-ctrl>/instrumentation/ins/waypoint</wpt-ctrl>
 </params>


 <layers>

  <layer>
   <name>background led</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>50</w>
   <h>50</h>
  </layer>

  <layer>
   <name>selector</name>
   <type>switch</type>
   <condition>
    <and include="concorde-cond-voltage-inst.xml">
     <property alias="../../../../../params/on-ctrl"/>
    </and>
   </condition>

<!-- WAYPOINT -->

<!-- even if no waypoint and no selection -->

   <layer>
    <name>Title waypoint</name>
    <condition>
     <and>
      <greater-than-equals>
       <property alias="../../../../../../../params/selector-ctrl"/>
       <value>1</value>
      </greater-than-equals>
      <less-than-equals>
       <property alias="../../../../../../../params/selector-ctrl"/>
       <value>2</value>
      </less-than-equals>
      <not-equals>
       <property alias="../../../../../../../params/wpt-ctrl"/>
       <value type="double">1</value>
      </not-equals>
      <not-equals>
       <property alias="../../../../../../../params/wpt-ctrl"/>
       <value type="double">2</value>
      </not-equals>
     </and>
    </condition>
    <type>text</type>
    <font>led</font>
    <point-size>12</point-size>
    <color>
     <red>0.0</red>
     <green>0.85</green>
     <blue>0.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>literal</type>
      <text>1</text>
     </chunk>
    </chunks>
   </layer>

<!-- NEXT WAYPOINT -->

   <layer>
    <name>Title next waypoint</name>
    <condition>
     <and>
      <greater-than-equals>
       <property alias="../../../../../../../params/selector-ctrl"/>
       <value>1</value>
      </greater-than-equals>
      <less-than-equals>
       <property alias="../../../../../../../params/selector-ctrl"/>
       <value>2</value>
      </less-than-equals>
      <equals>
       <property alias="../../../../../../../params/wpt-ctrl"/>
       <value type="double">1</value>
      </equals>
     </and>
    </condition>
    <type>text</type>
    <font>led</font>
    <point-size>12</point-size>
    <color>
     <red>0.0</red>
     <green>0.85</green>
     <blue>0.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>literal</type>
      <text>2</text>
     </chunk>
    </chunks>
   </layer>

<!-- DESTINATION -->

   <layer>
    <name>Title destination</name>
    <condition>
     <and>
      <greater-than-equals>
       <property alias="../../../../../../../params/selector-ctrl"/>
       <value>1</value>
      </greater-than-equals>
      <less-than-equals>
       <property alias="../../../../../../../params/selector-ctrl"/>
       <value>2</value>
      </less-than-equals>
      <equals>
       <property alias="../../../../../../../params/wpt-ctrl"/>
       <value type="double">2</value>
      </equals>
     </and>
    </condition>
    <type>text</type>
    <font>led</font>
    <point-size>12</point-size>
    <color>
     <red>0.0</red>
     <green>0.85</green>
     <blue>0.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>literal</type>
      <text>L</text>
     </chunk>
    </chunks>
   </layer>

<!-- END INS -->

   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-5</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-10</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
