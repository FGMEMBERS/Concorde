<?xml version="1.0"?>

<!-- Autoland mode armed -->

<PropertyList>
 <name>Autoland armed</name>
 <w-base>40</w-base>
 <h-base>20</h-base>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Alarm light</name>
   <type>switch</type>
    <layer>
     <name>on</name>
     <condition>
      <equals>
       <property>/autopilot/locks/vertical</property>
       <value>autoland-armed</value>
      </equals>
     </condition>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.31</x1>
     <y1>0.0</y1>
     <x2>0.44</x2>
     <y2>0.095</y2>
     </texture>
     <w>110</w>
     <h>30</h>
    </layer>
    <layer>
     <name>off</name>
     <condition>
      <not-equals>
       <property>/autopilot/locks/vertical</property>
       <value>autoland-armed</value>
      </not-equals>
     </condition>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
     </texture>
     <w>110</w>
     <h>30</h>
   </layer>
  </layer>

  <layer>
   <name>background lighted</name>
   <condition>
    <equals>
     <property>/autopilot/locks/vertical</property>
     <value>autoland-armed</value>
    </equals>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-orange-button.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>110</w>
   <h>30</h>
  </layer>

  <layer>
   <name>background</name>
   <condition>
    <not-equals>
     <property>/autopilot/locks/vertical</property>
     <value>autoland-armed</value>
    </not-equals>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>110</w>
   <h>30</h>
  </layer>

 </layers>

</PropertyList>
