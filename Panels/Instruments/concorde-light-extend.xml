<?xml version="1.0"?>

<!-- Extent/retract light switch :

     - Nasal doesn't move, when no voltage.
     - double switch, because text would disturb the 2nd switch.
-->

<PropertyList>

 <name>Extend/retract switch</name>
 <w-base>156</w-base>
 <h-base>78</h-base>

 <params>
  <light-extend>/controls/lighting/external/main-landing[0]/extend</light-extend>
  <light-extend2>/controls/lighting/external/main-landing[1]/extend</light-extend2>
 </params>


 <layers>

  <layer>
   <name>switch</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <condition>
     <not>
      <property alias="../../../../../../params/light-extend"/>
     </not>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.31</y2>
    </texture>
    <w>40</w>
    <h>47</h>
   </layer>

   <layer>
    <name>on</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.74</y1>
     <x2>0.25</x2>
     <y2>1.0</y2>
    </texture>
    <w>40</w>
    <h>40</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>2.75</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>

  <layer>
   <name>On Title</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>EXTEND</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>7</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>30</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Off Title</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>RETRACT</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>3</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-34</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>switch 2</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <condition>
     <not>
      <property alias="../../../../../../params/light-extend2"/>
     </not>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.31</y2>
    </texture>
    <w>40</w>
    <h>47</h>
   </layer>

   <layer>
    <name>on</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.74</y1>
     <x2>0.25</x2>
     <y2>1.0</y2>
    </texture>
    <w>40</w>
    <h>40</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>2.75</offset>
     </transformation>
    </transformations>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>53</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>extend light</name>
   <button>0</button>
   <x>-22</x>
   <y>-19</y>
   <w>44</w>
   <h>44</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/light-extend"/>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.lightingsystem.extendexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>extend light 2</name>
   <button>0</button>
   <x>32</x>
   <y>-19</y>
   <w>44</w>
   <h>44</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/light-extend2"/>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.lightingsystem.extendexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>
 
</PropertyList>
