<?xml version="1.0"?>

<PropertyList>

 <name>Wiper override switch</name>
 <w-base>52</w-base>
 <h-base>156</h-base>

 <layers>

  <layer>
   <name></name>
   <type>switch</type>

   <layer include="concorde-switch-on.xml">
    <name>on</name>
    <condition>
     <not>
      <property>/controls/nose-visor/wiper-override</property>
     </not>
    </condition>
   </layer>

   <layer include="concorde-switch-off.xml">
    <name>off</name>
   </layer>
  </layer>

  <layer>
   <name>On Title</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>NORMAL</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-23</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>30</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Off Title</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>WIPER</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-34</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Off Title 2</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>O/RIDE</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-21</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-49</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>toggle switch</name>
   <button>0</button>
   <x>-22</x>
   <y>-19</y>
   <w>44</w>
   <h>44</h>
   <binding>
    <command>property-toggle</command>
    <property>/controls/nose-visor/wiper-override</property>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>
 
</PropertyList>
