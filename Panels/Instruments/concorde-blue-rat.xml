<?xml version="1.0"?>

<!-- Indicator of RAT test
-->

<PropertyList>
 <name>RAT test</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>

<!-- translucent lens -->  
  <layer>
   <name>Selection light</name>
   <type>switch</type>

   <layer>
    <name>lamp off</name>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and>
       <or include="concorde-cond-test-eng-forward.xml"/> <!-- bug -->
       <not-equals>
        <property>/systems/hydraulic/rat/test</property>
        <value>on</value>
       </not-equals>
      </and>
     </or>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>20</h>
   </layer>
   <layer>
    <name>lamp on</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.35</x1>
     <y1>0.0</y1>
     <x2>0.4</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>20</h>
   </layer>
  </layer>

  <layer>
   <name>background on</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-blue-test.rgb</path>
    <x1>0.0</x1>
    <y1>0.29</y1>
    <x2>1.0</x2>
    <y2>0.71</y2>
   </texture>
   <w>104</w>
   <h>20</h>
  </layer>

 </layers>

</PropertyList>
