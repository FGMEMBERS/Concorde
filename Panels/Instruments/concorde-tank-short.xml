<?xml version="1.0"?>

<!-- Fuel tank without unit -->

<PropertyList>

 <name>Digital Fuel Tank monitor display</name>
 <w-base>40</w-base>
 <h-base>6</h-base>

 <params>
  <tank-num>/consumables/fuel/tank[0]/tank-num</tank-num>
  <lbs-select>/consumables/fuel/tank[0]/level-lbs</lbs-select>
 </params>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>90</w>
    <h>20</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>98</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>10</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Number</name>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>text-value</type>
     <property alias="../../../../../params/tank-num"/>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>60</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>4</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>kg display</name>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property alias="../../../../../params/lbs-select"/>
     <scale>0.453592</scale>
     <format>%0.f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>87</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>4</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
