<?xml version="1.0"?>

<!-- Aircraft weight -->

<PropertyList>

 <name>Aircraft Weight</name>
 <w-base>40</w-base>
 <h-base>10</h-base>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>60</w>
    <h>20</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>28</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>10</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Aircraft Weight display</name>
   <condition include="concorde-cond-voltage-inst.xml"/>
   <type>text</type>
   <font>led</font>
   <point-size>6</point-size>
   <color>
    <red>1.0</red>
    <green>0.7</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>fdm/jsbsim/inertia/weight-lbs</property>
     <format>%5.0f</format>
     <scale>0.1</scale>      <!-- 5 digits only -->
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>8</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>4</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title scale</name>
   <type>text</type>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>x10</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>22</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>26</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>A/C WEIGHT</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>5</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-11</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
