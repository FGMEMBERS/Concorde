<?xml version="1.0"?>

<!-- Concorde engine rating : climb.

     - Flightgear doesn't have support for engine rating.
     - Emulation : in reality, the engineer switches the rating.
-->

<PropertyList>
 <name>Engine rating climb</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>

<!-- translucent lens -->  
  <layer>
   <name>Button light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <or>
      <and>
       <not-equals>
        <property>/systems/engines/engine[0]/rating</property>
        <value>climb</value>
       </not-equals>
       <not-equals>
        <property>/systems/engines/engine[1]/rating</property>
        <value>climb</value>
       </not-equals>
       <not-equals>
        <property>/systems/engines/engine[2]/rating</property>
        <value>climb</value>
       </not-equals>
       <not-equals>
        <property>/systems/engines/engine[3]/rating</property>
        <value>climb</value>
       </not-equals>
       <or include="concorde-cond-test-captain.xml"/>
      </and>
      <or include="concorde-cond-voltage-bulb.xml"/>
     </or>
    </condition>

    <layer include="concorde-bulb-white-off.xml">
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-bulb.rgb</path>
      <x1>0.7</x1>
      <y1>0.8</y1>
      <x2>1.0</x2>
      <y2>0.9</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>

    <layer include="concorde-bulb-white-on.xml">
     <condition include="concorde-cond-light-captain.xml"/>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background lighted</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-bulb.rgb</path>
      <x1>0.7</x1>
      <y1>0.8</y1>
      <x2>1.0</x2>
      <y2>0.9</y2>
     </texture>
     <w>104</w>
     <h>26</h>
     <emissive>true</emissive>
    </layer>
   </layer>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>40</point-size>
   <color>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>CLB</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-43</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-5</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>

</PropertyList>
