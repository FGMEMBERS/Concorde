<?xml version="1.0"?>

<!-- - max operating altitude is 60000 ft.
    - the altitude dial is dissociated from its autopilot target;
    as altitude hold is pressed, the current altitude is supposed not echoed on the dial.
-->

<PropertyList>

 <name>Dial altitude</name>
 <w-base>124</w-base>
 <h-base>40</h-base>

 <params>
  <tcr-disp>/controls/autoflight/altitude-select</tcr-disp>
  <tcr-ctrl>/controls/autoflight/altitude-select</tcr-ctrl>
  <alt-auto>/autopilot/settings/target-altitude-ft</alt-auto>
 </params>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>102</w>
    <h>40</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>30</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>0</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Incr 1000</name>
   <type>text</type>
   <point-size>22</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>+</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-16</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>4</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Decr 1000</name>
   <type>text</type>
   <point-size>22</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>-</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-14</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-14</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Incr 100</name>
   <type>text</type>
   <point-size>22</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>+</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-1</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>4</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Decr 100</name>
   <type>text</type>
   <point-size>22</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>-</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>1</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-14</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>AP Target Altitude display</name>
   <type>text</type>
   <font>led</font>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property alias="../../../../../params/tcr-disp"/>
     <format>%04.0f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>18</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-8</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>15</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>FEET</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>15</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-41</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Minus 1000</name>
   <button>0</button>
   <x>-18</x>
   <y>-19</y>
   <w>16</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/tcr-ctrl"/>
    <step>-1000</step>
    <min>0</min>
    <max>60000</max>
    <wrap>0</wrap>
   </binding>
   <binding>
    <condition>
     <equals>
      <property>/controls/autoflight/vertical</property>
      <value>altitude-acquire</value>
     </equals>
    </condition>
    <command>property-assign</command>
    <property alias="../../../../params/alt-auto"/>
    <property n="1" alias="../../../../params/tcr-ctrl"/>
   </binding>
  </action>

  <action>
   <name>Plus 1000</name>
   <button>0</button>
   <x>-18</x>
   <y>1</y>
   <w>16</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/tcr-ctrl"/>
    <step>1000</step>
    <min>0</min>
    <max>60000</max>
    <wrap>0</wrap>
   </binding>
   <binding>
    <condition>
     <equals>
      <property>/controls/autoflight/vertical</property>
      <value>altitude-acquire</value>
     </equals>
    </condition>
    <command>property-assign</command>
    <property alias="../../../../params/alt-auto"/>
    <property n="1" alias="../../../../params/tcr-ctrl"/>
   </binding>
  </action>

  <action>
   <name>Minus 100</name>
   <button>0</button>
   <x>-3</x>
   <y>-19</y>
   <w>16</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/tcr-ctrl"/>
    <step>-100</step>
    <min>0</min>
    <max>60000</max>
    <wrap>0</wrap>
   </binding>
   <binding>
    <condition>
     <equals>
      <property>/controls/autoflight/vertical</property>
      <value>altitude-acquire</value>
     </equals>
    </condition>
    <command>property-assign</command>
    <property alias="../../../../params/alt-auto"/>
    <property n="1" alias="../../../../params/tcr-ctrl"/>
   </binding>
  </action>

  <action>
   <name>Plus 100</name>
   <button>0</button>
   <x>-3</x>
   <y>1</y>
   <w>16</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/tcr-ctrl"/>
    <step>100</step>
    <min>0</min>
    <max>60000</max>
    <wrap>0</wrap>
   </binding>
   <binding>
    <condition>
     <equals>
      <property>/controls/autoflight/vertical</property>
      <value>altitude-acquire</value>
     </equals>
    </condition>
    <command>property-assign</command>
    <property alias="../../../../params/alt-auto"/>
    <property n="1" alias="../../../../params/tcr-ctrl"/>
   </binding>
  </action>

 </actions>

</PropertyList>
