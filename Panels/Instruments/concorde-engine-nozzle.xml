<!--
     Primary exhaust nozzle size, according to http://www.concordesst.com/.
-->

<PropertyList>
 <name>Primary exhaust nozzle size</name>
 <w-base>128</w-base>
 <h-base>128</h-base>

 <params>
  <nozzle-select>engines/engine[0]/nozzle-pos-norm</nozzle-select>
  <reheat-select>/controls/engines/engine[0]/augmentation</reheat-select>
 </params>

 <layers>

  <layer>
   <name>background</name>
   <w>110</w>
   <h>110</h>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/T38-nozzle.rgb</path>
    <x1>0</x1>
    <y1>0</y1>
    <x2>1</x2>
    <y2>1</y2>
   </texture>
  </layer>

  <layer>
   <name>title</name>
   <type>text</type>
   <point-size>15</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>% AREA</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-28</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>15</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>big needle</name>
   <w>6</w>
   <h>48</h>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.rgb</path>
    <x1>0.8</x1>
    <y1>0.78125</y1>
    <x2>0.8375</x2>
    <y2>1.0</y2>
   </texture>
   <transformations>
    <transformation>
     <type>rotation</type>
     <property alias="../../../../../params/nozzle-select"/>
     <scale>270</scale>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>20.0</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>glare shield</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/bezel1.rgb</path>
    <x1>0.5</x1>
    <y1>0.0</y1>
    <x2>1.0</x2>
    <y2>0.5</y2>
   </texture>
   <w>128</w>
   <h>128</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>3</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

<!-- reheat selected light (selector away from the OFF position) -->

<!-- translucent lens -->
  <layer>
   <name>Alarm light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <not>
      <property alias="../../../../../../params/reheat-select"/>
     </not>
    </condition>

    <layer>
     <name>lamp off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
      <x1>0.0</x1>
      <y1>0.0</y1>
      <x2>0.25</x2>
      <y2>0.095</y2>
     </texture>
     <w>17</w>
     <h>17</h>
    </layer>
    <layer>
     <name>background off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.rgb</path>
      <x1>0.7</x1>
      <y1>0.8</y1>
      <x2>1.0</x2>
      <y2>0.9</y2>
     </texture>
     <w>17</w>
     <h>17</h>
    </layer>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-54</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>51</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>
    <layer>
     <name>lamp on</name>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.31</x1>
     <y1>0.0</y1>
     <x2>0.44</x2>
     <y2>0.095</y2>
     </texture>
     <w>17</w>
     <h>17</h>
    </layer>
    <layer>
     <name>background on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-yellow-warning.rgb</path>
      <x1>0.7</x1>
      <y1>0.8</y1>
      <x2>1.0</x2>
      <y2>0.9</y2>
     </texture>
     <w>17</w>
     <h>17</h>
    </layer>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-54</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>51</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>

 </layers>
</PropertyList>
