<!-- Brakes temperature :

     - test : highest temperature + 270 deg.
-->

<PropertyList>
 <name>Brakes temperature</name>
 <w-base>128</w-base>
 <h-base>192</h-base>

 <layers>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>BRAKES TEMP</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-50</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>80</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>background</name>
   <w>110</w>
   <h>110</h>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-brakes-temp.rgb</path>
    <x1>0</x1>
    <y1>0</y1>
    <x2>1</x2>
    <y2>1</y2>
   </texture>
  </layer>

  <layer>
   <name>needle</name>
   <w>6</w>
   <h>48</h>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.rgb</path>
    <x1>0.8</x1>
    <y1>0.78125</y1>
    <x2>0.8375</x2>
    <y2>1.0</y2>
   </texture>
   <transformations>
    <transformation>
     <type>rotation</type>
     <offset>-126.0</offset>         <!-- default 0 deg C -->
    </transformation>
    <transformation>
     <type>rotation</type>
     <condition include="concorde-cond-voltage-inst.xml"/>
     <property>/systems/hydraulic/brakes/test-degc</property>
     <min>0</min>
     <max>700</max>
     <scale>0.36</scale>
    </transformation>
    <transformation>
     <type>rotation</type>
     <condition>
      <and>
       <or include="concorde-cond-voltage-inst.xml"/>
       <not include="concorde-cond-test-brakes.xml"/>
      </and>
     </condition>
     <offset>97.2</offset>           <!-- + 270 deg C -->
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>20.0</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>glare shield</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/bezel1.rgb</path>
    <x1>0.5</x1>
    <y1>0.0</y1>
    <x2>1.0</x2>
    <y2>0.5</y2>
   </texture>
   <w>128</w>
   <h>128</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>3</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title temperature</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>220 C</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-60</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-75</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>
</PropertyList>
