<?xml version="1.0"?>

<!-- -->

<PropertyList>

 <name>Dial heading</name>
 <w-base>164</w-base>
 <h-base>110</h-base>

 <params>
  <hdg-ctrl>/autopilot/settings/heading-bug-deg</hdg-ctrl>
  <true-hdg-ctrl>/autopilot/settings/true-heading-deg</true-hdg-ctrl>
 </params>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.rgb</path>
   </texture>
    <w>70</w>
    <h>49</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>33</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>0</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Incr 10</name>
   <type>text</type>
   <point-size>21</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>+</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>1</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>5</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Decr 10</name>
   <type>text</type>
   <point-size>21</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>-</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>3</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-19</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Incr 1</name>
   <type>text</type>
   <point-size>21</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>+</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>14</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>5</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Decr 1</name>
   <type>text</type>
   <point-size>21</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>-</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>16</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-19</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>magnetic heading display</name>
   <condition>
    <not>
     <property>/autopilot/settings/track-push</property>
    </not>
   </condition>
   <type>text</type>
   <font>led</font>
   <point-size>7.5</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property alias="../../../../../params/hdg-ctrl"/>
     <format>%03.0f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>32</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-9</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>true heading display</name>
   <condition>
    <property>/autopilot/settings/track-push</property>
   </condition>
   <type>text</type>
   <font>led</font>
   <point-size>7.5</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property alias="../../../../../params/true-hdg-ctrl"/>
     <format>%03.0f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>32</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-9</offset>
    </transformation>
   </transformations>
  </layer>

<!-- selector -->

  <layer>
   <name>knob left</name>
   <condition>
    <not>
     <property>/autopilot/settings/track-push</property>
    </not>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/navcom-radios.rgb</path>
    <x1>0.53125</x1>
    <x2>0.59765625</x2>
    <y1>0.05859375</y1>
    <y2>0.1484375</y2>
   </texture>
   <w>18</w>
   <h>32</h>
   <transformations>
    <transformation>
     <type>y-shift</type>
     <offset>-24</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <offset>-90</offset>
    </transformation>
    <transformation>
     <type>x-shift</type>
     <offset>-13</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-46</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>knob right</name>
   <condition>
    <property>/autopilot/settings/track-push</property>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/navcom-radios.rgb</path>
    <x1>0.53125</x1>
    <x2>0.59765625</x2>
    <y1>0.05859375</y1>
    <y2>0.1484375</y2>
   </texture>
   <w>18</w>
   <h>32</h>
   <transformations>
    <transformation>
     <type>y-shift</type>
     <offset>-24</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <offset>90</offset>
    </transformation>
    <transformation>
     <type>x-shift</type>
     <offset>13</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>45</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Heading Pull Title</name>
   <type>text</type>
   <point-size>14</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>HDG</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-21</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-50</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Track Push Title</name>
   <type>text</type>
   <point-size>14</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>TRK</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>52</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-50</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

<!-- magnetic heading -->

  <action>
   <name>Plus 10</name>
   <condition>
    <not>
     <property>/autopilot/settings/track-push</property>
    </not>
   </condition>
   <button>0</button>
   <x>1</x>
   <y>-1</y>
   <w>14</w>
   <h>23</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/hdg-ctrl"/>
    <step>10</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
  </action>

  <action>
   <name>Minus 10</name>
   <condition>
    <not>
     <property>/autopilot/settings/track-push</property>
    </not>
   </condition>
   <button>0</button>
   <x>1</x>
   <y>-23</y>
   <w>14</w>
   <h>23</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/hdg-ctrl"/>
    <step>-10</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
  </action>

  <action>
   <name>Plus 1</name>
   <condition>
    <not>
     <property>/autopilot/settings/track-push</property>
    </not>
   </condition>
   <button>0</button>
   <x>14</x>
   <y>-1</y>
   <w>14</w>
   <h>23</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/hdg-ctrl"/>
    <step>1</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
  </action>

  <action>
   <name>Minus 1</name>
   <condition>
    <not>
     <property>/autopilot/settings/track-push</property>
    </not>
   </condition>
   <button>0</button>
   <x>14</x>
   <y>-23</y>
   <w>14</w>
   <h>23</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/hdg-ctrl"/>
    <step>-1</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
  </action>

<!-- true heading -->

  <action>
   <name>Plus 10</name>
   <condition>
    <property>/autopilot/settings/track-push</property>
   </condition>
   <button>0</button>
   <x>1</x>
   <y>-1</y>
   <w>14</w>
   <h>23</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/true-hdg-ctrl"/>
    <step>10</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
  </action>

  <action>
   <name>Minus 10</name>
   <condition>
    <property>/autopilot/settings/track-push</property>
   </condition>
   <button>0</button>
   <x>1</x>
   <y>-23</y>
   <w>14</w>
   <h>23</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/true-hdg-ctrl"/>
    <step>-10</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
  </action>

  <action>
   <name>Plus 1</name>
   <condition>
    <property>/autopilot/settings/track-push</property>
   </condition>
   <button>0</button>
   <x>14</x>
   <y>-1</y>
   <w>14</w>
   <h>23</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/true-hdg-ctrl"/>
    <step>1</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
  </action>

  <action>
   <name>Minus 1</name>
   <condition>
    <property>/autopilot/settings/track-push</property>
   </condition>
   <button>0</button>
   <x>14</x>
   <y>-23</y>
   <w>14</w>
   <h>23</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/true-hdg-ctrl"/>
    <step>-1</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
  </action>

<!-- selector -->

  <action>
   <name>Heading Pull/Track push</name>
   <button>0</button>
   <x>-25</x>
   <y>-58</y>
   <w>110</w>
   <h>25</h>
   <binding>
    <command>property-toggle</command>
    <property>/autopilot/settings/track-push</property>
   </binding>
  </action>

 </actions>

</PropertyList>
