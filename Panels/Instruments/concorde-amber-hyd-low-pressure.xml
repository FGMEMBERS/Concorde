<?xml version="1.0"?>

<!-- Fault on pump low pressure :

     - engine oil pressure below 34 PSI (not real).
     - pump off load.
-->

<PropertyList>
 <name>Fault on low pressure</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <params>
  <oil-select>/engines/engine[0]/oil-pressure-psi</oil-select>
  <onload-pump>/controls/hydraulic/circuits/circuit[0]/onloada</onload-pump>
 </params>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Fault light</name>
   <type>switch</type>
    <layer>
     <name>off</name>
     <condition>
      <or include="concorde-cond-voltage-bulb.xml">
       <and include="concorde-cond-test-eng-aft.xml">
        <greater-than>
         <property alias="../../../../../../../../params/oil-select"/>
         <value>34.0</value>
        </greater-than>
        <property alias="../../../../../../../params/onload-pump"/>
       </and>
      </or>
     </condition>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>on</name>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.35</x1>
     <y1>0.0</y1>
     <x2>0.4</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
    <transformations>
     <transformation>
      <type>rotation</type>
      <offset>90</offset>
     </transformation>
    </transformations>
  </layer>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-l-press.rgb</path>
     <x1>0.0</x1>
     <y1>0.25</y1>
     <x2>1.0</x2>
     <y2>0.75</y2>
   </texture>
   <w>104</w>
   <h>26</h>
   <transformations>
    <transformation>
     <type>rotation</type>
     <offset>90</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
