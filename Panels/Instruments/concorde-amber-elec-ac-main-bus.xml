<?xml version="1.0"?>

<!-- Fault on AC Main Bus :

     - no voltage on bus.
-->

<PropertyList>
 <name>Fault on AC Main Bus</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <params>
  <probe-volt>/systems/electrical/outputs/probe/ac-main1</probe-volt>
 </params>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>fault light</name>
   <type>switch</type>
   <layer>
    <name>off</name>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and>
       <or include="concorde-cond-test-eng-aft.xml"/> <!-- bug -->
       <greater-than>
        <property alias="../../../../../../../../params/probe-volt"/>
        <value>0.0</value>
       </greater-than>
      </and>
     </or>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>20</h>
   </layer>
   <layer>
    <name>on</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.rgb</path>
     <x1>0.35</x1>
     <y1>0.0</y1>
     <x2>0.4</x2>
     <y2>0.095</y2>
    </texture>
    <w>104</w>
    <h>20</h>
   </layer>
  </layer>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-ac-main-bus.rgb</path>
     <x1>0.0</x1>
     <y1>0.27</y1>
     <x2>1.0</x2>
     <y2>0.77</y2>
   </texture>
   <w>104</w>
   <h>20</h>
  </layer>

 </layers>

</PropertyList>
