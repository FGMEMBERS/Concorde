<?xml version="1.0"?>

<!-- Warning on Decision height -->

<PropertyList>
 <name>Decision height</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <params>
  <test>/controls/autoflight/autopilot[0]/test-land</test>
 </params>


 <layers>
<!-- translucent lens -->  
  <layer>
    <name>Warning light</name>
    <type>switch</type>

    <layer>
     <name>off</name>
     <type>group</type>
     <condition>
      <or include="concorde-cond-voltage-bulb.xml">
       <not>
        <property>/systems/gpws/serviceable</property>
       </not>
       <and>
        <not>
         <property alias="../../../../../../../../params/test"/>
        </not>
        <or>
         <not>
          <property>/systems/gpws/decision-height</property>
         </not>
         <greater-than-equals>
          <property>/position/altitude-agl-ft</property>
          <property n="1">/instrumentation/radio-altimeter/decision-ft</property>
         </greater-than-equals>
        </or>
       </and>
      </or>
     </condition>

     <layer include="concorde-bulb-led-off.xml">
      <w>52</w>
      <h>26</h>
     </layer>
     <layer>
      <name>background off</name>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-dh.rgb</path>
        <x1>0.0</x1>
        <y1>0.0</y1>
        <x2>1.0</x2>
        <y2>1.0</y2>
       </texture>
       <w>52</w>
       <h>26</h>
      </layer>
    </layer>

    <layer>
     <name>on</name>
     <type>group</type>

     <layer include="concorde-bulb-led-on.xml">
       <w>52</w>
       <h>26</h>
     </layer>
     <layer>
      <name>background on</name>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-dh.rgb</path>
        <x1>0.0</x1>
        <y1>0.0</y1>
        <x2>1.0</x2>
        <y2>1.0</y2>
       </texture>
       <w>52</w>
       <h>26</h>
       <emissive>true</emissive>
      </layer>
     </layer>
  </layer>

 </layers>

</PropertyList>
