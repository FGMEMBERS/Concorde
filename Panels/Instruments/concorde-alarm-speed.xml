<?xml version="1.0"?>

<!-- Alarm on Overspeed -->

<PropertyList>
 <name>Alarm Overspeed</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Alarm light</name>
   <type>switch</type>
    <layer>
     <name>on</name>
     <condition>
      <or>
       <greater-than>
        <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
        <property n="1">/instrumentation/airspeed-indicator/overspeed-kt</property>
       </greater-than>
       <greater-than>
        <property>/velocities/mach</property>
        <property n="1">/instrumentation/mach-indicator/overspeed-mach</property>
       </greater-than>
      </or>
     </condition>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.png</path>
     <x1>0.25</x1>
     <y1>0.0</y1>
     <x2>0.5</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>off</name>
     <condition>
      <and>
       <less-than-equals>
        <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
        <property n="1">/instrumentation/airspeed-indicator/overspeed-kt</property>
       </less-than-equals>
       <less-than-equals>
        <property>/velocities/mach</property>
        <property n="1">/instrumentation/mach-indicator/overspeed-mach</property>
       </less-than-equals>
      </and>
     </condition>
     <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/warning-lamps.png</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.095</y2>
     </texture>
     <w>104</w>
     <h>26</h>
   </layer>
  </layer>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-alarm.png</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>29</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>Speed</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-45</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-6</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>

</PropertyList>
