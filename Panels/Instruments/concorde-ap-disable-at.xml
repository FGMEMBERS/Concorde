<?xml version="1.0"?>

<!-- Disable autothrottle -->

<PropertyList>

 <name>Disable autothrottle</name>
 <w-base>104</w-base>
 <h-base>36</h-base>


 <layers>
  <layer>
   <name>background enabled</name>
   <condition>
    <not-equals>
     <property>/autopilot/locks/speed</property>
     <value></value>
    </not-equals>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <w>104</w>
   <h>26</h>
  </layer>

  <layer>
   <name>background</name>
   <condition>
    <equals>
     <property>/autopilot/locks/speed</property>
     <value></value>
    </equals>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.rgb</path>
     <x1>0.7</x1>
     <y1>0.8</y1>
     <x2>1.0</x2>
     <y2>0.9</y2>
   </texture>
   <transformations>
    <transformation>
     <type>y-shift</type>
     <offset>-10</offset>
    </transformation>
   </transformations>
   <w>104</w>
   <h>26</h>
  </layer>

  <layer>
   <name>Title enabled</name>
   <condition>
    <not-equals>
     <property>/autopilot/locks/speed</property>
     <value></value>
    </not-equals>
   </condition>
   <type>text</type>
   <point-size>46</point-size>
   <color>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>AT</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-45</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-10</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <condition>
    <equals>
     <property>/autopilot/locks/speed</property>
     <value></value>
    </equals>
   </condition>
   <type>text</type>
   <point-size>46</point-size>
   <color>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>AT</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-45</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-20</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>
 
 <actions>

<!-- IAS hold is default on activation -->

  <action>
   <desc>Enable autothrottle</desc>
   <condition>
    <equals>
     <property>/autopilot/locks/speed</property>
     <value></value>
    </equals>
   </condition>
   <button>0</button>
   <x>-52</x>
   <y>-24</y>
   <w>104</w>
   <h>37</h>
   <binding>
    <command>property-assign</command>
    <property>/autopilot/locks/speed</property>
    <value type="string">speed-with-throttle</value>
   </binding>
   <binding>
    <command>property-assign</command>
    <property>/autopilot/settings/target-speed-kt</property>
    <property n="1">/instrumentation/airspeed-indicator/indicated-speed-kt</property>
   </binding>
  </action>

  <action>
   <desc>Disable autothrottle</desc>
   <condition>
    <not-equals>
     <property>/autopilot/locks/speed</property>
     <value></value>
    </not-equals>
   </condition>
   <button>0</button>
   <x>-52</x>
   <y>-24</y>
   <w>104</w>
   <h>37</h>
   <binding>
    <command>property-assign</command>
    <property>/autopilot/locks/speed</property>
    <value type="string"></value>
   </binding>
  </action>

 </actions>

</PropertyList>
