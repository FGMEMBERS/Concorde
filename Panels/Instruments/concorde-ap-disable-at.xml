<?xml version="1.0"?>

<!-- Disable autothrottle -->

<PropertyList>

 <name>Disable autothrottle</name>
 <w-base>104</w-base>
 <h-base>36</h-base>

 <params>
  <channel>/autopilot/locks/channel/at[0]/on</channel>
  <voltage>/systems/electrical/outputs/autopilot1</voltage>
 </params>


 <layers>

  <layer>
   <name>Switch</name>
   <type>switch</type>

   <layer>
    <name>on</name>
    <type>group</type>
    <condition>
     <and>
      <equals>
       <property alias="../../../../../../../params/channel"/>
       <value>on</value>
      </equals>
      <or>
       <not-equals>
        <property>/autopilot/locks/speed</property>
        <value></value>
       </not-equals>
       <not-equals>
        <property>/autopilot/locks/speed2</property>
        <value></value>
       </not-equals>
      </or>
     </and>
    </condition>

    <layer>
     <name>switch enabled</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.rgb</path>
      <x1>0.7</x1>
      <y1>0.8</y1>
      <x2>1.0</x2>
      <y2>0.9</y2>
     </texture>
     <w>104</w>
     <h>26</h>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>1</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>1</offset>
      </transformation>
     </transformations>
    </layer>
    <layer>
     <name>Title enabled</name>
     <type>text</type>
     <point-size>46</point-size>
     <color>
      <red>0.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>AT</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-29</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>-4</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>

   <layer>
    <name>off</name>
    <type>group</type>
    <layer>
     <name>switch off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.rgb</path>
      <x1>0.7</x1>
      <y1>0.8</y1>
      <x2>1.0</x2>
      <y2>0.9</y2>
     </texture>
     <w>104</w>
     <h>26</h>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>1</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>-10</offset>
      </transformation>
     </transformations>
    </layer>
    <layer>
     <name>Title</name>
     <type>text</type>
     <point-size>46</point-size>
     <color>
      <red>0.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>AT</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-29</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>-5</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>
  </layer>

 </layers>
 
 <actions>

  <action>
   <desc>Enable autothrottle</desc>
   <button>0</button>
   <condition>
    <and>
     <greater-than>
      <property alias="../../../../../../params/voltage"/>
      <value>20.0</value>
     </greater-than>
     <not-equals>
      <property alias="../../../../../../params/channel"/>
      <value>on</value>
     </not-equals>
    </and>
   </condition>
   <x>-52</x>
   <y>-24</y>
   <w>104</w>
   <h>37</h>
   <binding>
    <command>property-assign</command>
    <property alias="../../../../params/channel"/>
    <value>on</value>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.atexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <desc>Disable autothrottle</desc>
   <button>0</button>
   <condition>
    <and>
     <greater-than>
      <property alias="../../../../../../params/voltage"/>
      <value>20.0</value>
     </greater-than>
     <equals>
      <property alias="../../../../../../params/channel"/>
      <value>on</value>
     </equals>
    </and>
   </condition>
   <x>-52</x>
   <y>-24</y>
   <w>104</w>
   <h>37</h>
   <binding>
    <command>property-assign</command>
    <property alias="../../../../params/channel"/>
    <value></value>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.atexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>

</PropertyList>
