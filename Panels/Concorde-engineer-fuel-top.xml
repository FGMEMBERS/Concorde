  <instrument include="Instruments/concorde-title-fuel-management.xml">
   <name>Fuel Management</name>
   <condition>
    <and>
     <property>/sim/current-view/internal</property>
     <property>/sim/current-view/seat/engineer</property>
     <less-than>
      <property>/sim/current-view/goal-heading-offset-deg</property>
      <value>305</value>
     </less-than>
     <greater-than>
      <property>/sim/current-view/goal-heading-offset-deg</property>
      <value>230</value>
     </greater-than>
     <greater-than>
      <property>/sim/current-view/goal-pitch-offset-deg</property>
      <value>-25</value>
     </greater-than>
    </and>
   </condition>
   <x>210</x>
   <y>240</y>
   <w>30</w>
   <h>30</h>
  </instrument>

