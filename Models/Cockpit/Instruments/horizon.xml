<?xml version="1.0"?>
<PropertyList>
  <path>../Models/horizon.ac</path>
  <animation>
    <type>rotate</type>
    <object-name>Horizon</object-name>
    <property>/instrumentation/attitude-indicator[0]/indicated-roll-deg</property>
    <factor>1</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>RollArrow</object-name>
    <property>/instrumentation/attitude-indicator[0]/indicated-roll-deg</property>
    <factor>1</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>Horizon</object-name>
    <property>/instrumentation/attitude-indicator[0]/indicated-pitch-deg</property>
    <factor>0.009765625</factor>
    <axis>
      <x>0</x>
      <y>1</y>
    </axis>
  </animation>
  <animation>
    <type>select</type>
    <object-name>LOCWarning</object-name>
    <condition>
      <and>
        <or>
          <and>
            <not>
              <property>/instrumentation/nav[1]/in-range</property>
            </not>
            <not>
               <property>/instrumentation/attitude-indicator[0]/fd2</property>
            </not>
          </and>
          <and>
              <not>
                <property>/instrumentation/nav[2]/in-range</property>
              </not>
              <property>/instrumentation/attitude-indicator[0]/fd2</property>
          </and>
        </or>
        <property>/controls/autoflight/flight-director[0]/engage</property>
      </and>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>GSWarning</object-name>
    <condition>
      <and>
        <or>
          <and>
            <not>
              <property>/instrumentation/nav[1]/gs-in-range</property>
            </not>
            <not>
               <property>/instrumentation/attitude-indicator[0]/fd2</property>
            </not>
            <property>/instrumentation/nav[1]/has-gs</property>
          </and>
          <and>
            <not>
              <property>/instrumentation/nav[2]/gs-in-range</property>
            </not>
            <property>/instrumentation/nav[2]/has-gs</property>
            <property>/instrumentation/attitude-indicator[0]/fd2</property>
          </and>  
        </or>
        <property>/controls/autoflight/flight-director[0]/engage</property>
      </and>
    </condition>
  </animation>
  <animation>
    <type>translate</type>
    <object-name>LOCBar</object-name>
    <expression>
      <prod>
      <sum>
        <prod>
          <abs>
           <difference>
            <property>/instrumentation/attitude-indicator[0]/fd2</property>
            <value>1</value>
          </difference>
        </abs>
        <property>/controls/autoflight/flight-director[0]/engage</property>
        <property>/instrumentation/nav[1]/in-range</property>
        <property>/instrumentation/nav[1]/heading-needle-deflection</property>
      </prod>
      <prod>
        <property>/controls/autoflight/flight-director[0]/engage</property>
        <property>/instrumentation/attitude-indicator[0]/fd2</property>
        <property>/instrumentation/nav[2]/in-range</property>
        <property>/instrumentation/nav[2]/heading-needle-deflection</property>
      </prod>
    </sum>
    <value>0.002</value>
  </prod>
    </expression>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
    <animation>
    <type>translate</type>
    <object-name>GSBar</object-name>
    <expression>
      <prod>
      <sum>
        <prod>
          <abs>
           <difference>
            <property>/instrumentation/attitude-indicator[0]/fd2</property>
            <value>1</value>
          </difference>
        </abs>
        <property>/controls/autoflight/flight-director[0]/engage</property>
        <property>/instrumentation/nav[1]/gs-in-range</property>
        <property>/instrumentation/nav[1]/gs-needle-deflection</property>
      </prod>
      <prod>
        <property>/controls/autoflight/flight-director[0]/engage</property>
        <property>/instrumentation/attitude-indicator[0]/fd2</property>
        <property>/instrumentation/nav[2]/gs-in-range</property>
        <property>/instrumentation/nav[2]/gs-needle-deflection</property>
      </prod>
    </sum>
    <value>0.002</value>
  </prod>
    </expression>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>
    <animation>
    <type>select</type>
    <object-name>ATTOn</object-name>
      <condition>
        <not>
      <and>
       <less-than-equals>
        <property>/orientation/pitch-deg</property>
        <value>16.5</value>
       </less-than-equals>
       <greater-than-equals>
        <property>/orientation/pitch-deg</property>
        <value>-5.5</value>
       </greater-than-equals>
      </and>
    </not>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>ATTOff</object-name>
      <condition>
      <and>
       <less-than-equals>
        <property>/orientation/pitch-deg</property>
        <value>16.5</value>
       </less-than-equals>
       <greater-than-equals>
        <property>/orientation/pitch-deg</property>
        <value>-5.5</value>
       </greater-than-equals>
      </and>
    </condition>
  </animation>
    <animation>
    <type>select</type>
    <object-name>DHOn</object-name>
    <condition>
      <or>
       <property>/instrumentation/radio-altimeter[0]/decision-height</property>
      <not>
      <greater-than-equals>
       <property>/instrumentation/radio-altimeter[0]/indicated-altitude-ft</property>
       <property>/instrumentation/radio-altimeter[0]/decision-ft</property>
      </greater-than-equals>
      </not>
    </or>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>DHOff</object-name>
    <condition>
      <or>
      <not>
       <property>/instrumentation/radio-altimeter[0]/decision-height</property>
      </not>
      <greater-than-equals>
       <property>/instrumentation/radio-altimeter[0]/indicated-altitude-ft</property>
       <property>/instrumentation/radio-altimeter[0]/decision-ft</property>
      </greater-than-equals>
    </or>
    </condition>
  </animation>
</PropertyList>
