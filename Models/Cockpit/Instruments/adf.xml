<?xml version="1.0"?>
<PropertyList>
  <path>../Models/adf-compass.ac</path>
  <animation>
    <type>rotate</type>
    <object-name>Guage</object-name>
    <property>/instrumentation/compass[0]/heading-deg</property>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>ADF1Needle</object-name>
    <property>/instrumentation/adf[0]/indicated-bearing-deg</property>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>ADF2Needle</object-name>
    <property>/instrumentation/adf[1]/indicated-bearing-deg</property>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>ADF1Needle</object-name>
    <expression>
      <prod>
        <abs>
          <difference>
            <property>/instrumentation/adf[0]/in-range</property>
            <value>1</value>
          </difference>
        </abs>
        <value>90</value>
      </prod>
    </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>ADF2Needle</object-name>
    <expression>
      <prod>
        <abs>
          <difference>
            <property>/instrumentation/adf[1]/in-range</property>
            <value>1</value>
          </difference>
        </abs>
        <value>90</value>
      </prod>
    </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>select</type>
    <object-name>ADF1Error</object-name>
    <condition>
      <not>
        <property>/instrumentation/adf[0]/in-range</property>
      </not>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>ADF2Error</object-name>
    <condition>
      <not>
        <property>/instrumentation/adf[1]/in-range</property>
      </not>
    </condition>
  </animation>
</PropertyList>
