<?xml version="1.0"?>
<PropertyList>
  <path>../Models/vor-compass.ac</path>
  <animation>
    <type>rotate</type>
    <object-name>Guage</object-name>
    <property>/instrumentation/compass[0]/heading-deg</property>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>VOR1Needle</object-name>
    <expression>
      <prod>
        <difference>
          <property>/instrumentation/nav[1]/heading-deg</property>
          <property>/orientation/heading-deg</property>
        </difference>
        <property>/instrumentation/nav[1]/in-range</property>
      </prod>
    </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>VOR2Needle</object-name>
    <expression>
      <prod>
        <difference>
          <property>/instrumentation/nav[2]/heading-deg</property>
          <property>/orientation/heading-deg</property>
        </difference>
        <property>/instrumentation/nav[2]/in-range</property>
      </prod>
    </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>VOR1Needle</object-name>
    <expression>
      <prod>
        <abs>
          <difference>
            <property>/instrumentation/nav[1]/in-range</property>
            <value>1</value>
          </difference>
        </abs>
        <value>90</value>
      </prod>
    </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>VOR2Needle</object-name>
    <expression>
      <prod>
        <abs>
          <difference>
            <property>/instrumentation/nav[2]/in-range</property>
            <value>1</value>
          </difference>
        </abs>
        <value>90</value>
      </prod>
    </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>select</type>
    <object-name>VOR1Error</object-name>
    <condition>
      <not>
        <property>/instrumentation/nav[1]/in-range</property>
      </not>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>VOR2Error</object-name>
    <condition>
      <not>
        <property>/instrumentation/nav[2]/in-range</property>
      </not>
    </condition>
  </animation>
</PropertyList>
