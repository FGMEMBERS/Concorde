<?xml version="1.0"?>
<PropertyList>
    <path>../Models/vor-compass.ac</path>
    <animation>
        <type>rotate</type>
        <object-name>Guage</object-name>
        <property>/orientation/heading-deg</property>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>        
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>VOR1Needle</object-name>
        <expression>
          <prod>
            <sum>
              <property>/orientation/heading-deg</property>
              <property>/instrumentation/nav[1]/heading-deg</property>
            </sum>
            <property>/instrumentation/nav[1]/in-range</property>
          </prod>
        </expression>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>        
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>VOR2Needle</object-name>
        <expression>
          <prod>
            <sum>
              <property>/orientation/heading-deg</property>
              <property>/instrumentation/nav[2]/heading-deg</property>
            </sum>
            <property>/instrumentation/nav[2]/in-range</property>
          </prod>
        </expression>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>        
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>VOR1Needle</object-name>
        <condition>
          <not>
            <property>/instrumentation/nav[1]/in-range</property>
          </not>
        </condition>
        <expression>
          <value>90</value>
        </expression>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>        
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>VOR2Needle</object-name>
        <condition>
          <not>
            <property>/instrumentation/nav[2]/in-range</property>
          </not>
        </condition>
        <expression>
          <value>-90</value>
        </expression>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>        
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>select</type>
        <object-name>VOR1Error</object-name>
        <condition>
          <not>
            <property>/instrumentation/nav[1]/in-range</property>
          </not>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>VOR2Error</object-name>
        <condition>
          <not>
            <property>/instrumentation/nav[2]/in-range</property>
          </not>
        </condition>
    </animation>
</PropertyList>
