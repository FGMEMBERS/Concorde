<?xml version="1.0"?>

<!-- CAUTION, if preferences.xml isn't with 6 views, update Concorde-views.xml and Concorde-keyboard.xml !
-->

<!-- Version           CVS date                   Milestone
     ==========================================================================================
     1.0               July 2004                  FDM, 2D panel.
     1.1               September 2004
     1.2               October 2004               3D cockpit.
     2.0               January 2005               First version with flight manual.
                                                  Nose visible from cockpit.
                                                  Engineer and overhead views.
                                                  Instruments dynamic with the view angle.
     2.1               not yet known              Electrical system, hydraulics, fuel pumps.
                                                  Text in alarm textures.
                                                  First instrument textures.
                                                  Transparent windows.
                                                  Copilot and steward views.
     ==========================================================================================
-->

<PropertyList>

 <sim include="Nasal/Concorde-views.xml">

  <description>Concorde</description>
  <status>early-production</status>
  <aircraft-version>2.1</aircraft-version>

  <startup>
   <splash-texture>Aircraft/Concorde/Concorde-splash.rgb</splash-texture>
  </startup>

  <flight-model>jsb</flight-model>
  <aero>Concorde</aero>

  <systems>
   <path>Aircraft/Concorde/Systems/Concorde-systems.xml</path>
   <autopilot>
    <path>Aircraft/Concorde/Systems/Concorde-autopilot.xml</path>
   </autopilot>
   <electrical>
    <path>Aircraft/Concorde/Systems/Concorde-electrical.xml</path>
   </electrical>
   <fuel>
    <path>Aircraft/Concorde/Systems/Concorde-fuel.xml</path>
   </fuel>
  </systems> 

  <instrumentation>
   <path>Aircraft/Concorde/Systems/Concorde-instrumentation.xml</path>
  </instrumentation>
  
  <sound>
   <audible>true</audible>
   <path>Aircraft/Concorde/Sounds/Concorde-sound.xml</path>
<!--
   <path>Aircraft/Concorde/Sounds/Concorde-real-sound.xml</path>
-->
  </sound>

  <panel>
   <path>Aircraft/Concorde/Panels/Concorde-2D-captain.xml</path>
   <visibility>false</visibility>
  </panel>
  <panel_2>
   <path>Aircraft/Concorde/Panels/Concorde-2D-center.xml</path>
  </panel_2>
  
  <model>
   <path>Aircraft/Concorde/Models/Concorde_ba.xml</path>
  </model>
  
  <chase-distance-m type="double" archive="y">-67.0</chase-distance-m> <!-- see all fuselage -->

  <presets include="Nasal/Concorde-fuel.xml">

<!-- Filton 09 -->
<!--
   <airport-id>EGTG</airport-id>
   <runway>09</runway>
-->

<!-- Toulouse Blagnac 14L/14R -->
<!--
   <airport-id>LFBO</airport-id>
   <runway>14L</runway>
-->
  </presets>

  <help include="help.xml"/>

 </sim>

 <consumables>
  <fuel include="Systems/Concorde-init-fuel.xml"/>
 </consumables>

 <nasal>
  <Concorde-constant>
   <file>Aircraft/Concorde/Nasal/Concorde-constants.nas</file>
   <module>Concorde</module>
  </Concorde-constant>
  <Concorde-pressurization>
   <file>Aircraft/Concorde/Nasal/Concorde-pressure.nas</file>
   <module>Concorde</module>
  </Concorde-pressurization>
  <Concorde-hydraulic>
   <file>Aircraft/Concorde/Nasal/Concorde-hydraulic.nas</file>
   <module>Concorde</module>
  </Concorde-hydraulic>
  <Concorde-autopilot>
   <file>Aircraft/Concorde/Nasal/Concorde-autopilot.nas</file>
   <module>Concorde</module>
  </Concorde-autopilot>
  <Concorde-fuel>
   <file>Aircraft/Concorde/Nasal/Concorde-fuel.nas</file>
   <module>Concorde</module>
  </Concorde-fuel>
  <Concorde-instrument>
   <file>Aircraft/Concorde/Nasal/Concorde-instrument.nas</file>
   <module>Concorde</module>
  </Concorde-instrument>
  <Concorde>
   <file>Aircraft/Concorde/Nasal/Concorde-jbsim.nas</file>
  </Concorde>
 </nasal>

 <input>
  <keyboard include="Nasal/Concorde-keyboard.xml">
  </keyboard>
 </input>

<!-- avoids the crash on alias (temporary) -->

 <position>
  <altitude-agl-ft type="double">0.0</altitude-agl-ft>
 </position>

 <velocities>
  <vertical-speed-fps type="double">0.0</vertical-speed-fps>
 </velocities>

 <controls include="Systems/Concorde-init-controls.xml">
 </controls>

 <systems include="Systems/Concorde-init-systems.xml">
 </systems>

 <instrumentation include="Systems/Concorde-init-instrumentation.xml">


<!-- ============= -->
<!-- customization -->
<!-- ============= -->

<!-- INS 1 on -->

  <ins>
   <on type="bool" archive="y">true</on>
  </ins>

<!-- takeoff monitor armed -->

  <takeoff-monitor>
   <armed type="bool" archive="y">true</armed>
  </takeoff-monitor>

<!-- decision altitude -->

  <radio-altimeter n="0">
   <decision-ft>211</decision-ft> <!-- offset : 211 = 200 ft -->
  </radio-altimeter>

<!-- ADF 2 -->

  <adf n="1">
   <frequencies>
    <selected-khz>352</selected-khz>
   </frequencies>
  </adf>

 </instrumentation>

<!-- engines on -->
 
 <engines include="Systems/Concorde-init-engines.xml">
  <engine n="0">
    <running>true</running>
    <bug_pph>10000.0</bug_pph> <!-- takeoff monitor bug -->
  </engine>
  <engine n="1">
    <running>true</running>
    <bug_pph>10000.0</bug_pph>
  </engine>
  <engine n="2">
    <running>true</running>
    <bug_pph>10000.0</bug_pph>
  </engine>
  <engine n="3">
    <running>true</running>
    <bug_pph>10000.0</bug_pph>
  </engine>
 </engines>

<!-- autopilot -->

 <autopilot include="Systems/Concorde-init-autopilot.xml">
  <settings>
   <heading-bug-deg>283</heading-bug-deg>
   <target-altitude-ft>10000</target-altitude-ft>
   <dial-speed-kt>250</dial-speed-kt>
  </settings>
 </autopilot>

</PropertyList>
