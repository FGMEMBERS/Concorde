<!-- ============= -->
<!-- customization -->
<!-- ============= -->

<!-- autopilot -->

 <autopilot include="Systems/Concorde-init-autopilot.xml">
  <settings>
   <true-heading-deg>0</true-heading-deg>
  </settings>
 </autopilot>

 <controls include="Systems/Concorde-init-controls.xml">
  <autoflight>
   <altitude-select>10000</altitude-select>
   <heading-select>283</heading-select>                                     <!-- magnetic -->
   <speed-select>250</speed-select>
  </autoflight>

<!-- external lights -->

  <lighting>
   <external>
    <landing-taxi n="0">
     <on type="bool">false</on>
     <extend type="bool">false</extend>
    </landing-taxi>
    <landing-taxi n="1">
     <on type="bool">false</on>
     <extend type="bool">false</extend>
    </landing-taxi>
    <main-landing n="0">
     <on type="bool">false</on>
     <extend type="bool">false</extend>
    </main-landing>
    <main-landing n="1">
     <on type="bool">false</on>
     <extend type="bool">false</extend>
    </main-landing>
    <taxi-turn n="0">
     <on type="bool">false</on>
    </taxi-turn>
    <taxi-turn n="1">
     <on type="bool">false</on>
    </taxi-turn>
   </external>
   <nav-lights type="bool">true</nav-lights>
   <strobe type="bool">true</strobe>
  </lighting>
 </controls>

 <systems include="Systems/Concorde-init-systems.xml">
 </systems>

 <instrumentation include="Systems/Concorde-init-instrumentation.xml">

<!-- INS 1 on -->

  <ins>
   <on type="bool" archive="y">true</on>
  </ins>

<!-- takeoff monitor armed -->

  <takeoff-monitor>
   <armed type="bool" archive="y">true</armed>
  </takeoff-monitor>

<!-- decision altitude -->

  <radio-altimeter n="0">
   <dial-decision-ft>200</dial-decision-ft>
  </radio-altimeter>

<!-- ADF 2 (not available by GUI dialog) -->

  <adf n="1">
   <frequencies>
    <selected-khz>352</selected-khz>                          <!-- Woodley near EGLL -->
   </frequencies>
  </adf>

 </instrumentation>

<!-- engines on -->
 
 <engines include="Systems/Concorde-init-engines.xml">
  <engine n="0">
    <running>true</running>
    <bug_pph>10000.0</bug_pph>                                <!-- takeoff monitor bug -->
  </engine>
  <engine n="1">
    <running>true</running>
    <bug_pph>10000.0</bug_pph>
  </engine>
  <engine n="2">
    <running>true</running>
    <bug_pph>10000.0</bug_pph>
  </engine>
  <engine n="3">
    <running>true</running>
    <bug_pph>10000.0</bug_pph>
  </engine>
 </engines>

</PropertyList>