    <property>/engines/engine[1]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.03</factor>
    <offset>0.015</offset>
   </volume>    
   <volume>
    <property>/engines/engine[2]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.03</factor>
    <offset>0.015</offset>
   </volume>    
   <volume>
    <property>/engines/engine[3]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.03</factor>
    <offset>0.015</offset>
   </volume>    
   <volume>
    <property>/velocities/airspeed-kt</property>                 <!-- more noisy in flight -->
    <factor>0.00015</factor>
    <max>0.06</max>                                              <!-- 400 kt -->
   </volume>    
  </engine>

  <wind>
   <name>nose wind</name>
   <mode>looped</mode>
   <path>Sounds/wind.wav</path>
   <condition>
    <and>
     <property>/sim/current-view/internal</property>
     <greater-than>
      <property>/surface-positions/flap-pos-norm</property>
      <property n="1">/sim/flaps/setting[1]</property>           <!-- until noose is streamlined -->
     </greater-than>
     <greater-than>
      <property>/velocities/airspeed-kt</property>
      <value>50</value>                                          <!-- enough speed -->     
     </greater-than>
   </and>
   </condition>
   <volume>
    <property>/position/altitude-ft</property>
    <factor>-0.000015</factor>
    <offset>1.0</offset>
    <min>0.1</min>
    <max>0.5</max>
   </volume>
   <volume>
     <property>/velocities/airspeed-kt</property>
     <factor>0.0015</factor>
     <min>0.03</min>
     <max>0.15</max>
   </volume>
   <pitch>
