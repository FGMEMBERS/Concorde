<?xml version="1.0"?>

<!-- Concorde original sounds from Ryuji Ozawa and Andrew Wilson (reverse).

   Available at http://wwww.flightsim.com, as consnd98.zip (FS98 sound, 3.9 MB) and conrt.zip (reverse, 100 KB).

   Since this file is not GPL, you must download and install yourself the sounds (without renaming) :
   - con1 (internal idle).
   - con2 (internal takeoff).
   - con3 (internal cruise).
   - con5 (external nozzle).
   - con7 (external reheat).
   - rumblex (reverse).


   See also comments in Concorde-sound.xml (level of common sounds is identical).


   TO DO :
   =====
   - one cannot include sounds in a common file.


   References :
   ==========

   - http://www.flightlevel350.net/ :

   Concorde is noisy outside, even at taxi : video of takeoff and landing, by Graham Brown at EGGP.

-->
 
<PropertyList>

<!-- position x/y/z = width/height/depth, from pilot seat -->

 <fx>

<!-- internal engine -->

  <engine>
   <name>internal taxi</name>
   <path>Aircraft/Concorde/Sounds/con1.wav</path>
   <mode>looped</mode>
   <condition>
    <and>
     <property>/sim/current-view/internal</property>
     <or>
      <property>/engines/engine[0]/running</property>
      <property>/engines/engine[1]/running</property>     
      <property>/engines/engine[2]/running</property>     
      <property>/engines/engine[3]/running</property>     
     </or>
     <less-than>
      <property>/velocities/mach</property>
      <value>0.55</value>     
     </less-than>
     <not>
      <or>
       <property>/engines/engine[0]/augmentation</property>
       <property>/engines/engine[1]/augmentation</property>
       <property>/engines/engine[2]/augmentation</property>
       <property>/engines/engine[3]/augmentation</property>
      </or>
     </not>     
    </and>
   </condition>
   <volume>
    <property>/engines/engine[0]/thrust_lb[0]</property>
    <type>sqrt</type>
    <factor>0.004</factor>
    <offset>0.035</offset>
   </volume>
   <volume>
    <property>/engines/engine[1]/thrust_lb[0]</property>
    <type>sqrt</type>
    <factor>0.004</factor>
    <offset>0.035</offset>
   </volume>    
   <volume>
    <property>/engines/engine[2]/thrust_lb[0]</property>
    <type>sqrt</type>
    <factor>0.004</factor>
    <offset>0.035</offset>
   </volume>    
   <volume>
    <property>/engines/engine[3]/thrust_lb[0]</property>
    <type>sqrt</type>
    <factor>0.004</factor>
    <offset>0.035</offset>
   </volume>    
  </engine>

  <engine>
   <name>internal takeoff</name>
   <path>Aircraft/Concorde/Sounds/con2.wav</path>
   <mode>looped</mode>
   <condition>
    <and>
     <property>/sim/current-view/internal</property>
     <or>
      <property>/engines/engine[0]/running</property>
      <property>/engines/engine[1]/running</property>     
      <property>/engines/engine[2]/running</property>     
      <property>/engines/engine[3]/running</property>     
     </or>
     <less-than>
      <property>/velocities/mach</property>
      <value>0.55</value>     
     </less-than>
     <or>
      <property>/engines/engine[0]/augmentation</property>
      <property>/engines/engine[1]/augmentation</property>
      <property>/engines/engine[2]/augmentation</property>
      <property>/engines/engine[3]/augmentation</property>
     </or>
     <and>
      <less-than>
       <property>/engines/engine[0]/bucket-deg</property>
       <value>40</value>
      </less-than>
      <less-than>
       <property>/engines/engine[1]/bucket-deg</property>
       <value>40</value>
      </less-than>
      <less-than>
       <property>/engines/engine[2]/bucket-deg</property>
       <value>40</value>
      </less-than>
      <less-than>
       <property>/engines/engine[3]/bucket-deg</property>
       <value>40</value>
      </less-than>
     </and>     
    </and>
   </condition>
   <volume>
    <property>/engines/engine[0]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.045</factor>
    <offset>0.05</offset>
   </volume>
   <volume>
    <property>/engines/engine[1]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.045</factor>
    <offset>0.05</offset>
   </volume>    
   <volume>
    <property>/engines/engine[2]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.045</factor>
    <offset>0.05</offset>
   </volume>    
   <volume>
    <property>/engines/engine[3]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.045</factor>
    <offset>0.05</offset>
   </volume>    
  </engine>

  <engine>
   <name>internal cruise</name>
   <path>Aircraft/Concorde/Sounds/con3.wav</path>
   <mode>looped</mode>
   <condition>
    <and>
     <property>/sim/current-view/internal</property>
     <or>
      <property>/engines/engine[0]/running</property>
      <property>/engines/engine[1]/running</property>     
      <property>/engines/engine[2]/running</property>     
      <property>/engines/engine[3]/running</property>     
     </or>
     <greater-than-equals>
      <property>/velocities/mach</property>
      <value>0.55</value>     
     </greater-than-equals>
     <and>
      <less-than>
       <property>/engines/engine[0]/bucket-deg</property>
       <value>40</value>
      </less-than>
      <less-than>
       <property>/engines/engine[1]/bucket-deg</property>
       <value>40</value>
      </less-than>
      <less-than>
       <property>/engines/engine[2]/bucket-deg</property>
       <value>40</value>
      </less-than>
      <less-than>
       <property>/engines/engine[3]/bucket-deg</property>
       <value>40</value>
      </less-than>
     </and>     
    </and>
   </condition>
   <volume>
    <property>/engines/engine[0]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.03</factor>
    <offset>0.03</offset>
   </volume>
   <volume>
    <property>/engines/engine[1]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.03</factor>
    <offset>0.03</offset>
   </volume>    
   <volume>
    <property>/engines/engine[2]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.03</factor>
    <offset>0.03</offset>
   </volume>    
   <volume>
    <property>/engines/engine[3]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.03</factor>
    <offset>0.03</offset>
   </volume>    
  </engine>

  <wind>
   <name>wind</name>
   <mode>looped</mode>
   <path>Sounds/wind.wav</path>
   <condition>
    <and>
     <property>/sim/current-view/internal</property>
     <greater-than>
      <property>/surface-positions/flap-pos-norm</property> <!-- until noose is streamlined (0.34 = visor down) -->
      <value>0.34</value>     
     </greater-than>
     <greater-than>
      <property>/velocities/airspeed-kt</property>
      <value>50</value> <!-- enough speed -->     
     </greater-than>
   </and>
   </condition>
   <volume>
    <property>/position/altitude-ft</property>
    <factor>-0.000015</factor>
    <offset>1.0</offset>
    <min>0.1</min>
    <max>0.5</max>
   </volume>
   <volume>
     <property>/velocities/airspeed-kt</property>
     <factor>0.0015</factor>
     <min>0.03</min>
     <max>0.15</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.01</factor>
    <offset>1.25</offset>
   </pitch>
  </wind>

<!-- external engine -->

  <engine>
   <name>external taxi</name>
   <path>Aircraft/Concorde/Sounds/con5.wav</path>
   <mode>looped</mode>
   <condition>
    <and>
     <not>
      <property>/sim/current-view/internal</property>
     </not>
     <or>
      <property>/engines/engine[0]/running</property>
      <property>/engines/engine[1]/running</property>     
      <property>/engines/engine[2]/running</property>     
      <property>/engines/engine[3]/running</property>     
     </or>
     <less-than>
      <property>/velocities/mach</property>
      <value>0.55</value>     
     </less-than>
     <not>
      <or>
       <property>/engines/engine[0]/augmentation</property>
       <property>/engines/engine[1]/augmentation</property>
       <property>/engines/engine[2]/augmentation</property>
       <property>/engines/engine[3]/augmentation</property>
      </or>
     </not>     
     <and>
      <less-than>
       <property>/engines/engine[0]/bucket-deg</property>
       <value>40</value>
      </less-than>
      <less-than>
       <property>/engines/engine[1]/bucket-deg</property>
       <value>40</value>
      </less-than>
      <less-than>
       <property>/engines/engine[2]/bucket-deg</property>
       <value>40</value>
      </less-than>
      <less-than>
       <property>/engines/engine[3]/bucket-deg</property>
       <value>40</value>
      </less-than>
     </and>     
    </and>
   </condition>
   <volume>
    <property>/engines/engine[0]/thrust_lb[0]</property>
    <type>sqrt</type>
    <factor>0.003</factor>
    <offset>0.01</offset>
   </volume>
   <volume>
    <property>/engines/engine[1]/thrust_lb[0]</property>
    <type>sqrt</type>
    <factor>0.003</factor>
    <offset>0.01</offset>
   </volume>    
   <volume>
    <property>/engines/engine[2]/thrust_lb[0]</property>
    <type>sqrt</type>
    <factor>0.003</factor>
    <offset>0.01</offset>
   </volume>    
   <volume>
    <property>/engines/engine[3]/thrust_lb[0]</property>
    <type>sqrt</type>
    <factor>0.003</factor>
    <offset>0.01</offset>
   </volume>    
   <reference-dist>500.0</reference-dist>
   <max-dist>8000.0</max-dist>
  </engine>

  <reverse>
   <name>external reverse</name>
   <path>Aircraft/Concorde/Sounds/rumblex.wav</path>
   <mode>looped</mode>
   <condition>
    <and>
     <not>
      <property>/sim/current-view/internal</property>
     </not>
     <or>
      <property>/engines/engine[0]/running</property>
      <property>/engines/engine[1]/running</property>     
      <property>/engines/engine[2]/running</property>     
      <property>/engines/engine[3]/running</property>     
     </or>
     <or>
      <greater-than-equals>
       <property>/engines/engine[0]/bucket-deg</property>
       <value>40</value>
      </greater-than-equals>
      <greater-than-equals>
       <property>/engines/engine[1]/bucket-deg</property>
       <value>40</value>
      </greater-than-equals>
      <greater-than-equals>
       <property>/engines/engine[2]/bucket-deg</property>
       <value>40</value>
      </greater-than-equals>
      <greater-than-equals>
       <property>/engines/engine[3]/bucket-deg</property>
       <value>40</value>
      </greater-than-equals>
     </or>
    </and>
   </condition>
   <volume>
    <property>/engines/engine[0]/thrust_lb[0]</property>
    <type>sqrt</type>
    <factor>0.004</factor>
    <offset>0.035</offset>
   </volume>
   <volume>
    <property>/engines/engine[1]/thrust_lb[0]</property>
    <type>sqrt</type>
    <factor>0.004</factor>
    <offset>0.035</offset>
   </volume>    
   <volume>
    <property>/engines/engine[2]/thrust_lb[0]</property>
    <type>sqrt</type>
    <factor>0.004</factor>
    <offset>0.035</offset>
   </volume>    
   <volume>
    <property>/engines/engine[3]/thrust_lb[0]</property>
    <type>sqrt</type>
    <factor>0.004</factor>
    <offset>0.035</offset>
   </volume>    
   <reference-dist>500.0</reference-dist>
   <max-dist>8000.0</max-dist>
  </reverse>

  <engine>
   <name>external takeoff</name>
   <path>Aircraft/Concorde/Sounds/con7.wav</path>
   <mode>looped</mode>
   <condition>
    <and>
     <not>
      <property>/sim/current-view/internal</property>
     </not>
     <or>
      <property>/engines/engine[0]/running</property>
      <property>/engines/engine[1]/running</property>     
      <property>/engines/engine[2]/running</property>     
      <property>/engines/engine[3]/running</property>     
     </or>
     <or>
      <greater-than-equals>
       <property>/velocities/mach</property>
       <value>0.55</value>     
      </greater-than-equals>
      <or>
       <property>/engines/engine[0]/augmentation</property>
       <property>/engines/engine[1]/augmentation</property>
       <property>/engines/engine[2]/augmentation</property>
       <property>/engines/engine[3]/augmentation</property>
      </or>
     </or>
     <and>
      <less-than>
       <property>/engines/engine[0]/bucket-deg</property>
       <value>40</value>
      </less-than>
      <less-than>
       <property>/engines/engine[1]/bucket-deg</property>
       <value>40</value>
      </less-than>
      <less-than>
       <property>/engines/engine[2]/bucket-deg</property>
       <value>40</value>
      </less-than>
      <less-than>
       <property>/engines/engine[3]/bucket-deg</property>
       <value>40</value>
      </less-than>
     </and>     
    </and>
   </condition>
   <volume>
    <property>/engines/engine[0]/thrust_lb[0]</property>
    <type>sqrt</type>
    <factor>0.0035</factor>
    <offset>0.01</offset>
   </volume>
   <volume>
    <property>/engines/engine[1]/thrust_lb[0]</property>
    <type>sqrt</type>
    <factor>0.0035</factor>
    <offset>0.01</offset>
   </volume>    
   <volume>
    <property>/engines/engine[2]/thrust_lb[0]</property>
    <type>sqrt</type>
    <factor>0.0035</factor>
    <offset>0.01</offset>
   </volume>    
   <volume>
    <property>/engines/engine[3]/thrust_lb[0]</property>
    <type>sqrt</type>
    <factor>0.0035</factor>
    <offset>0.01</offset>
   </volume>    
   <reference-dist>500.0</reference-dist>
   <max-dist>8000.0</max-dist>
  </engine>

<!-- engine start -->

  <engine>
   <name>engine 1 2 start</name>
   <path>Sounds/exhaust_start.wav</path>
   <mode>once</mode>
   <condition>
     <or>
      <and>
       <property>/engines/engine[0]/cranking</property>
       <property>/engines/engine[0]/starter</property>
       <greater-than>
        <property>/engines/engine[0]/n2</property>
        <value>37</value>
       </greater-than>
      </and>
      <and>
       <property>/engines/engine[1]/cranking</property>
       <property>/engines/engine[1]/starter</property>
       <greater-than>
        <property>/engines/engine[1]/n2</property>
        <value>37</value>
       </greater-than>
      </and>
     </or>
   </condition>
   <position>
    <x>-5.0</x>
    <y>0.0</y>
    <z>-40.0</z>
   </position>
   <volume>
    <max>0.3</max>
   </volume>
   <reference-dist>500.0</reference-dist>
   <max-dist>8000.0</max-dist>
  </engine>

  <engine>
   <name>engine 3 4 start</name>
   <path>Sounds/exhaust_start.wav</path>
   <mode>once</mode>
   <condition>
     <or>
      <and>
       <property>/engines/engine[2]/cranking</property>
       <property>/engines/engine[2]/starter</property>
       <greater-than>
        <property>/engines/engine[2]/n2</property>
        <value>37</value>
       </greater-than>
      </and>
      <and>
       <property>/engines/engine[3]/cranking</property>
       <property>/engines/engine[3]/starter</property>
       <greater-than>
        <property>/engines/engine[3]/n2</property>
        <value>37</value>
       </greater-than>
      </and>
     </or>
   </condition>
   <position>
    <x>5.0</x>
    <y>0.0</y>
    <z>-40.0</z>
   </position>
   <volume>
    <max>0.3</max>
   </volume>
   <reference-dist>500.0</reference-dist>
   <max-dist>8000.0</max-dist>
  </engine>

<!-- engine shutdown -->

  <engine>
   <name>engine 1 2 shutdown</name>
   <path>Sounds/exhaust_shutdown.wav</path>
   <mode>once</mode>
   <condition>
     <or>
      <and>
       <property>/engines/engine[0]/cutoff</property>
       <greater-than>
        <property>/engines/engine[0]/n2</property>
        <value>30</value> <!-- on starter, N2 increases till 25 -->
       </greater-than>
      </and>
      <and>
       <property>/engines/engine[1]/cutoff</property>
       <greater-than>
        <property>/engines/engine[1]/n2</property>
        <value>30</value>
       </greater-than>
      </and>
     </or>
   </condition>
   <position>
    <x>-5.0</x>
    <y>0.0</y>
    <z>-40.0</z>
   </position>
   <volume>
    <max>0.5</max>
   </volume>
   <reference-dist>500.0</reference-dist>
   <max-dist>8000.0</max-dist>
  </engine>

  <engine>
   <name>engine 3 4 shutdown</name>
   <path>Sounds/exhaust_shutdown.wav</path>
   <mode>once</mode>
   <condition>
     <or>
      <and>
       <property>/engines/engine[2]/cutoff</property>
       <greater-than>
        <property>/engines/engine[2]/n2</property>
        <value>30</value>
       </greater-than>
      </and>
      <and>
       <property>/engines/engine[3]/cutoff</property>
       <greater-than>
        <property>/engines/engine[3]/n2</property>
        <value>30</value>
       </greater-than>
      </and>
     </or>
   </condition>
   <position>
    <x>5.0</x>
    <y>0.0</y>
    <z>-40.0</z>
   </position>
   <volume>
    <max>0.5</max>
   </volume>
   <reference-dist>500.0</reference-dist>
   <max-dist>8000.0</max-dist>
  </engine>

<!-- default sounds -->

  <rumble>
   <name>rumble</name>
   <mode>looped</mode>
   <path>Sounds/rumble.wav</path>
   <condition>
    <and>
     <property>/sim/current-view/internal</property>
     <less-than> <!-- BUG : wow not reset, when starting in flight -->
      <property>/position/altitude-agl-ft</property>
      <value>50</value>
     </less-than>
     <or>
      <property>/gear/gear[0]/wow</property>
      <property>/gear/gear[1]/wow</property>
      <property>/gear/gear[2]/wow</property>
      <property>/gear/gear[3]/wow</property>
      <property>/gear/gear[4]/wow</property>
     </or>
     <greater-than> <!-- only rumble on taxi -->
      <property>/instrumentation/ins[0]/ground-speed-fps</property> <!-- more accurate -->
      <value>17</value>       <!-- 10 kt --> 
     </greater-than>
    </and>
   </condition>
   <volume>
    <property>/velocities/airspeed-kt</property> <!-- can be above 10 kt when static ! -->
    <type>log</type>
    <factor>0.5</factor>
   </volume>
   <reference-dist>10.0</reference-dist>
   <max-dist>20.0</max-dist>
  </rumble>

  <gear>
   <name>gear</name>
   <mode>in-transit</mode>
   <path>Sounds/gear.wav</path>
   <property>/gear/gear[0]/position-norm</property>
   <pitch>
    <internal>dt_play</internal>
    <offset>1.0</offset>
    <factor>-0.001</factor>
   </pitch>
   <reference-dist>10.0</reference-dist>
   <max-dist>20.0</max-dist>
  </gear>

  <gear>
   <name>gear-lock</name>
   <path>Sounds/gear-lck.wav</path>
   <condition>
    <equals>
     <property>/gear/gear[0]/position-norm</property>
     <value>0</value>
    </equals>
   </condition>
   <reference-dist>10.0</reference-dist>
   <max-dist>20.0</max-dist>
  </gear>

  <gear>
   <name>gear-horn</name>
   <path>Sounds/gear-hrn.wav</path>
   <mode>looped</mode>
   <condition>
    <and include="../Panels/Instruments/concorde-cond-gear.xml">
     <property>/sim/current-view/internal</property>
    </and>
   </condition>
   <reference-dist>10.0</reference-dist>
   <max-dist>20.0</max-dist>
  </gear>

  <squeal>
   <name>squeal</name>
   <path>Sounds/squeal.wav</path>
   <condition>
    <or>
     <property>/gear/gear[0]/wow</property>
     <property>/gear/gear[1]/wow</property>
     <property>/gear/gear[2]/wow</property>
     <property>/gear/gear[3]/wow</property>
     <property>/gear/gear[4]/wow</property>
    </or>
   </condition>
   <volume>
    <property>/velocities/speed-down-fps</property>
    <factor>0.05</factor>
   </volume>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <factor>0.01</factor>
   </volume>
   <volume>
    <internal>dt_stop</internal>
    <factor>0.05</factor>
    <max>1.0</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.0025</factor>
    <offset>1.2</offset>
   </pitch>
   <reference-dist>10.0</reference-dist>
   <max-dist>20.0</max-dist>
  </squeal>
 
  <flap>
   <name>flaps</name>
   <mode>in-transit</mode>
   <path>Sounds/flaps.wav</path>
   <property>/surface-positions/flap-pos-norm</property>
   <volume>
    <factor>0.15</factor>
   </volume>
   <reference-dist>10.0</reference-dist>
   <max-dist>20.0</max-dist>
  </flap>

  <stall>
   <name>stall</name>
   <mode>looped</mode>
   <path>Sounds/stall.wav</path>
   <condition>
    <and include="../Panels/Instruments/concorde-cond-stall.xml">
     <property>/sim/current-view/internal</property>
    </and>
   </condition>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <min>30.0</min>
   </volume>
  </stall>
 
  <overspeed>
   <name>overspeed</name>
   <mode>looped</mode>
   <path>Sounds/overspeed.wav</path>
   <condition>
    <and include="../Panels/Instruments/concorde-cond-overspeed.xml">
     <property>/sim/current-view/internal</property>
    </and>
   </condition>
   <volume>
    <max>0.4</max>
    <min>0.1</min>
   </volume>
  </overspeed>
 
  <terrain>
   <name>pull up</name>
   <mode>looped</mode>
   <path>Sounds/mk-viii/pull-up.wav</path>
   <condition>
    <and include="../Panels/Instruments/concorde-cond-terrain.xml">
     <property>/sim/current-view/internal</property>
    </and>
   </condition>
   <volume>
    <max>0.4</max>
    <min>0.1</min>
   </volume>
  </terrain>

  <door>
   <name>Door</name>
   <path>Sounds/door_close.wav</path>
   <condition>
    <equals>
     <property>/controls/doors/flight-deck/position-norm</property>
     <value>0.0</value>
    </equals>
   </condition>
   <volume>
    <factor>0.2</factor>
   </volume>
  </door>

<!-- cannot disable click in external views, otherwise heard when ctrl-V -->

  <click>
   <name>click on</name>
   <path>Aircraft/Concorde/Sounds/click.wav</path>
   <condition>
    <property>/instrumentation/generic/click</property>
   </condition>
   <volume>
    <max>0.2</max>
   </volume>
  </click>

  <click>
   <name>click off</name>
   <path>Aircraft/Concorde/Sounds/click.wav</path>
   <condition>
    <not>
     <property>/instrumentation/generic/click</property>
    </not>
   </condition>
   <volume>
    <max>0.2</max>
   </volume>
  </click>

</fx>
 
