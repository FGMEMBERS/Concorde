<?xml version="1.0"?>

<!-- Concorde default sound :

   - sounds are adjusted to the level of ATIS voice.
   - gear is supposed not heard from cockpit (well is more aft).
   - gear is suppposed not audible with engines.



   References :
   ==========
   see Concorde-real-sound.xml.


   Known problems :
   ==============
   - the number of sound is limited, because low hardware gets OpenAL errors in
   SGSoundSample::SGSoundSample() : AL_INVALID_VALUE error on alGenSources
   (Device->MaxNoOfSources reached ?).
   - "once" sound must be both internal/external, otherwise triggers once the view flag toggles.
-->
 
<PropertyList>

<!-- position x/y/z = width/height/depth, from pilot seat -->

 <fx>

<!-- ENGINE INTERNAL -->

  <engine>
   <name>engine internal</name>
   <path>Sounds/jet.wav</path>
   <mode>looped</mode>
   <condition>
    <and>
     <property>/sim/current-view/internal</property>
     <or>
      <property>/engines/engine[0]/running</property>
      <property>/engines/engine[1]/running</property>     
      <property>/engines/engine[2]/running</property>     
      <property>/engines/engine[3]/running</property>     
     </or>
     <less-than>
      <property>/systems/engines/engine[0]/bucket-deg</property>
      <value>40</value>
     </less-than>
     <less-than>
      <property>/systems/engines/engine[1]/bucket-deg</property>
      <value>40</value>
     </less-than>
     <less-than>
      <property>/systems/engines/engine[2]/bucket-deg</property>
      <value>40</value>
     </less-than>
     <less-than>
      <property>/systems/engines/engine[3]/bucket-deg</property>
      <value>40</value>
     </less-than>
    </and>
   </condition>
   <volume>
    <property>/engines/engine[0]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.09</factor>
    <offset>0.0</offset>
   </volume>
   <volume>
    <property>/engines/engine[1]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.09</factor>
    <offset>0.0</offset>
   </volume>    
   <volume>
    <property>/engines/engine[2]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.09</factor>
    <offset>0.0</offset>
   </volume>    
   <volume>
    <property>/engines/engine[3]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.09</factor>
    <offset>0.0</offset>
   </volume>    
  </engine>

