  <!-- Prediction filters                                              -->
  <!-- =============================================================== -->

  <predict-simple>
     <input>/velocities/mach</input>
     <output>/autopilot/internal/lookahead-5-sec-mach</output>
     <seconds>5.0</seconds>
     <filter-gain>0.0</filter-gain>
